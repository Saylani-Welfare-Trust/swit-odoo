<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="header_type_view_tree" model="ir.ui.view">
        <field name="name">header.type.view.tree</field>
        <field name="model">header.type</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="header_type_action" model="ir.actions.act_window">
        <field name="name">Header Type</field>
        <field name="res_model">header.type</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Let's create a new header type for import donation....
            </p>
        </field>
    </record>

    <menuitem
        id="donation_inflow_config_menu"
        name="Donation ( Inflows )"
        parent="bn_master_setup.master_setup_menu"
        sequence="2"/>

    <menuitem
        id="headet_type_menu"
        name="Header Type"
        action="header_type_action"
        parent="donation_inflow_config_menu"
        sequence="0"/>

</odoo>
