<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="key_view_tree" model="ir.ui.view">
        <field name="name">key.view.tree</field>
        <field name="model">key</field>
        <field name="arch" type="xml">
            <tree create="0">
                <field name="name" string="Key Tag" />
                <field name="box_no" />
                <field name="lock_no" />
                <field name="key_location_id" string="Key Gorup" />
                <field name="rider_id" string="Rider Name" />
                <field name="state" widget="badge" decoration-info="state == 'issued'" decoration-success="state == 'available'" />
            </tree>
        </field>
    </record>

    <record id="key_view_form" model="ir.ui.view">
        <field name="name">key.view.form</field>
        <field name="model">key</field>
        <field name="arch" type="xml">
            <form create="0">
                <header>
                    <button string="Available" name="action_available" type="object" class="oe_highlight" invisible="state in ['available', 'issued']" />

                    <field name="state" widget="statusbar" statusbar_visible="draft,available,issued"/>
                </header>

                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name"  string="Key Tag" class="oe_inline" readonly="1" /></h1>
                    </div>
                    <group>
                        <group name="key_col_1">
                            <field name="box_no" readonly="1" />
                            <field name="rider_id" string="Rider Name" options="{'no_create': True, 'no_edit': True, 'no_open': True}" readonly="1" />
                            <field name="key_location_id" string="Key Group" options="{'no_create': True, 'no_edit': True, 'no_open': True}" readonly="1" />
                        </group>
                        <group name="key_col_2">
                            <field name="lock_no" readonly="1" />
                            <field name="full_key_location" readonly="1" />
                        </group>
                    </group>
                    <notebook>
                        <page name="key_issuance" string="Key Issuance">
                            <field name="key_issuance_ids" readonly="1">
                                <tree>
                                    <field name="rider_id" string="Rider" />
                                    <field name="issued_on" />
                                    <field name="returned_on" />
                                    <field name="donation_amount" />
                                    <field name="state" widget="badge" decoration-info="state == 'returned'" decoration-success="state == 'issued'" decoration-danger="state == 'overdue'" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="key_action" model="ir.actions.act_window">
        <field name="name">Keys</field>
        <field name="res_model">key</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a new Key
            </p>
        </field>
    </record>

    <menuitem
        id="key_menu"
        name="Keys"
        action="key_action"
        parent="sm_donation_box.menu_donation_box"
        sequence="5"/>

</odoo>
