<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="key_bunch_view_tree" model="ir.ui.view">
        <field name="name">key.bunch.view.tree</field>
        <field name="model">key.bunch</field>
        <field name="arch" type="xml">
            <tree>
                <field name="rider_id" string="Rider" />
                <field name="name" string="Bunch" />
            </tree>
        </field>
    </record>

    <record id="key_bunch_view_form" model="ir.ui.view">
        <field name="name">key.bunch.view.form</field>
        <field name="model">key.bunch</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name" class="oe_inline" required="1" /></h1>
                    </div>
                    <group>
                        <group name="key_bunch_col_1">
                            <field name="rider_id" string="Rider" options="{'no_create': True, 'no_edit': True, 'no_open': True}" readonly="1" />
                            <field name="room_no" required="1" />
                            <field name="rack_no" required="1" />
                            <field name="slot_no" required="1" />
                            <field name="shelf_no" required="1" />
                        </group>
                        <group name="key_bunch_col_2">
                            <field name="city_id" string="City" domain="[('location_option_id.name', '=', 'City')]" options="{'no_create': True, 'no_edit': True, 'no_open': True}" required="1" />
                            <field name="zone_id" string="Zone" domain="[('parent_id', '=', city_id)]" options="{'no_create': True, 'no_edit': True, 'no_open': True}" required="1" />
                            <field name="sub_zone_id" string="Sub Zone" domain="[('analytic_account_id', '=', zone_id)]" options="{'no_create': True, 'no_edit': True, 'no_open': True}" required="1" />
                        </group>
                    </group>
                    <notebook>
                        <page name="key" string="Keys">
                            <field name="key_ids" readonly="1">
                                <tree>
                                    <field name="name" string="Key Tag" />
                                    <field name="lot_id" string="Box No." />
                                    <field name="lock_no" />
                                    <field name="state" widget="badge" decoration-info="state == 'issued'" decoration-success="state == 'available'" />     
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="key_bunch_action" model="ir.actions.act_window">
        <field name="name">Bunch</field>
        <field name="res_model">key.bunch</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Let's add a new Key Bunch
            </p>
        </field>
    </record>

    <menuitem
        id="key_bunch_menu"
        name="Bunch"
        action="key_bunch_action"
        parent="bn_key_management.key_root_menu"
        sequence="2"/>

</odoo>
