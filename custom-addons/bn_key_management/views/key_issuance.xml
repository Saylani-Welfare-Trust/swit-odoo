<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="key_issuance_view_tree" model="ir.ui.view">
        <field name="name">key.issuance.view.tree</field>
        <field name="model">key.issuance</field>
        <field name="arch" type="xml">
            <tree create="0" edit="0">
                <field name="key_id" string="Key" />
                <field name="rider_id" string="Rider" />
                <field name="issued_on" />
                <field name="returned_on" />
                <field name="state" widget="badge" decoration-info="state == 'returned'" decoration-success="state == 'issued'" decoration-danger="state == 'overdue'" />
            </tree>
        </field>
    </record>

    <record id="key_issuance_view_form" model="ir.ui.view">
        <field name="name">key.issuance.view.form</field>
        <field name="model">key.issuance</field>
        <field name="arch" type="xml">
            <form create="0" edit="0">
                <header>
                    <button string="Issued" name="action_issue" type="object" class="oe_highlight" invisible="state in ['issued', 'donation_receive','returned', 'overdue']" />
                    <button string="Return" name="action_return" type="object" class="oe_highlight" invisible="state in ['draft', 'issued', 'returned']" />
                    <button string="Overdue" name="action_overdue" type="object" class="oe_highlight" invisible="state in ['draft', 'issued', 'returned', 'overdue']" />
                    <button string="Print Receipt" name="%(bn_donation_box.donation_box_receipt_report_action)d" type="action" class="btn-secondary" icon="fa-print"  invisible="state in ['draft', 'issued', 'returned', 'overdue']"/>

                    <field name="state" widget="statusbar" statusbar_visible="draft,issued,donation_receive,returned,overdue"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="rider_id"/>
                        <h1><field name="rider_id" options="{'no_create': True, 'no_edit': True, 'no_open': True}" string="Rider" class="oe_inline" readonly="1" /></h1>
                    </div>

                    <group>
                        <group name="key_inssuance_col_1">
                            <field name="key_id" options="{'no_create': True, 'no_edit': True, 'no_open': True}" string="Key" readonly="1" />
                            <field name="returned_on" readonly="1" />
                        </group>
                        <group name="key_inssuance_col_2">
                            <field name="donation_amount" readonly="1" />
                            <field name="issued_on" readonly="1" />
                        </group>
                    </group>

                    <group name="donation_box_info" string="Box Information" invisible="key_id == False">
                        <group name="donation_box_info_col_1">
                            <field name="donation_box_request_id" string="Request No." options="{'no_create': True, 'no_edit': True, 'no_open': True}" readonly="1" />
                            <field name="shop_name" readonly="1" />
                            <field name="location" readonly="1" />
                            <field name="contact_person" readonly="1" />
                            <field name="installer_id" string="Installer" options="{'no_create': True, 'no_edit': True, 'no_open': True}" readonly="1" />
                            <field name="product_id" string="Box Category" options="{'no_create': True, 'no_edit': True, 'no_open': True}" readonly="1" />
                            <field name="lot_id" string="Box No." readonly="1" />
                        </group>
                        <group name="donation_box_info_col_2">
                            <field name="donor_id" string="Donor" options="{'no_create': True, 'no_edit': True, 'no_open': True}" readonly="1" />
                            <field name="contact_no" readonly="1" widget="phone" />
                            <field name="installation_date" readonly="1" />
                            <field name="installation_category_id" string="Installation Category" options="{'no_create': True, 'no_edit': True, 'no_open': True}" readonly="1" />
                            <field name="city_id" string="City" options="{'no_create': True, 'no_edit': True, 'no_open': True}" readonly="1" />
                            <field name="zone_id" string="Zone" options="{'no_create': True, 'no_edit': True, 'no_open': True}" readonly="1" />
                            <field name="sub_zone_id" string="Sub Zone" options="{'no_create': True, 'no_edit': True, 'no_open': True}" readonly="1" />
                            <field name="key_bunch_id" string="Bunch" options="{'no_create': True, 'no_edit': True, 'no_open': True}" readonly="1" />
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="key_issuance_action" model="ir.actions.act_window">
        <field name="name">Key Issuance</field>
        <field name="res_model">key.issuance</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Let's Issue a keys
            </p>
        </field>
    </record>

    <menuitem
        id="key_issuance_menu"
        name="Issuance"
        parent="bn_key_management.key_root_menu"
        sequence="1"/>

    <menuitem
        id="bulk_key_issuance_menu"
        name="Bulk Assign / Return"
        action="bn_key_management.bulk_key_issuance_action"
        parent="key_issuance_menu"
        sequence="1"/>
    
    <menuitem
        id="manual_key_issuance_menu"
        name="Manual Assign / Return"
        action="bn_key_management.manual_key_issuance_action"
        parent="key_issuance_menu"
        sequence="2"/>

    <menuitem
        id="key_issuance_history_menu"
        name="History"
        action="key_issuance_action"
        parent="key_issuance_menu"
        sequence="3"/>

</odoo>
