<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="donation_box_requests_form_view_inherit_sm_donation_box" model="ir.ui.view">
        <field name="name">donation.box.requests.sm.donation.box.view.form.inherit</field>
        <field name="model">donation.box.requests</field>
        <field name="inherit_id" ref="sm_donation_box.donation_box_requests_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='donation_box_key']" position="inside">
                <field name="key_ids" readonly="1">
                    <tree>
                        <field name="name" string="Key Tag" />
                        <field name="box_no" />
                        <field name="lock_no" />
                        <field name="full_key_location" />
                        <field name="state" widget="badge" decoration-info="state == 'issued'" decoration-success="state == 'available'" />
                    </tree>
                </field>
            </xpath>
        </field>
    </record>

</odoo>
