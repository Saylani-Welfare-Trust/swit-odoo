<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="manual_key_issuance_view_form" model="ir.ui.view">
        <field name="name">manual.key.issuance.view.form</field>
        <field name="model">manual.key.issuance</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="action_type" options="{'horizontal': True}" widget="radio" />
                    <group>
                        <group name="manual_key_issuance_col_1">
                            <field name="date" />
                            <field name="rider_ids" invisible="1" />
                            <field name="rider_id" domain="[('id', 'in', rider_ids)]" options="{'no_create': True, 'no_edit': True, 'no_open': True}" string="Rider" />
                        </group>
                        <group name="manual_key_issuance_col_2">
                            <field name="available_lot_ids" invisible="1" />
                            <field name="lot_id" string="Box No." options="{'no_create': True, 'no_edit': True, 'no_open': True}" />
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="action_issue" type="object" string="Issue" class="oe_highlight" invisible="action_type != 'issue'" />
                    <button name="action_return" type="object" string="Return" class="oe_highlight" invisible="action_type != 'return'" />
                    <button special="cancel" string="Cancel" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="manual_key_issuance_action" model="ir.actions.act_window">
        <field name="name">Manual Key Issuance</field>
        <field name="res_model">manual.key.issuance</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
