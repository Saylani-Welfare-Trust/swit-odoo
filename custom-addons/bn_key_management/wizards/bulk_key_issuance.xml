<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="bulk_key_issuance_view_form" model="ir.ui.view">
        <field name="name">bulk.key.issuance.view.form</field>
        <field name="model">bulk.key.issuance</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="type" options="{'horizontal': True}" widget="radio" />
                    <group>
                        <group name="bulk_key_issuance_col_1">
                            <field name="date" />
                            <field name="domain_rider_ids" invisible="1" />
                            <field name="domain_key_location_ids" invisible="1" />
                            <field name="rider_id" domain="[('id', 'in', domain_rider_ids)]" options="{'no_create': True, 'no_edit': True, 'no_open': True}" string="Rider" />
                        </group>
                        <group name="bulk_key_issuance_col_2">
                            <field name="key_location_ids" domain="[('id', 'in', domain_key_location_ids)]" widget="many2many_tags" options="{'no_create': True, 'no_edit': True, 'no_open': True}" string="Groups" />
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="action_issue" type="object" string="Issue"
                            class="oe_highlight" invisible="type != 'issue'" />
                    <button name="action_return" type="object" string="Return"
                            class="oe_highlight" invisible="type != 'return'" />
                    <button special="cancel" string="Cancel" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="bulk_key_issuance_action" model="ir.actions.act_window">
        <field name="name">Bulk Key Issuance</field>
        <field name="res_model">bulk.key.issuance</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
