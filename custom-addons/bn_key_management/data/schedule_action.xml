<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="ir_cron_scheduler_hit_action_issue_key" model="ir.cron">
        <field name="name">Issue Key | BN</field>
        <field name="model_id" ref="model_key_issuance"/>
        <field name="state">code</field>
        <field name="code">
records = env['key'].search([('state', '=', 'available')])

for rec in records:
    env['key.issuance'].create({
        'rider_id': rec.rider_id.id,
        'key_id': rec.id,
        'state': 'issued'
    })
        </field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field eval="False" name="doall"/>
    </record>
    
    <record id="ir_cron_scheduler_hit_action_overdue" model="ir.cron">
        <field name="name">Hit Overdue Action | BN</field>
        <field name="model_id" ref="model_key_issuance"/>
        <field name="state">code</field>
        <field name="code">
records = env['key.issuance'].search([])

for rec in records:
    if not rec.donation_amount:
        rec.action_overdue()
        </field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field eval="False" name="doall"/>
    </record>

</odoo>
