<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="bn_report_customization.report_payment_receipt_document" inherit_id="account.report_payment_receipt_document">
        <xpath expr="//div[@class='mb-4 mt-3']" position="replace">
            <div class="mb-4 mt-3">
                <div name="date" class="row">
                    <div class="col-6" t-if="o.date">
                        Payment Date: <span t-field="o.date">2023-01-01</span>
                    </div>
                </div>
                <div class="oe_structure"/>
                <div class="row">
                    <div class="col-6" t-if="o.partner_type">
                        <t t-if="o.partner_type == 'customer'">
                            Customer:
                        </t>
                        <t t-else="o.partner_type == 'supplier'">
                            Vendor:
                        </t><span t-field="o.partner_id" data-oe-demo="Marc Demo"/>
                    </div>
                    <div name="payment_method" t-if="values['display_payment_method'] and o.payment_method_id" class="col-6">
                        Payment Method: <span t-field="o.payment_method_id.name">Credit card</span>
                    </div>
                </div>
                <div class="oe_structure"/>
                <div class="row">
                    <div class="col-6" t-if="o.amount">
                        Payment Amount: <span t-field="o.amount" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}">50 USD</span>
                        </div>
                    <div class="col-6" t-if="o.ref">
                        Memo: <span t-field="o.ref">Sample Memo</span>
                        </div>
                </div>
                <div class="oe_structure"/>
                <div class="row">
                    <div class="col-6" t-if="o.bank_reference">
                        Bank Name: <span t-field="o.bank_reference" />
                        </div>
                    <div class="col-6" t-if="o.cheque_reference">
                        Cheque Number: <span t-field="o.cheque_reference" />
                        </div>
                </div>
            </div>
        </xpath>
    </template>

</odoo>
