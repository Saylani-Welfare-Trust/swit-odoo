<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <template id="direct_deposit_receipt_template_duplicate">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page" style="position: relative;">
                            <style>
                                h1 {
                                    font-size: 1.5em;
                                    margin: 3px;
                                }

                                .watermark {
                                    position: fixed; /* important: appears on every page */
                                    top: 50%;        /* vertical center */
                                    left: 50%;       /* horizontal center */
                                    transform: translate(-50%, -50%) rotate(-30deg); /* center + rotate */
                                    font-size: 150px;
                                    color: rgba(200, 200, 200, 0.15); /* lighter for printing */
                                    font-weight: bold;
                                    white-space: nowrap;
                                    pointer-events: none; /* don't block clicks */
                                    user-select: none;
                                    z-index: 0; /* behind all content */
                                }
                            </style>
                            
                            <div class="watermark" style="padding-top: 600px; padding-right: 250px;">DUPLICATE</div>
                            
                            <div class="mt-5 clearfix"/>

                            <div class="row mb-4">
                                <div class="col-6 text-start">
                                    <h1 class="text-transform" style="font-size: 1.5em; font-weight: bold; color: black; margin: 3px;">
                                        Provision Receipt (DHS)
                                    </h1>
                                </div>
                                
                                <div class="col-6 position-relative">
                                    <h1 class="text-transform" style="font-size: 1.5em; font-weight: bold; color: black; position: absolute; right: 5px; margin: 3px; white-space: nowrap;">
                                        Saylani Welfare International Trust
                                        <t t-if="o.env.user.employee_id.analytic_account_id">
                                            (<t t-esc="o.env.user.employee_id.analytic_account_id.code"/>)
                                        </t>
                                        
                                    </h1>
                                </div>

                            </div>
                            <div class="row mb-4">
                                <div class="col-6 pe-3">
                                    <t t-import="datetime"/>
                                    
                                    <div class="d-flex mb-1" style="font-size: 1.2em;">
                                        <div class="w-40 small" style="padding-right: 5px;">DHS #:</div>
                                        <div class="w-60 fw-semibold small">
                                            <t t-esc="o.name or '--'"/>
                                        </div>
                                    </div>
                                    
                                    <div class="d-flex mb-1" style="font-size: 1.2em;">
                                        <div class="w-40 small" style="padding-right: 5px;">Donor Name:</div>
                                        <div class="w-60 fw-semibold small">
                                            <t t-esc="o.donor_id.name or '-'"/>
                                        </div>
                                    </div>
                                    <div class="d-flex mb-2" style="font-size: 1.2em;">
                                        <div class="w-40 small" style="padding-right: 5px;">
                                            Transaction No.
                                        </div>
                                        <div class="w-60 fw-semibold small" style="border-bottom: 1px solid black;">
                                            <t t-esc="o.transaction_ref or ''"/>
                                        </div>
                                    </div>                                  
                                </div>
                            
                                <div class="col-6 ps-0">
                                    <div class="d-flex mb-1" style="font-size: 1.2em;">
                                        <div class="w-40 small" style="padding-right: 5px;">Date &amp; Time:</div>
                                        <div class="w-60 small">
                                            <t t-esc="o.create_date and o.create_date.strftime('%d-%m-%Y %H:%M:%S') or '--'"/>
                                        </div>
                                    </div>

                                    <div class="d-flex mb-1" style="font-size: 1.2em;">
                                        <div class="w-40 small" style="padding-right: 5px;"> Donor Contact No:</div>
                                        <div class="w-60 fw-semibold small">

                                            <t t-if="o.mobile">
                                                <t t-if="o.donor_id.country_code_id">
                                                    <t t-esc="o.donor_id.country_code_id.name"/> 
                                                </t>
                                                <t t-esc="o.mobile"/>
                                            </t>
                                        </div>
                                    </div>

                                    <div class="d-flex mb-1" style="font-size: 1.2em;">
                                        <div class="w-40 small" style="padding-right: 5px;">Amount:</div>
                                        <div class="w-60 fw-semibold small">
                                            <t t-esc="o.amount or '0.00'"/>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="mb-4">
                                <h4 class="fw-bold mb-3">Donation Home Service Details</h4>
                                <table class="table table-bordered border-2">
                                    <thead class="text-black">
                                        <tr>
                                            <th class="text-center fw-bold">Product</th>
                                            <th class="text-center fw-bold">Quantity</th>
                                            <th class="text-center fw-bold">Rate</th>
                                            <th class="text-center fw-bold">Amount Collected</th>
                                            <th class="text-center fw-bold">Remark</th> 
                                        </tr>
                                    </thead>
                                    <tbody>

                                        <t t-foreach="o.direct_deposit_line_ids" t-as="line" t-key="line.id">
                                            <tr class="bg-light">
                                                <td class="text-center py-2">
                                                    <t t-esc="line.product_id.name"/>
                                                </td>
                                                <td class="text-center py-2">
                                                    <t t-esc="line.quantity"/>
                                                </td>
                                                <td class="text-center py-2">
                                                    <t t-esc="line.product_id.list_price"/> 
                                                </td>
                                                <td class="text-center fw-bold py-2">
                                                    <t t-esc="line.amount"/>
                                                </td>
                                                <td class="text-center py-2">
                                                    <t t-esc="line.remarks or '-'"/>
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                            <div class="mb-4">
                                <div class="col-12" style="font-size: 1em;">              
                            
                                    <div class="d-flex mb-2">
                                        <div style="width: 200px;">Entered by:</div>
                                        <div style="border-bottom: 1px solid black; width: 200px;">
                                            <t t-esc="o.env.user.name"/>
                                        </div>
                                    </div>
                            
                                    <div class="d-flex mb-2">
                                        <div style="width: 200px;">Amount:</div>
                                        <div style="border-bottom: 1px solid black; width: 200px;">
                                            Rs <t t-esc="o.amount or '0.00'"/>
                                        </div>
                                    </div>
                            
                                </div>
                            </div>         
                        </div>
                    </t>
                </t>
            </t>
        </template>

        <record id="report_direct_deposit_duplicate" model="ir.actions.report">
            <field name="name">Direct Deposit Receipt Duplicate</field>
            <field name="model">direct.deposit</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">bn_direct_deposit.direct_deposit_receipt_template_duplicate</field>
            <field name="report_file">bn_direct_deposit.direct_deposit_receipt_template_duplicate</field>
            <field name="binding_model_id" ref="bn_direct_deposit.model_direct_deposit"/>
            <field name="binding_type">report</field>
            <field name="print_report_name">'Deposit Receipt - %s' % (object.name)</field>
        </record>
    </data>
    
</odoo>
