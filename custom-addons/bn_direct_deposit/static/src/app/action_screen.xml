<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="bn_direct_deposit.DDButton" t-inherit="bn_pos_custom_action.ActionScreen" t-inherit-mode="extension">
        <xpath expr="//main" position="inside">
            <button class="btn btn-secondary btn-lg flex-fill py-4 d-flex align-items-center justify-content-center" t-on-click="() => this.clickRecordDD()">
                <i class="fa fa-university me-1 text-success" role="img" aria-label="Direct Deposit" title="Direct Deposit" />
                Direct Deposit
            </button>
        </xpath>
    </t>

</templates>
