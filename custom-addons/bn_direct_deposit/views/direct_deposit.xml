<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="direct_deposit_view_tree" model="ir.ui.view">
        <field name="name">direct.deposit.view.tree</field>
        <field name="model">direct.deposit</field>
        <field name="arch" type="xml">
            <tree create="0" edit="0" delete="0">
                <field name="name" />
                <field name="state"  widget="badge" decoration-warning="state == 'draft'" decoration-info="state == 'not_clear'" decoration-success="state == 'clear'" />
            </tree>
        </field>
    </record>

    <record id="direct_deposit_view_form" model="ir.ui.view">
        <field name="name">direct.deposit.view.form</field>
        <field name="model">direct.deposit</field>
        <field name="arch" type="xml">
            <form create="0" edit="0" delete="0">
                <header>
                    <button string="Clear" name="action_clear" type="object" class="oe_highlight" invisible="state != 'draft'" />
                    <button string="Not Clear" name="action_not_clear" type="object" invisible="state != 'draft'"/>

                    <field name="state" widget="statusbar" statusbar_visible="draft, clear, not_clear" /> 
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_show_invoice" type="object" class="oe_stat_button" icon="fa-money" invisible="not move_id">
                            <field name="move_id" widget="statinfo"/>
                        </button>
                    </div>

                    <div class="oe_title">
                        <label for="name" string="Request No." />
                        <h1><field name="name" readonly="1" /></h1>
                    </div>

                    <group>
                        <group name="direct_deposit_col_1">
                            <field name="donor_id" string="Donor" options="{'no_create': True, 'no_edit': True, 'no_open': True}" readonly="1" />
                        </group>
                        <group name="direct_deposit_col_2">
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Items">
                            <field name="direct_deposit_line_ids" readonly="1">
                                <tree editable="bottom">
                                    <field name="currency_id" column_invisible="1"/>
                                    <field name="product_id" options="{'no_quick_create': True, 'no_create_edit': True}"/>
                                    <field name="quantity"/>
                                    <field name="amount" readonly="1"/>
                                </tree>
                            </field>
                            <group class="oe_subtotal_footer">
                                <field name="amount" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="direct_deposit_action" model="ir.actions.act_window">
        <field name="name">Bank transfers / Direct deposit</field>
        <field name="res_model">direct.deposit</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Waiting for a new record...
            </p>
        </field>
    </record>

    <menuitem
        id="direct_deposit_menu"
        name="Bank transfers / Direct deposit"
        action="direct_deposit_action"
        parent="bn_pos_cheque.treasury_menu"
        sequence="1"/>

</odoo>
