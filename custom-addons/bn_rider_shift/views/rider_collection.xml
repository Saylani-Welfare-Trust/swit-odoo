<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="rider_collection_view_form" model="ir.ui.view">
        <field name="name">rider.ollection.view.form</field>
        <field name="model">rider.collection</field>
        <field name="arch" type="xml">
            <form create="0" edit="0" delete="0">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="donation_not_collected, donation_collected, donation_submit, paid" />
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="rider_id" />
                        <h1><field name="rider_id" options="{'no_create': True, 'no_edit': True, 'no_open': True}" string="Rider" /></h1>
                    </div>
                    <group>
                        <group name="rider_collection_col_1">
                            <field name="date" />
                            <field name="day" />
                            <field name="submission_time" />
                            <field name="amount" />
                            <field name="counterfeit_notes" />
                            <field name="remarks" />
                        </group>
                        <group name="rider_collection_col_2">
                            <field name="shop_name" />
                            <field name="lot_id" options="{'no_create': True, 'no_edit': True, 'no_open': True}" string="Box No." />
                            <field name="box_location" string="Location" />
                            <field name="contact_person" string="Contact Person" />
                            <field name="contact_number" string="Contact Number" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="rider_collection_view_tree" model="ir.ui.view">
        <field name="name">rider.collection.view.tree</field>
        <field name="model">rider.collection</field>
        <field name="arch" type="xml">
            <tree create="0" edit="0" delete="0" >
                <field name="rider_id" string="Rider" />
                <field name="date" />
                <field name="day" />
                <field name="shop_name" />
                <field name="lot_id" string="Box No." />
                <field name="box_location" string="Location" />
                <field name="contact_person" string="Contact Person" />
                <field name="contact_number" string="Contact Number" />
                <field name="amount" />
                <field name="counterfeit_notes" />
                <field name="remarks" />
                <field name="submission_time" />
                <field name="state" widget="badge" decoration-info="state == 'donation_collected'" decoration-success="state in ['donation_submit', 'paid']" />
            </tree>
        </field>
    </record>

    <record id="rider_collection_action" model="ir.actions.act_window">
        <field name="name">Rider Collection</field>
        <field name="res_model">rider.collection</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                There is no rider collection...
            </p>
        </field>
    </record>
    
    <menuitem
        id="rider_collection_menu"
        name="Collection"
        action="rider_collection_action"
        groups="bn_rider_shift.rider_shift_collection_menu_group"
        parent="bn_rider_shift.rider_shift_root_menu"
        sequence="1"/>

</odoo>
