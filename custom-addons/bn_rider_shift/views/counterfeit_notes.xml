<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="counterfeit_notes_view_tree" model="ir.ui.view">
        <field name="name">counterfeit.notes.view.tree</field>
        <field name="model">counterfeit.notes</field>
        <field name="arch" type="xml">
            <tree create="0" edit="0" delete="0">
                <field name="rider_name" string="Rider" />
                <field name="lot_id" string="Box No." />
                <field name="submission_time" />
                <field name="amount" />
            </tree>
        </field>
    </record>

    <record id="counterfeit_notes_action" model="ir.actions.act_window">
        <field name="name">Counterfeit Notes</field>
        <field name="res_model">counterfeit.notes</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                There are no counterfeit notes recorded...
            </p>
        </field>
    </record>

    <menuitem
        id="counterfeit_notes_menu"
        name="Counterfeit Notes"
        action="counterfeit_notes_action"
        parent="bn_rider_shift.rider_shift_root_menu"
        sequence="2"/>

</odoo>
