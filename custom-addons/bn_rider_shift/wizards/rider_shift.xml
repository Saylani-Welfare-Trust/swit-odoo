<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="rider_shift_wizard_view_form" model="ir.ui.view">
        <field name="name">rider.shift.wizard.view.form</field>
        <field name="model">rider.shift.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="rider_shift_wizard_line_ids" readonly="1">
                        <tree>
                            <field name="rider_id" string="Rider" options="{'no_create': True, 'no_edit': True, 'no_open': True}" />
                            <field name="date" />
                            <field name="day" />
                            <field name="city_id" string="City" options="{'no_create': True, 'no_edit': True, 'no_open': True}" />
                            <field name="zone_id" string="Zone" options="{'no_create': True, 'no_edit': True, 'no_open': True}" />
                            <field name="sub_zone_id" string="Sub Zone" options="{'no_create': True, 'no_edit': True, 'no_open': True}" />
                            <field name="key_location_id" string="Key Location" options="{'no_create': True, 'no_edit': True, 'no_open': True}" />
                            <field name="box_location_name" string="Box Location" />
                            <field name="contact_person" string="Contact Person" />
                            <field name="contact_number" string="Contact Number" />
                        </tree>
                    </field>
                </sheet>
                <footer>
                    <button name="action_check_shift" type="object" string="Check Shift" class="oe_highlight"/>
                    <button special="cancel" string="Cancel" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>
    
    <record id="rider_shift_wizard_action" model="ir.actions.act_window">
        <field name="name">Rider Schedule</field>
        <field name="res_model">rider.shift.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem
        id="rider_shift_wizard_menu"
        name="Rider Schedule"
        action="rider_shift_wizard_action"
        parent="bn_rider_shift.rider_shift_root_menu"
        sequence="1"/>

</odoo>
