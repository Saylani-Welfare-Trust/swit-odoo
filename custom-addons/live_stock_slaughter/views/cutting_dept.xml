<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_live_stock_slaughter_cutting_tree" model="ir.ui.view">
        <field name="name">live_stock_slaughter_cutting.tree</field>
        <field name="model">live_stock_slaughter.cutting</field>
        <field name="arch" type="xml">
            <tree string="Live Stock Cutting Department">
                <field name="product_new"/>
                <field name="product_code"/>
                <field name="quantity"/>
                <field name="price"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_live_stock_slaughter_cutting_form" model="ir.ui.view">
        <field name="name">live_stock_slaughter_cutting.form</field>
        <field name="model">live_stock_slaughter.cutting</field>
        <field name="arch" type="xml">
            <form string="Live Stock Cutting Department">
                <header>

                    <field name="state" widget="statusbar" statusbar_visible="not_received,received"/>

                    <button name="action_confirm"
                            string="Confirm"
                            type="object"
                            class="btn-primary"
                            invisible="state != 'not_received'"/>

                    <button name="action_validate_picking"
                            string="Validate"
                            type="object"
                            class="btn-primary"
                            invisible="cutting_hide != False"/>


                </header>
                <sheet>
                    <group>
                        <field name="product_new"/>
                        <field name="product_code"/>
                        <field name="quantity"/>
                        <field name="price"/>
                        <field name="confirm_hide" invisible="1"/>
                        <field name="cutting_hide" invisible="1"/>
                        <field name="picking_id" invisible="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action to Open the Views -->
    <record id="action_live_stock_slaughter_cutting" model="ir.actions.act_window">
        <field name="name">Live Stock Slaughter</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">live_stock_slaughter.cutting</field>
        <field name="view_mode">tree,form</field>
    </record>


</odoo>
