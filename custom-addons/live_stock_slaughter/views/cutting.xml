<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_live_stock_slaughter_cutting_material_tree" model="ir.ui.view">
        <field name="name">live_stock_slaughter_cutting_material.tree</field>
        <field name="model">live_stock_slaughter.cutting_material</field>
        <field name="arch" type="xml">
            <tree string="Live Stock cutting_material Department">
                <field name="product_new"/>
                <field name="product_code"/>
                <field name="quantity"/>
                <field name="price"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_live_stock_slaughter_cutting_material_form" model="ir.ui.view">
        <field name="name">live_stock_slaughter_cutting_material.form</field>
        <field name="model">live_stock_slaughter.cutting_material</field>
        <field name="arch" type="xml">
            <form string="Live Stock cutting_material Department">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="not_received,received,in_progress,done"/>

                    <!-- Confirm Button (visible only when state is 'not_received') -->
                    <button name="action_confirm"
                            string="Confirm"
                            type="object"
                            class="btn-primary"
                            invisible="state != 'not_received'"/>

                    <!-- Start Cutting Button (visible only when state is 'received') -->
                    <button name="action_start"
                            string="Start Cutting"
                            type="object"
                            class="btn-primary"
                            invisible="state != 'received'"/>

                    <!-- End Cutting Button (visible only when state is 'in_progress') -->
                    <button name="action_end"
                            string="End Cutting"
                            type="object"
                            class="btn-primary"
                            invisible="state != 'in_progress'"/>

                    <button name="action_up_inventory"
                            string="Update Inventory"
                            type="object"
                            class="btn-primary"
                            invisible="hide_update != False"/>


                    <button name="action_to_goat_and_meat_dept"
                            string="Send to Goat &amp; Meat Department"
                            type="object"
                            class="btn-primary"
                            invisible="hide_goat != False"/>
                </header>
                <sheet>
                    <group>
                        <field name="product_new"/>
                        <field name="product_code"/>
                        <field name="quantity"/>
                        <field name="price"/>
                        <field name="confirm_hide" invisible="1"/>
                        <field name="hide_update" invisible="1"/>
                        <field name="hide_goat" invisible="1"/>
                        <field name="picking_id" invisible="1"/>
                        <field name="start_time" readonly="1"/>
                        <field name="end_time" readonly="1"/>
                        <field name="total_time" readonly="1"/>
                    </group>

                    <div style="margin-right: 22px; margin-left: 22px;">
                        <notebook>
                            <page string="Material Summary">

                                <field name="material_ids">
                                    <tree string="Material Summary" editable="bottom"
                                          widget="section_and_note_one2many">

                                        <field name="product" width="50%"/>
                                        <field name="quantity" width="50%"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </div>

                </sheet>


            </form>
        </field>
    </record>

    <!-- Action to Open the Views -->
    <record id="action_live_stock_slaughter_cutting_material" model="ir.actions.act_window">
        <field name="name">Live Stock Cutting</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">live_stock_slaughter.cutting_material</field>
        <field name="view_mode">tree,form</field>
    </record>


</odoo>
