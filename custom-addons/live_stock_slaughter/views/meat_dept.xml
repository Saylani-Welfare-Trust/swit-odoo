<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_swt_meat_dept_tree" model="ir.ui.view">
        <field name="name">swt_meat_dept.tree</field>
        <field name="model">swt.meat_dept</field>
        <field name="arch" type="xml">
            <tree string="Meat Department">
                <field name="product"/>
                <field name="product_code"/>
                <field name="quantity"/>
                <field name="price"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_swt_meat_dept_form" model="ir.ui.view">
        <field name="name">swt_meat_dept.form</field>
        <field name="model">swt.meat_dept</field>
        <field name="arch" type="xml">
            <form string="Meat Department">
                <sheet>
                    <group>
                        <field name="product"/>
                        <field name="product_code"/>
                        <field name="quantity"/>
                        <field name="price"/>
                        <field name="confirm_hide" invisible="1"/>
                        <field name="cutting_hide" invisible="1"/>
                        <field name="picking_id" invisible="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action to Open the Views -->
    <record id="action_swt_meat_dept" model="ir.actions.act_window">
        <field name="name">Live Stock Slaughter</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">swt.meat_dept</field>
        <field name="view_mode">tree,form</field>
    </record>


</odoo>
