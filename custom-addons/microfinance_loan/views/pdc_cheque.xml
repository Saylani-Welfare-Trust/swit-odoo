<odoo>
    <data>

        <record id="view_pdc_cheque_tree" model="ir.ui.view">
            <field name="name">view.pdc.cheque.tree</field>
            <field name="model">mfd.loan.request.line</field>
            <field name="arch" type="xml">
                <tree default_order="create_date desc" create="false" delete="false">
                    <field name="currency_id" column_invisible="True"/>
                    <field name="loan_request_id"/>
                    <field name="installment_id"/>
                    <field name="cheque_no"/>
                    <field name="mfd_bank_id" domain="[('is_active', '=', True)]" options="{'no_create': True, 'no_edit': True}"/>
                    <field name="cheque_amount"/>
                    <field name="cheque_date"/>
                    <field name="is_cheque_deposit"/>
                    <button name="deposit_cheque" string="Deposit Cheque" type="object" class="oe_highlight" invisible="is_cheque_deposit == True"/>
                </tree>
            </field>
        </record>


        <record id="view_search_pdc_cheque" model="ir.ui.view">
            <field name="name">view.search.pdc.cheque</field>
            <field name="model">mfd.loan.request.line</field>
            <field name="arch" type="xml">
                <search>
                    <field name="cheque_no"/>
                    <field name="loan_request_id"/>
                    <field name="installment_id"/>
                    <field name="cheque_date"/>
                    <filter name="today_cheques_filter" string="Today Cheques" domain="[('cheque_date', '=', context_today())]"/>
                </search>
            </field>
        </record>



        <record id="action_pdc_cheque" model="ir.actions.act_window">
            <field name="name">Post Dated Cheques</field>
            <field name="res_model">mfd.loan.request.line</field>
            <field name="view_mode">tree</field>
            <field name="domain">[('cheque_no','!=',False),('loan_state', '=', 'done')]</field>
            <field name="context">{'search_default_today_cheques_filter': 1}</field>
        </record>

    </data>
</odoo>