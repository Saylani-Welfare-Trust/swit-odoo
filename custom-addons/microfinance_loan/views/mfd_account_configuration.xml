<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="view_mfd_account_configuration" model="ir.ui.view">
            <field name="name">view.mfd.account.configuration</field>
            <field name="model">mfd.account.configuration</field>
            <field name="arch" type="xml">
                <tree editable="bottom" create="false" delete="false" default_order="create_date asc">
<!--                <tree editable="bottom" default_order="create_date asc">-->
                    <field name="name" readonly="True"/>
<!--                    <field name="unique_id" invisible="1"/>-->
                    <field name="account_id" options="{'no_create': True, 'no_edit': True}" />
                </tree>
            </field>
        </record>

        <record id="view_search_mfd_account_configuration" model="ir.ui.view">
            <field name="name">view.mfd.account.configuration</field>
            <field name="model">mfd.account.configuration</field>
            <field name="arch" type="xml">
                <search>
                    <group expand="0" string="Group By">
                        <filter name="group_mfd_account_configuration" string="MFD Account Configuration" domain="[]" context="{'group_by': 'account_type'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_mfd_account_configuration" model="ir.actions.act_window">
            <field name="name">Chart of Account Configuration</field>
            <field name="res_model">mfd.account.configuration</field>
            <field name="view_mode">tree</field>
            <field name="context">{'search_default_group_mfd_account_configuration': 1}</field>
        </record>

    </data>
</odoo>