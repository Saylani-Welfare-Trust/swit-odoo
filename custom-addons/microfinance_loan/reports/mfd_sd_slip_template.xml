<odoo>
    <data>

        <template id="mfd_sd_slip_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="mt-5 clearfix">
                            <div class="page" style="font-family: serif;">
                                <div class="mb-3">
                                    <h3 class="fw-bold">
                                        Provisional Security Deposit Receipt
<!--                                        <span style="color: #1571b9;">-->
<!--                                            <t t-esc="o.name"/>-->
<!--                                        </span>-->
                                    </h3>
                                </div>
                                <div>
                                    <div style="font-size:16px;">
                                        <div>
                                            <t t-import="datetime"/>
                                            <span class="fw-bold" style="width: 100px; display: inline-block; color: #99ca3c;">Date</span>
                                            <span >
                                                <t t-esc="datetime.datetime.now().strftime('%Y-%m-%d')"/>
                                            </span>
                                        </div>
                                        <div>
                                            <span class="fw-bold" style="width: 100px; display: inline-block; color: #99ca3c;">Loan ID</span>
                                            <span>
                                                <t t-esc="o.name"/>
                                            </span>
                                        </div>
                                        <div>
                                            <span class="fw-bold" style="width: 100px; display: inline-block; color: #99ca3c;">Customer</span>
                                            <span>
                                                <t t-esc="o.customer_id.name"/>
                                            </span>
                                        </div>
                                        <div class="mb-1" t-if="o.state in ['approved', 'waiting_delivery', 'done']">
                                            <span class="fw-bold" style="width: 150px; display: inline-block; color: #99ca3c;">Registration No.</span>
                                            <span>
                                                <t t-esc="o.customer_id.barcode"/>
                                            </span>
                                        </div>
                                        <div>
                                            <span class="fw-bold" style="width: 100px; display: inline-block; color: #99ca3c;">CNIC</span>
                                            <span>
                                                <t t-esc="o.cnic"/>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="mt-3">
                                    <table class="table fw-bold">
                                        <thead style="color: #99ca3c;">
                                            <td><span>Payment Type</span></td>
                                            <td style="text-align:right;"><span>Amount</span></td>
                                        </thead>
                                        <tbody>
                                            <td><span>Security Deposit</span></td>
                                            <td style="text-align:right;"><span t-field="o.security_deposit"/></td>
                                        </tbody>
                                    </table>
                                </div>
                                <div class="fw-bold" style="width:40%; float:right; ">
                                    <table class="table">
                                        <tr>
                                            <td style="color:white; background-color: #1571b9;">
                                                <span>Total</span>
                                                <span style="float:right;" t-field="o.security_deposit"/>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>

    </data>
</odoo>