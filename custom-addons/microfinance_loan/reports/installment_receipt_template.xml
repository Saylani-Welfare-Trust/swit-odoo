<odoo>
    <data>

        <template id="mfd_installment_receipt_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="mt-5 clearfix">
                            <div class="page" style="font-family: serif;">
                                <div class="mb-3">
                                    <h3 class="fw-bold">
                                        <t t-if="o.doc_type == 'sec_dep'">
                                            Security Deposit Receipt
                                        </t>
                                        <t t-else="">
                                            Installment Receipt
                                        </t>
                                        <span style="color: #1571b9;">
                                            <t t-esc="o.name"/>
                                        </span>
                                    </h3>
                                </div>
                                <div>
                                    <div style="font-size:16px;">
                                        <div>
                                            <span class="fw-bold" style="width: 100px; display: inline-block; color: #99ca3c;">Date</span>
                                            <span >
                                                <t t-esc="o.date"/>
                                            </span>
                                        </div>
                                        <div>
                                            <span class="fw-bold" style="width: 100px; display: inline-block; color: #99ca3c;">Loan ID</span>
                                            <span>
                                                <t t-esc="o.loan_id.name"/>
                                            </span>
                                        </div>
                                        <div>
                                            <span class="fw-bold" style="width: 100px; display: inline-block; color: #99ca3c;">Customer</span>
                                            <span>
                                                <t t-esc="o.partner_id.name"/>
                                            </span>
                                        </div>
                                        <div>
                                            <span class="fw-bold" style="width: 100px; display: inline-block; color: #99ca3c;">CNIC</span>
                                            <span>
                                                <t t-esc="o.cnic"/>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="mt-3">
                                    <table class="table fw-bold">
                                        <thead style="color: #99ca3c;">
                                             <t t-if="o.payment_type == 'cash'">
                                                <td><span>Payment Method</span></td>
                                                <td style="text-align:right;"><span>Amount</span></td>
                                             </t>
                                             <t t-else="">
                                                 <td><span>Payment Method</span></td>
                                                 <td><span>Bank Name</span></td>
                                                 <td><span>Cheque Number</span></td>
                                                 <td><span>Cheque Date</span></td>
                                                 <td style="text-align:right;"><span>Amount</span></td>
                                             </t>
                                        </thead>
                                        <tbody>
                                            <t t-if="o.payment_type == 'cash'">
                                                <td><span t-field="o.payment_type"/></td>
                                                <td style="text-align:right;"><span t-field="o.amount"/></td>
                                            </t>
                                            <t t-else="">
                                                <td><span t-field="o.payment_type"/></td>
                                                <td><span t-field="o.mfd_bank_id.name"/></td>
                                                <td><span t-field="o.cheque_number"/></td>
                                                <td><span t-field="o.cheque_date"/></td>
                                                <td style="text-align:right;"><span t-field="o.amount"/></td>
                                            </t>
                                        </tbody>
                                    </table>
                                </div>
                                <div class="fw-bold" style="width:40%; float:right; ">
                                    <table class="table">
                                        <tr>
                                            <td style="color:white; background-color: #1571b9;">
                                                <span>Total</span>
                                                <span style="float:right;" t-field="o.amount"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="color:white; background-color: black;">
                                                <span>Paid by</span>
                                                <span t-field="o.payment_type"/>
                                                <span>on</span>
                                                <span t-field="o.date"/>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>

    </data>
</odoo>