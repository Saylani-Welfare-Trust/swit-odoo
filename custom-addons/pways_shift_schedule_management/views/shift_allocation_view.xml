<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="shift_allocation_tree_view" model="ir.ui.view">
        <field name="name">shift.allocation.tree.view</field>
        <field name="model">shift.allocation</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="employee_id"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="shift_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="shift_allocation_form_view" model="ir.ui.view">
            <field name="name">shift.allocation.form.view</field>
            <field name="model">shift.allocation</field>
            <field name="arch" type="xml">
                <form string="Shift Allocation">
                    <header>
                        <button name="button_in_progress"  string="Process" type="object" class="oe_highlight" />
                        <button name="button_closed"  string="Close" type="object" class="oe_highlight" />
                        <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,cancel" readonly="1"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1><field name="name"/></h1>
                        </div>   
                        <group>
                            <group>
                                <field name="shift_id" required='1'/>
                                <field name="date_from" required='1'/>
                            </group>
                            <group>
                                <field name="shift_type_id" required='1'/>
                                <field name="date_to" required='1'/>
                            </group>
                            <group>
                                <field name="employee_id" required='1'/>
                            </group>
                            <group>
                                <field name="company_id" required='1'/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Workdays">
                                <field name="dayofallocation_ids">
                                    <tree editable="bottom">
                                        <field name="date"/>
                                        <field name="shift_id"/>
                                        <field name="employee_id" invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Weekends">
                                <field name="dayofweek_ids">
                                    <tree editable="bottom">
                                        <field name="week_id"/>
                                        <field name="date"/>
                                        <field name="shift_allocation_id" invisible="1"/>
                                        <field name="employee_id" invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                        <field name="description" placeholder="..............Add an internal note............."/>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
    </record>

    <record id="shift_allocation_view_calendar" model="ir.ui.view">
            <field name="name">shift.allocation.calendar.view</field>
            <field name="model">shift.allocation</field>
            <field eval="2" name="priority"/>
            <field name="arch" type="xml">
               <calendar date_start="date_from" date_stop="date_to" string="Shift Allocation View" mode="month" color="shift_id" event_limit="100">
                    <field name="employee_id"/>
                    <field name="shift_id" filters="1"/>
                    <field name="employee_id" filters="1"/>
                </calendar>
            </field>
        </record>
          
        <!-- Action -->
        <record id="action_shift_allocation" model="ir.actions.act_window">
                <field name="name">Employee Shift Allocations</field>
                <field name="res_model">shift.allocation</field>
                <field name="view_mode">tree,form,calendar</field>
        </record>

        <!-- parent="hr.menu_hr_root" -->
        <menuitem
            id="main_menu_shift_allocation"
            name="Shift Scheduling"
            parent="sm_donation_box.menu_donation_box"
            sequence="30"/>

        <menuitem
            id="menu_shift_allocation"
            name="Employee Shift Allocations"
            action="action_shift_allocation"
            parent="pways_shift_schedule_management.main_menu_shift_allocation"
            groups="hr.group_hr_manager,hr.group_hr_user"
            sequence="10"/>         
</odoo>
