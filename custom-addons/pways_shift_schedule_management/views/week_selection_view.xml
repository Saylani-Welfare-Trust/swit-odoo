<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="week_selection_tree_view" model="ir.ui.view">
        <field name="name">week.selection.tree.view</field>
        <field name="model">week.selection</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
            </tree>
        </field>
    </record>

    <record id="week_selection_from_view" model="ir.ui.view">
        <field name="name">week.selection.form.view</field>
        <field name="model">week.selection</field>
        <field name="arch" type="xml">
            <form string="Week Details">
                <sheet>
                    <group>
                        <group>
                            <field name="name" required='1'/>
                        </group>
                        <group>
                            <field name="code" required='1'/> 
                        </group> 
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_view_of_hr_week_selection" model="ir.actions.act_window">
        <field name="name">Employee Weekdays</field>
        <field name="res_model">week.selection</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="menu_hr_weekoff_selection"
        name="Weekdays"
        action="action_view_of_hr_week_selection"
        parent="pways_shift_schedule_management.menu_config_shift_allocation"
        sequence="7"
        groups="hr.group_hr_manager,hr.group_hr_user"
        />
</odoo>
