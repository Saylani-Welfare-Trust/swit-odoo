<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="hr_shift_request_tree_view" model="ir.ui.view">
        <field name="name">hr.shift.request.tree.view</field>
        <field name="model">hr.shift.request</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="employee_id"/>
                <field name="allocation_id"/>
                <field name="changed_day"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    
    <record id="hr_shift_form_request" model="ir.ui.view">
        <field name="name">hr.shift.requestt.form.view</field>
        <field name="model">hr.shift.request</field>
        <field name="arch" type="xml">
            <form string="Shift Change Request">
                <header>
                    <button name="shift_request"  string="Confirm" type="object" class="oe_highlight" groups=" hr.group_hr_user" />
                    <button name="shift_approval"  string="Approval" type="object" class="oe_highlight" groups="hr.group_hr_manager" />
                    <button name="shift_cancel"  string="Cancel" type="object" class="oe_highlight" />
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>     
                    <group>
                        <group>
                            <field name="employee_id" required="1"/>
                            <field name="allocation_id" domain="[('employee_id', '=', employee_id)]" required="1"/>
                            <field name="company_id"/>
                        </group>
                        <group>
                            <field name="changed_day" required="1"/>
                            <field name="shift_id" required="1"/>
                            <field name="user_id"/>
                        </group>
                        <group colspan='12'>
                            <field name="week_off_ids_vr" invisible="1"/>
                            <field name="week_off_ids" domain="[('id', 'in', week_off_ids_vr)]" widget="many2many_tags" invisible="changed_day == 'working_days'" required="changed_day == 'weekoff'" />
                            <field name="working_day_ids_vr" invisible="1"/>
                            <field name="working_day_ids" domain="[('id', 'in', working_day_ids_vr)]" widget="many2many_tags" invisible="changed_day == 'weekoff'" required="changed_day == 'working_days'" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Notes">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_view_of_hr_shift_request" model="ir.actions.act_window">
        <field name="name">Shift Change Request</field>
        <field name="res_model">hr.shift.request</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="menu_hr_shift_request"
        name="Shift Change Request"
        action="action_view_of_hr_shift_request"
        parent="pways_shift_schedule_management.main_menu_shift_allocation"
        sequence="11"
        />
</odoo>
