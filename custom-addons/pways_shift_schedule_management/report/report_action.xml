<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="paperformat_employee_shift" model="report.paperformat">
            <field name="name">Employee Shift A4</field>
            <field name="default" eval="True" />
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">10</field>
            <field name="margin_bottom">20</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">15</field>
            <field name="dpi">90</field>
        </record>
        <record id="action_report_employee_shift_details" model="ir.actions.report">
            <field name="name">Employee Shift Details</field>
            <field name="model">shift.allocation</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">pways_shift_schedule_management.report_employee_shift</field>
            <field name="report_file">pways_shift_schedule_management.report_employee_shift</field>
            <field name="print_report_name">'Employee Shift Details - %s' % (object.name)</field>
            <field name="binding_model_id" ref="model_shift_allocation"/>
            <field name="paperformat_id" ref="pways_shift_schedule_management.paperformat_employee_shift"/>
            <field name="binding_type">report</field>
        </record>
    </data>
</odoo>