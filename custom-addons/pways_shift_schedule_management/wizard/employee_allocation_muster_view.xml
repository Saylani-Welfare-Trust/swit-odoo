<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="employee_allocation_muster_from_view" model="ir.ui.view">
        <field name="name">employee.allocation.muster</field>
        <field name="model">employee.allocation.muster</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="date_from" required='1'/>
                        </group>
                        <group>
                            <field name="date_to" required='1'/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button string="Print" name="action_allocation_xls_report" type="object"  class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_employee_allocation_muster_from_view" model="ir.actions.act_window">
        <field name="name">Employee Shift Roster Report</field>
        <field name="res_model">employee.allocation.muster</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="employee_allocation_muster_from_view"/>
        <field name="target">new</field>
    </record>
    <menuitem 
        id="select_employee_allocation_muster_wizard" 
        action="action_employee_allocation_muster_from_view" 
        parent="pways_shift_schedule_management.main_menu_shift_allocation"
        name="Shift Roster Reports"
        groups="hr.group_hr_manager,hr.group_hr_user"
        sequence="100"/>
</odoo>
