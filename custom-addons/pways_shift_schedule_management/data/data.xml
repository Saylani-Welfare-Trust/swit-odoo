<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data noupdate="1">
        
		<record id="sequence_hr_accident" model="ir.sequence">
			<field name="name">Seq</field>
			<field name="code">hr.shift.allocation</field>	
			<field name="padding">3</field>
		    <field name="number_increment">1</field>
			<field name="prefix">ESA/</field>
		</record>
        
        <record id="sequence_hr_request" model="ir.sequence">
            <field name="name">Seq</field>
            <field name="code">hr.shift.request</field>  
            <field name="padding">3</field>
            <field name="number_increment">1</field>
            <field name="prefix">SCR/</field>
        </record>

		<record id="employee_shift_type_morning" model="shift.type">
            <field name="name">Morning</field>
        </record>
        <record id="employee_shift_type_eveing" model="shift.type">
            <field name="name">Evening</field>
        </record>
        <record id="employee_shift_type_night" model="shift.type">
            <field name="name">Night</field>
        </record>

        <record id="week_monday" model="week.week">
            <field name="name">Monday</field>
            <field name="code">0</field>
        </record>
        <record id="week_tuesday" model="week.week">
            <field name="name">Tuesday</field>
            <field name="code">1</field>
        </record>
        <record id="week_wednesday" model="week.week">
            <field name="name">Wednesday</field>
            <field name="code">2</field>
        </record>
        <record id="week_thursday" model="week.week">
            <field name="name">Thursday</field>
            <field name="code">3</field>
        </record>
        <record id="week_friday" model="week.week">
            <field name="name">Friday</field>
            <field name="code">4</field>
        </record>
        <record id="week_saturday" model="week.week">
            <field name="name">Saturday</field>
            <field name="code">5</field>
        </record>
        <record id="week_sunday" model="week.week">
            <field name="name">Sunday</field>
            <field name="code">6</field>
        </record>
	</data>
</odoo>
