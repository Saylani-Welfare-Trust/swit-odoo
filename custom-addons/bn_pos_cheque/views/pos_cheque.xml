<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="pos_cheque_view_tree" model="ir.ui.view">
        <field name="name">pos.cheque.view.tree</field>
        <field name="model">pos.cheque</field>
        <field name="arch" type="xml">
            <tree create="0" edit="0" delete="0">
                <field name="donor_id" />
                <field name="analytic_account_id" />
                <field name="amount" />
                <field name="analytic_account_id" string="Branch" />
                <field name="create_uid" />
                <field name="bank_name" />
                <field name="name" string="Cheque No." />
                <field name="date" />
                <field name="bounce_count" />
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-warning="state == 'bounce'" decoration-success="state == 'clear'" decoration-danger="state == 'cancel'" />

                <button string="Show Linked POS Order" name="action_show_pos_order" type="object" class="oe_highlight"/>

                <button string="Clear" name="action_clear" type="object" class="oe_highlight" invisible="state in ['cancel', 'clear'] or bounce_count &gt;= 4" />
                <button string="Bounce" name="action_bounce" type="object" invisible="state == 'clear' or bounce_count > 3" />
                <!-- <button string="Cancel" name="action_cancel" type="object" class="btn-danger"/> -->
            </tree>
        </field>
    </record>

    <record id="pos_cheque_action" model="ir.actions.act_window">
        <field name="name">Cheque</field>
        <field name="res_model">pos.cheque</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Waiting for new pos cheque/qr code....
            </p>
        </field>
    </record>

    <menuitem
        id="treasury_menu"
        name="Treasury"
        parent="account.menu_finance"
        sequence="6"/>
    
    <menuitem
        id="pos_cheque_menu"
        name="POS Cheque"
        action="pos_cheque_action"
        groups="pos_cheque_menu_group"
        parent="bn_pos_cheque.treasury_menu"
        sequence="0"/>

</odoo>
