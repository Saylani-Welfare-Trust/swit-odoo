<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <record id="view_welfare_monthly_req_tree" model="ir.ui.view">
            <field name="name">welfare.monthly.req.tree</field>
            <field name="model">welfare.monthly.req</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="month"/>
                    <field name="year"/>

                    <field name="center_id"/>
                </tree>
            </field>
        </record>


        <record id="view_welfare_monthly_req_form" model="ir.ui.view">
            <field name="name">welfare.monthly.req.form</field>
            <field name="model">welfare.monthly.req</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="inprocess,confirmed"/>


                        <!--                        <button name="action_confirm" type="object" string="Confirm" class="oe_highlight"-->
                        <!--                                invisible="state != 'inprocess'"/>-->

                        <button name="action_create_purchase_request" type="object" string="Create Purchase Request"
                                class="oe_highlight"
                        />

                        <button name="action_execute" type="object" string="Execute Daily Requirement"
                                class="oe_highlight"
                        />

                    </header>
                    <sheet>
                        <group>
                            <field name="month"/>
                            <field name="year"/>
                            <field name="products" widget="many2many_tags"/>
                            <field name="center_id"/>
                        </group>
                        <field name="line_ids">
                            <tree editable="bottom">
                                <field name="date"/>
                                <!--                                <field name="donee"/>-->
                                <!--                                <field name="name"/>-->
                                <!--                                <field name="category_id"/>-->
                                <!--                                <field name="disbursement_type_ids" widget="many2many_tags"/>-->
                                <field name="product"/>
                                <field name="received_qty" force_save="1"/>
                                <field name="expected_qty" force_save="1"/>
                                <!--                            <field name="quantity"/>-->
                            </tree>
                        </field>
                    </sheet>
                </form>
            </field>
        </record>


        <record model="ir.actions.act_window" id="action_welfare_monthly_req">
            <field name="name">Monthly Requirements</field>
            <field name="res_model">welfare.monthly.req</field>
            <field name="view_mode">tree,form</field>
        </record>


    </data>
</odoo>