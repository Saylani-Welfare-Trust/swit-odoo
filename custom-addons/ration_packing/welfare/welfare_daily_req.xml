<odoo>

    <record id="view_welfare_daily_req_tree" model="ir.ui.view">
        <field name="name">welfare.daily.req.tree</field>
        <field name="model">welfare.daily.req</field>
        <field name="arch" type="xml">
            <tree>
                <field name="date"/>
                <field name="center_id"/>
            </tree>
        </field>
    </record>
    <record id="view_welfare_daily_req_form" model="ir.ui.view">
        <field name="model">welfare.daily.req</field>
        <field name="arch" type="xml">
            <form string="Daily Requirements">
                <header>

                    <field name="state" widget="statusbar" statusbar_visible="draft,sent_to_distribution"/>


                    <button name="action_send_to_distribution" type="object" invisible="state != 'draft'"
                            string="Send to Distribution" class="oe_highlight"/>
                </header>
                <sheet>
                    <group>
                        <field name="date"/>
                        <field name="center_id"/>
                    </group>
                    <field name="line_ids">
                        <tree editable="bottom">
<!--                            <field name="date"/>-->
<!--                            <field name="donee"/>-->
<!--                            <field name="name"/>-->
<!--                            <field name="category_id"/>-->
<!--                            <field name="disbursement_type_ids" widget="many2many_tags"/>-->
                            <field name="product"/>
                            <field name="quantity"/>
                            <!--                            <field name="quantity"/>-->
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_welfare_daily_req" model="ir.actions.act_window">
        <field name="name">Daily Requirements</field>
        <field name="res_model">welfare.daily.req</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
