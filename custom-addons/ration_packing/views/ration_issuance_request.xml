<odoo>
    <!-- Issuance Request Form -->
    <record id="view_issuance_req_form" model="ir.ui.view">
        <field name="model">ration.issuance.req</field>
        <field name="arch" type="xml">
            <form string="Issuance Request">
                <header>
                    <field name="state" readonly="1"/>
                    <button name="action_dispatch_to_customer" type="object" string="Dispatch to Customer"
                            invisible="state != 'draft'"
                            class="oe_highlight"
                    />

                    <!--          <button name="action_send_to_dispatch" type="object" string="Send to Dispatch" invisible="state != 'draft'"-->
                    <!--                  class="oe_highlight"-->
                    <!--                  />-->
                </header>

                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="date"/>
                        <field name="center_id"/>
                    </group>

                    <field name="line_ids">
                        <tree editable="bottom">
                            <field name="donee"/>
                            <field name="name"/>
<!--                            <field name="category_id"/>-->
<!--                            <field name="disbursement_type_ids" widget="many2many_tags"/>-->
                            <field name="product" widget="many2many_tags"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Issuance Request Tree -->
    <record id="view_issuance_req_tree" model="ir.ui.view">
        <field name="model">ration.issuance.req</field>
        <field name="arch" type="xml">
            <tree string="Issuance Requests">
                <field name="name"/>
                <field name="date"/>
                <field name="center_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Action & Menu -->
    <record id="action_issuance_req" model="ir.actions.act_window">
        <field name="name">Issuance Requests</field>
        <field name="res_model">ration.issuance.req</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
