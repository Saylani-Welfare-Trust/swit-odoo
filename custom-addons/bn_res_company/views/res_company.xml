<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="base_view_company_form_inherit_bn_res_company" model="ir.ui.view">
        <field name="name">base.view.company.form.inherit.bn.res.company</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='branches']" position="after">
                <page name="pos" string="POS">
                    <group name="pos">
                        <field name="dn_image" filename="dn_name" widget="image" class="oe_avatar" />
                    </group>
                </page>
                <page name="donation_api_auth" string="Donation API Auth">
                    <group name="donation_api_auth">
                        <group name="donation_api_auth_col_1">
                            <field name="url" />
                            <field name="client_secret" password="True" />
                        </group>
                        <group name="donation_api_auth_col_2">
                            <field name="client_id" password="True" />
                            <field name="difference_account_prefix" />
                        </group>
                    </group>
                </page>
                <page name="welfare_api_auth_endpoints" string="Welfare API Auth / Endpoints">
                    <group>
                        <group name="welfare_api_auth_endpoints_col_1" string="Auth">
                            <field name="welfare_url" />
                            <field name="odoo_auth_key" password="True" />
                            <field name="welfare_instituiton_url" />
                            <field name="odoo_auth_institution_key" password="True" />
                        </group>
                        <group name="welfare_api_auth_endpoints_col_2" string="Endpoints">
                            <field name="search_endpoint" />
                            <field name="check_donee_endpoint" />
                            <field name="create_donee_endpoint" />
                            <field name="mark_application_endpoint" />
                            <field name="welfare_institution_endpoint" />
                        </group>
                    </group>
                </page>
            </xpath>
            <xpath expr="//page[@name='general_info']/group/group[2]" position="inside">
                <field name="max_file_size"/>
            </xpath>
        </field>
    </record>

</odoo>
