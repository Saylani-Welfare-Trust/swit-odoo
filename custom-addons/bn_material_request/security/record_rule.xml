<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="material_request_rule" model="ir.rule">
        <field name="name">Material Request</field>
        <field name="model_id" ref="bn_material_request.model_material_request"/>
        <field name="domain_force">['|', ('user_id', '=', user.id), ('department_id.manager_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('bn_material_request.menu_group_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

</odoo>
