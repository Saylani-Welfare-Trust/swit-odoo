        <record id="view_vendor_purchase_wizard_form" model="ir.ui.view">
            <field name="name">vendor.purchase.wizard.form</field>
            <field name="model">vendor.purchase.wizard</field>
            <field name="arch" type="xml">
                <form string="Vendor Comparison">
                    <sheet>
                        <group>
                            <field name="request_id" readonly="1"/>
                            <field name="purchase_order_ids" widget="many2many_tags"/>
                        </group>
                        <field name="line_ids" nolabel="1">
                            <tree editable="bottom">
                                <field name="selected"/>
                                <field name="product_id"/>

                                <field name="vendor_id"/>
                                <field name="product_uom"/>
                                <field name="quantity"/>
                                <field name="vendor_unit_price"/>
                                <field name="total_cost"/>
                                <field name="vendor_lead_time"/>
                            </tree>
                        </field>


                        <!-- The productâ€‘vendor summary table -->
                        <!--                        <label string="Summary Matrix" colspan="4" class="mt-4"/>-->
                        <field name="summary_line_ids" nolabel="1">
                            <tree editable="false">
                                <field name="product_id"/>
                                <field name="vendor_id"/>
                                <!--                                <field name="unit_price"/>-->
                                <!--                                <field name="quantity"/>-->
                                <!--                                <field name="total_cost"/>-->
                                <!--                                <field name="lead_time"/>-->
                                <field name="is_best_cost"/>
                                <field name="is_best_lead"/>
                                <!--                                <field name="is_dominated"/>-->
                            </tree>
                        </field>
                        <!--                        <group string="Recommendation">-->
                        <!--                            <field name="summary" nolabel="1" readonly="1"-->
                        <!--                                   widget="textarea" colspan="4"/>-->
                        <!--                        </group>-->
                        <footer>
                            <button string="Confirm Selection" type="object" name="action_confirm_purchase"
                                    class="btn-primary"/>
                            <button string="Cancel" class="btn-secondary" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>


        <!-- Wizard Action -->
        <record id="action_vendor_purchase_wizard" model="ir.actions.act_window">
            <field name="name">Vendor Purchase Wizard</field>
            <field name="res_model">vendor.purchase.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context">{'default_purchase_order_ids': active_ids}</field>

        </record>

        <menuitem id="menu_custom_purchase_req_root" name="Purchase Request"/>

        <record model="ir.ui.view" id="view_custom_purchase_requesr_tree">
            <field name="name">custom.purchase.request.tree</field>
            <field name="model">custom.purchase.request</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="purchase_order_no"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="view_custom_purchase_requesr_form">
            <field name="name">custom.purchase.request.form</field>
            <field name="model">custom.purchase.request</field>
            <field name="arch" type="xml">
                <form>
                    <header>

                        <button name="action_open_vendor_wizard"
                                string="Create Purchase Orders"
                                type="object"
                                class="btn-primary"/>

                        <button name="action_send_email_to_vendors"
                                string="Send Email to Vendors"
                                type="object"
                                class="btn-secondary"/>
                        <!--                        <field name="state" widget="statusbar" statusbar_visible="draft,approved"/>-->
                    </header>
                    <sheet>
                        <group>
                            <field name="purchase_order_no" readonly="1"/>
                            <field name="currency"/>
                            <field name="expected_arrival"/>
                        </group>


                        <group>
                            <field name="order_deadline"/>
                            <field name="deliver_to"/>
                        </group>
                        <notebook>
                            <page string="Lines">
                                <field name="line_ids">
                                    <tree editable="bottom">
                                        <field name="product"/>
                                        <field name="name"/>
                                        <field name="product_qty"/>
                                        <field name="vendor" widget="many2many_tags"/>
                                        <field name="product_uom"/>
                                        <field name="price_unit"/>
                                        <field name="taxes_id"/>
                                        <field name="tax_excl"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_cust_pur_req">
            <field name="name">Purchase Requests</field>
            <field name="res_model">custom.purchase.request</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_custom_purchase_req_root" name="Purchase Request"/>
        <menuitem id="menu_custom_pur_req"
                  name="Purchase Req" parent="menu_custom_purchase_req_root"
                  action="action_cust_pur_req"/>

    </data>
</odoo>