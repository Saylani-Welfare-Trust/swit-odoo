<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="base_view_company_form_inherit_bn_pos_custom_action" model="ir.ui.view">
        <field name="name">base.view.company.form.inherit.bn.pos.custom.action</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='branches']" position="after">
                <page name="product_configuration" string="Product Configuration">
                    <group string="Product Configuraiton">
                        <group name="product_configuration_col_1">
                            <field name="donation_box_product" />
                            <field name="donation_home_service_product" />
                            <field name="medical_equipment_security_depsoit_product" />
                        </group>
                        <group name="product_configuration_col_1">
                            <field name="microfinance_security_depsoit_product" />
                            <field name="microfinance_intallement_product" />
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
