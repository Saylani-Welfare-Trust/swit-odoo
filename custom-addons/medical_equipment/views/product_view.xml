<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="inherit_product_template_form_view_medical_equipment" model="ir.ui.view">
        <field name="name">product.product.view.form.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='sale_ok']" position="after">
           <span class="d-inline-flex">
                            
                            <field name="is_medical_equipment"/>
            
                            <label for="is_medical_equipment"/>
                        </span>
                
            </xpath>
        </field>
    </record>

</odoo>
