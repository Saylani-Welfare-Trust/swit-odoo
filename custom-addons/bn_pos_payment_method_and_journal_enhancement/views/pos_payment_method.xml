<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="point_of_sale_pos_payment_method_view_form_inherit_bn_pos_payment_method_and_journal_enhancement" model="ir.ui.view">
        <field name="name">point.of.sale.pos.payment.method.view.form.inherit</field>
        <field name="model">pos.payment.method</field>
        <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="popup" />
                <field name="branch_ids" string="Branchs" widget="many2many_tags" options="{'no_create': True, 'no_edit': True}" domain="[('parent_id', '!=', False)]" />
            </xpath>
        </field>
    </record>

</odoo>
