<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="pos_donation_receipt_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="order">
                    <!-- Set Payment Method -->
                    <t t-set="payment_method" t-value="order.payment_ids and order.payment_ids[0].payment_method_id.name or ''"/>

                    <div class="page">
                        <style>
                            h1 {
                                font-size: 1.5em;
                                margin: 3px;
                            }

                            .watermark {
                                position: fixed; /* appears on every page */
                                top: 32%;
                                left: 50%;
                                transform: translate(-50%, -50%) rotate(-30deg);
                                font-size: 110px;
                                color: rgba(200, 200, 200, 0.15);
                                font-weight: bold;
                                white-space: nowrap;
                                pointer-events: none;
                                user-select: none;
                                z-index: 0;
                            }

                            .label-field {
                                width: 40%;
                                font-weight: normal;
                                padding-right: 5px;
                            }

                            .value-field {
                                width: 60%;
                                font-weight: 500;
                            }

                            table {
                                width: 100%;
                                border-collapse: collapse;
                                margin-top: 10px;
                            }

                            table, th, td {
                                border: 1px solid #000;
                            }

                            th, td {
                                padding: 5px;
                                text-align: center;
                                font-size: 12px;
                            }

                            tfoot th, tfoot td {
                                font-weight: bold;
                                border-top: 2px solid #000 !important;
                            }
                        </style>

                        <!-- Watermark -->
                        <div class="watermark">DUPLICATE</div>

                        <!-- Header -->
                        <div style="display:flex; justify-content:space-between; margin-bottom: 10px;">
                            <div>
                                <h1 class="text-transform" style="font-size: 12px; font-weight:bold;">DONATION RECEIPT</h1>

                            </div>
                            <div style="text-align:right;">
                                <h1 class="text-transform" style="font-size: 12px;">
                                    SAYLANI WELFARE INTERNATIONAL TRUST
                                    <t t-if="order.user_id.branch_name">
                                        (<t t-esc="order.user_id.branch_name"/>)
                                    </t>
                                </h1>
                            </div>
                        </div>

                        <!-- Donor Info -->
                        <div style="display:flex; justify-content:space-between; margin-bottom:10px;">
                            <div style="width:50%;">
                                

                                <div style="display: flex; margin-bottom: 5px; font-size: 12px;">
                                    <div class="label-field">DN #:</div>
                                    <div class="value-field">
                                        <t t-set="city_code" t-value="order.user_id.branch_code or 'UNK'"/>
                                        <t t-set="branch_code" t-value="order.company_id.name[:3].upper() or 'UNK'"/>
                                        <t t-set="current_year" t-value="order.date_order and order.date_order.year or ''"/>
                                        <t t-set="random_no" t-value="order.name and order.name[-4:] or '0000'"/>
                                        <t t-esc="city_code"/>-<t t-esc="branch_code"/>-<t t-esc="current_year"/>-<t t-esc="random_no"/>
                                    </div>
                                </div>



                                
                                <div style="display:flex; margin-bottom:5px;font-size: 12px;">
                                    <div class="label-field">Donor Name:</div>
                                    <div class="value-field"><t t-esc="order.partner_id.name or '-'"/></div>
                                </div>
                                <div style="display:flex; margin-bottom:5px; font-size: 12px;">
                                    <div class="label-field">Payment Method:</div>
                                    <div class="value-field"><t t-esc="payment_method"/></div>
                                </div>

                                <t t-if="payment_method == 'Cheque'">
                                    <div style="display:flex; margin-bottom:5px; font-size: 12px;">
                                        <div class="label-field">Bank Name:</div>
                                        <div class="value-field">
                                            <t t-esc="order.bank_name or '-'"/>
                                        </div>
                                    </div> 
                                </t>

                                <t t-if="payment_method == 'Credit Card'">
                                    <div style="display:flex; margin-bottom:5px; font-size: 12px;">
                                        <div class="label-field">Reference No:</div>
                                        <div class="value-field">
                                            <t t-esc="order.name or '-'"/>
                                        </div>
                                    </div>
                                </t>
                            </div>

                            <div style="width:50%;">
                                <div style="display:flex; margin-bottom:5px; font-size: 12px;">
                                    <div class="label-field">Date &amp; Time:</div>
                                    <div class="value-field">
                                        <t t-esc="order.create_date.strftime('%d-%m-%Y %H:%M:%S') or '--'"/>
                                    </div>
                                </div>
                                <div style="display:flex; margin-bottom:5px; font-size: 12px;">
                                    <div class="label-field">Contact No:</div>
                                    <div class="value-field">
                                        <t t-if="order.partner_id.country_id">
                                            <t t-esc="order.partner_id.country_id.name"/> 
                                        </t>
                                        <t t-esc="order.partner_id.mobile or order.partner_id.phone"/>
                                    </div>
                                </div>
                                <div style="display:flex; margin-bottom:5px; font-size: 12px;">
                                    <div class="label-field">Total Amount:</div>
                                    <div class="value-field">Rs <t t-esc="int(order.amount_total or 0)"/></div>
                                </div>
                            </div>
                        </div>

                        <div style="margin-bottom:10px;">
                            <table>
                                <thead>
                                    <tr>
                                        <th>Product</th>
                                        <th>Quantity</th>
                                        <t t-if="payment_method != 'Donation In Kind'">
                                            <th>Rate</th>
                                            <th>Amount</th>
                                        </t>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="order.lines" t-as="line" t-key="line.id">
                                        <tr>
                                            <td><t t-esc="line.full_product_name"/></td>
                                            <td><t t-esc="int(line.qty)"/></td>
                                            <t t-if="payment_method != 'Donation In Kind'">
                                                <td>Rs <t t-esc="int(line.price_unit)"/></td>
                                                <td>Rs <t t-esc="int(line.price_subtotal)"/></td>
                                            </t>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                            
                        </div>

                        <div style="display:flex; justify-content:space-between; margin-top:10px; font-size:10px;">
                            <div>Entered by: <strong><t t-esc="order.user_id.name"/></strong></div>
                            <div>Total Amount: <strong>Rs <t t-esc="int(order.amount_total or 0)"/></strong></div>
                        </div>

                        <div style="text-align: center; font-size: 12px;">
                            Powered by BytesNode
                        </div>
                    </div>
                </t>
            </t>
        </template>

        <record id="pos_donation_receipt_report" model="ir.actions.report">
            <field name="name">Duplicate Donation Receipt</field>
            <field name="model">pos.order</field>
            <field name="report_type">qweb-html</field>
            <field name="report_name">bn_pos_order.pos_donation_receipt_template</field>
            <field name="report_file">bn_pos_order.pos_donation_receipt_template</field>
            <field name="binding_model_id" ref="point_of_sale.model_pos_order"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="bn_pos_order.paperformat_pos_donation_receipt_a4"/>
        </record>
    </data>
</odoo>
