<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
    <!-- A4 Paper Format with Zero Top and Bottom Margin -->
    <record id="paperformat_pos_donation_receipt_a4" model="report.paperformat">
        <field name="name">A4 Zero Top Bottom Margin</field>
        <field name="default" eval="False"/>
        <field name="format">custom</field>
        <field name="page_height">210</field>
        <field name="page_width">148</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">70</field>
        <field name="margin_bottom">0</field>
        <field name="margin_left">7</field>
        <field name="margin_right">7</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">70</field>
        <field name="dpi">90</field>
    </record>
    <!-- Report Definition -->
    <record id="pos_donation_receipt_report" model="ir.actions.report">
        <field name="name">Donation Receipt</field>
        <field name="model">pos.order</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">bn_pos_order.pos_donation_receipt_template</field>
        <field name="report_file">bn_pos_order.pos_donation_receipt_template</field>
        <field name="binding_model_id" ref="point_of_sale.model_pos_order"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="paperformat_pos_donation_receipt_a4"/>
    </record>
    </data>
</odoo>
