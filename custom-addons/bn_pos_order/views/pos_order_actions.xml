<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Action to print donation receipt for selected records -->
        <record id="action_print_donation_receipt" model="ir.actions.server">
            <field name="name">Print Donation Receipt</field>
            <field name="model_id" ref="point_of_sale.model_pos_order"/>
            <field name="binding_model_id" ref="point_of_sale.model_pos_order"/>
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">
                action = {
                    'type': 'ir.actions.report',
                    'report_name': 'bn_pos_order.pos_donation_receipt_template',
                    'report_type': 'qweb-html',
                    'data': {'ids': records.ids},
                    'context': dict(env.context),
                } if records else False
            </field>
        </record>
    </data>
</odoo>
