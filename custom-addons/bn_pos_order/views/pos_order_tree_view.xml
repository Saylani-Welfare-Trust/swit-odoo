<odoo>
    <data>
        <!-- Inherit the tree view to add pos_reference field -->
        <record id="bn_pos_order_tree_view_inherit" model="ir.ui.view">
            <field name="name">pos.cheque.order.tree.inherit</field>
            <field name="model">pos.order</field>
            <field name="inherit_id" ref="cheques_account.pos_cheque_order_view_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="pos_reference"/>
                </xpath>
                <!-- Add Print Donation Receipt button column -->
                <xpath expr="//tree" position="attributes">
                    <attribute name="decoration-bf">1</attribute>
                </xpath>
                <xpath expr="//tree" position="inside">
                    <button name="%(pos_donation_receipt_report)d"
                            string="Print Receipt"
                            type="action"
                            class="oe_stat_button"
                            icon="fa-print"
                            title="Print Donation Receipt"/>
                </xpath>
            </field>
        </record>

        <record id="bn_pos_order_form_view_inherit" model="ir.ui.view">
            <field name="name">pos.order.form.inherit.donation.receipt</field>
            <field name="model">pos.order</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="%(pos_donation_receipt_report)d" 
                            string="Print Donation Receipt" 
                            type="action" 
                            class="btn-primary"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>