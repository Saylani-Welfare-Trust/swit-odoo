<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">
    <t t-name="ah_pos_scan_card.CustomButtonPopup" t-inherit="sm_point_of_sale_apps.custom_popup.CustomButtonPopup" t-inherit-mode="extension">
        <xpath expr="(//option)[2]" position="after">
            <option value="dhs">Donation Home Service</option>
            <option value="med_eq">Medical Equipment</option>
            <option value="ration_bag">Ration Bag</option>
            <option value="medicine">Medicine</option>
            <option value="disbursement">Disbursement</option>
            <option value="donation_box">Donation Box</option>
        </xpath>
        <xpath expr="(//form//div)[3]" position="replace">
            <div style="display: none;" class="col cnic_number">
                <input type="text" class="w-100 form-control" id="cnic_number" t-on-change="onCnicNumberChange" name="cnic_number" placeholder="MF:xxx-xxxxxxx" />
            </div>
            <div style="display: none;" class="col dhs">
                <input type="text" class="w-100 form-control" id="dhs" t-on-change="onDhsChange" name="dhs" placeholder="DHS/xxxx" />
            </div>
            <div style="display: none;" class="col med_eq">
                <input type="text" class="w-100 form-control" id="med_eq" t-on-change="onMedEqChange" name="med_eq" placeholder="ME:xxx-xxx" />
            </div>
            <div style="display: none;" class="col ration_bag">
                <input type="text" class="w-100 form-control" id="ration_bag" t-on-change="onRationBagChange" name="ration_bag" placeholder="RB:xxx-xxx" />
            </div>
            <div style="display: none;" class="col medicine">
                <input type="text" class="w-100 form-control" id="medicine" t-on-change="onMedicineChange" name="medicine" placeholder="MD:xxx-xxx" />
            </div>
            <div style="display: none;" class="col disbursement">
                <input type="text" class="w-100 form-control" id="disbursement" t-on-change="onDisbursementChange" name="disbursement" placeholder="Disbursement Number" />
                <br/>
                <div class="col" style="padding-bottom: 10px;" t-on-change="onOrderTypeChange">
                    <select class="w-100 form-control" id="type" name="type">
                        <option value="" selection=""></option>
                        <option value="one_time">One Time</option>
                        <option value="recurring">Recurring</option>
                    </select>
                </div>
            </div>
            <div style="display: none;" class="col donation_box">
                <input type="text" class="w-100 form-control" id="key" t-on-change="onKeyChange" name="key" placeholder="Box Number" />
                <br/>
                <input type="text" class="w-100 form-control" id="amount_collection" t-on-change="onCollectionAmountChange" name="amount_collection" placeholder="Collection Amount" />
            </div>
        </xpath>
    </t>
</templates>