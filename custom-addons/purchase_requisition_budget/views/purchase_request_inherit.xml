<odoo>
    <record id="purchase_request_form_view_inherit" model="ir.ui.view">
        <field name="name">purchase.request.form.inherit</field>
        <field name="model">purchase.request</field>
        <field name="inherit_id" ref="purchase_request.view_purchase_request_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='assigned_to']" position="before">
<!--                <field name="vendor_id"/>-->
                <field name="employee_purchase_requisition_id" invisible="1"/>
                <field name="purchase_milestone" invisible="1"/>
                <field name="purchase_duration" invisible="1"/>
                <field name="purchase_request_type" invisible="1"/>
            </xpath>
        </field>
    </record>

</odoo>