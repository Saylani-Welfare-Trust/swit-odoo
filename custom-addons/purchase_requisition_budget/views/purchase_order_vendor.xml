<odoo>
    <record id="purchase_tree_view_inherit" model="ir.ui.view">
        <field name="name">purchase.tree.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_kpis_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="order_request_type"/>
            </xpath>
        </field>
    </record>

    <record id="view_purchase_order_form_inherit" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header/field[@name='state']" position="replace">
                <field name="state" widget="statusbar"
                       statusbar_visible="draft,
                       sent,
                       comparative,
                       email,
                       received,
                       purchase,
                       "/>
            </xpath>
            <xpath expr="//field[@name='partner_ref']" position="after">
                <field name="order_milestone" readony="1"/>
                <field name="order_duration" readonly="1"/>
                <field name="order_request_type" readonly="1"/>
            </xpath>
            <xpath expr="//button[@name='action_rfq_send']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//button[@name='action_rfq_send'][2]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//header" position="inside">
                <button name="action_comparative" type="object" string="Comparative"
                        class="btn-primary" invisible="state != 'draft' and state != 'sent'"/>

                <button name="action_received" type="object" string="Received"
                        class="btn-primary" invisible="state != 'email'"/>

                <button name="action_send_vendor_email" type="object" string="Send Email to Vendors"
                        class="btn-primary" icon="fa-envelope" invisible="state != 'comparative'"/>

            </xpath>
            <xpath expr="//button[@name='button_confirm'][1]" position="attributes">
                <attribute name="invisible">state != 'received'</attribute>
            </xpath>
             <xpath expr="//button[@name='button_confirm'][2]" position="attributes">
                <attribute name="invisible">state != 'sent'</attribute>
            </xpath>

            <notebook position="inside">
                <page string="Comparative Vendors Process">
                    <field name="comparative_line_ids" widget="one2many_list" mode="tree">
                        <tree editable="bottom">
                            <field name="is_selected"/>
                            <field name="vendor_id"/>
<!--                            <field name="product_id" widget="many2many_tags"/>-->
                            <field name="product_ids" widget="many2many_tags"/>
                            <field name="quantity"/>
<!--                            <field name="price_unit" invisibe="column_invisible"/>-->
                            <field name="po_id" widget="many2one_tags" readonly="1"/>
                        </tree>
                    </field>
                </page>
            </notebook>

            <notebook position="inside">
                <page string="Received Vendors Process">
                    <field name="received_line_ids" widget="one2many_list" mode="tree">
                        <tree editable="bottom">
                            <field name="is_selected"/>
                            <field name="vendor_id"/>
<!--                            <field name="product_id"/>-->
                            <field name="product_ids" widget="many2many_tags"/>
                            <field name="quantity"/>
                            <field name="price_unit"/>
                            <field name="po_id" widget="many2one_tags" readonly="1"/>
                        </tree>
                    </field>
                </page>
            </notebook>


            <!--            <notebook position="inside">-->
            <!--                <page string="Vendors">-->
            <!--                    <field name="vendor_line_ids" widget="many2many_alt_pos" />-->
            <!--                </page>-->
            <!--            </notebook>-->
        </field>
    </record>

    <record id="purchase_search_view_inherit" model="ir.ui.view">
        <field name="name">purchase.search.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.view_purchase_order_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='order_date']" position="after">
                <filter string="Reference" name="name" domain="[('name', 'ilike', '%WO%')]" />
            </xpath>
        </field>
    </record>

</odoo>