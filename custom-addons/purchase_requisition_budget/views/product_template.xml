<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_product_form_view_inheritttt" model="ir.ui.view">
        <field name="name">product.product.form.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group_general']/field[@name='uom_po_id']" position="after">
                <field name="is_epr"/>
            </xpath>
        </field>
    </record>

     <record id="employee_purchase_requisition_view_inherit" model="ir.ui.view">
        <field name="name">employee_purchase_requisition_view_inherit</field>
        <field name="model">requisition.order</field>
        <field name="inherit_id" ref="employee_purchase_requisition.requisition_order_view_tree"/>
        <field name="arch" type="xml">

             <xpath expr="///field[@name='product_id']" position="before">
               <field name="is_epr"  column_invisible="1"/>
            </xpath>
            <xpath expr="///field[@name='product_id']" position="attributes">
                <attribute name="domain">[('is_epr', '=', True)]</attribute>
            </xpath>

        </field>
    </record>
</odoo>