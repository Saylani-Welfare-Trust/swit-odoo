<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_terms_reference_form" model="ir.ui.view">
        <field name="name">view.terms.reference.form</field>
        <field name="model">terms.reference</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button string="Confirmed" type="object" class="oe_highlight" name="action_submit"
                            invisible="state == 'confirmed'" state="draft"/>
                    <button string="Reset To Draft" type="object" class="oe_highlight" name="action_draft"
                            state="confirmed"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="milestone"/>
                            <field name="duration"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_terms_details" model="ir.actions.act_window">
        <field name="name">Terms of Reference</field>
        <field name="res_model">terms.reference</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_customer_details_report"
              name="TOR"
              parent="employee_purchase_requisition.employee_purchase_requisition_menu_root"
              action="action_terms_details"
              sequence="20"/>
</odoo>
