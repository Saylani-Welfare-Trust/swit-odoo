<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <template id="bn_donation_home_service.donation_home_service_receipt_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <style>
                            h1 {
                                font-size: 1.5em;
                                margin: 3px;
                            }
                            .watermark {
                                position: fixed; /* important: appears on every page */
                                top: 50%;        /* vertical center */
                                left: 50%;       /* horizontal center */
                                transform: translate(-50%, -50%) rotate(-30deg); /* center + rotate */
                                font-size: 150px;
                                color: rgba(200, 200, 200, 0.15); /* lighter for printing */
                                font-weight: bold;
                                white-space: nowrap;
                                pointer-events: none; /* don't block clicks */
                                user-select: none;
                                z-index: 0; /* behind all content */
                            }
                        </style>
                        
                        <div class="watermark" style="padding-top: 600px; padding-right: 250px;">PROVISION</div>
                        
                        <div class="mt-5 clearfix"/>

                        <!-- Header -->
                        <div class="div-box service_margin">
                            <h1 class="text-transform">Provision Receipt</h1>
                        </div>

                        <!-- Certificate Info -->
                        <div class="mb-4">
                            <div class="row">
                                <!-- Left column -->
                                <div class="col-6 pe-3">
                                    <t t-import="datetime"/>
                                    <div class="d-flex mb-1">
                                        <div class="w-40 small">Certificate Date:</div>
                                        <div class="w-60 fw-semibold small">
                                            <t t-esc="datetime.datetime.now().strftime('%d-%m-%Y')"/>
                                        </div>
                                    </div>
                                    <div class="d-flex mb-1">
                                        <div class="w-40 small">Receipt #:</div>
                                        <div class="w-60 fw-semibold small">
                                            <t t-esc="o.name or '--'"/>
                                        </div>
                                    </div>
                                    <div class="d-flex mb-1">
                                        <div class="w-40 small">Receipt Date:</div>
                                        <div class="w-60 fw-semibold small">
                                            <t t-import="datetime"/>
                                            <t t-esc="datetime.datetime.now().strftime('%Y-%m-%d')"/>
                                        </div>
                                    </div>
                                    <div class="d-flex mb-1">
                                        <div class="w-40 small">Donor Name:</div>
                                        <div class="w-60 fw-semibold small">
                                            <t t-esc="o.donor_id.name or '-'"/>
                                        </div>
                                    </div>
                                    <div class="d-flex mb-1">
                                        <div class="w-40 small">Cell #:</div>
                                        <div class="w-60 fw-semibold small">
                                            <t t-esc="o.mobile or '--'"/>
                                        </div>
                                    </div>
                                </div>

                                <!-- Right column -->
                                <div class="col-6 ps-3">
                                    <div class="d-flex mb-1">
                                        <div class="w-40 small">Amount:</div>
                                        <div class="w-60 fw-semibold small">
                                            <t t-esc="o.amount or '0.00'"/>
                                        </div>
                                    </div>
                                    <div class="d-flex mb-1">
                                        <div class="w-40 small">Service Charges:</div>
                                        <div class="w-60 fw-semibold small">
                                            <t t-esc="o.service_charges or '0.00'"/>
                                        </div>
                                    </div>
                                    <div class="d-flex mb-1">
                                        <div class="w-40 small">Total Amount:</div>
                                        <div class="w-60 fw-semibold small">
                                            <t t-esc="o.total_amount or '0.00'"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Donation Box Details -->
                        <div class="mb-4">
                            <h4 class="fw-bold mb-3">Donation Home Service Details</h4>
                            <table class="table table-bordered border-2">
                                <thead class="text-black">
                                    <tr>
                                        <th class="text-center fw-bold">Product</th>
                                        <th class="text-center fw-bold">Quantity</th>
                                        <th class="text-center fw-bold">Amount Collected</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="o.donation_home_service_line_ids" t-as="line" t-key="line.id">
                                        <tr class="bg-light">
                                            <td class="text-center py-2">
                                                <t t-esc="line.product_id.name"/>
                                            </td>
                                            <td class="text-center py-2">
                                                <t t-esc="line.quantity"/>
                                            </td>
                                            <td class="text-center fw-bold py-2">
                                                <t t-esc="line.amount"/>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>

                        <!-- Installation Info -->
                        <div class="mb-4">
                            <div class="row">
                                <!-- Left column -->
                                <div class="col-6 pe-3">
                                    <t t-import="datetime"/>
                                    <div class="d-flex mb-1">
                                        <div class="w-40 small">Certificate Date:</div>
                                        <div class="w-60 fw-semibold small">
                                            <t t-esc="datetime.datetime.now().strftime('%d-%m-%Y')"/>
                                        </div>
                                    </div>
                                    <div class="d-flex mb-1">
                                        <div class="w-40 small">Receipt #:</div>
                                        <div class="w-60 fw-semibold small">
                                            <t t-esc="o.name or '--'"/>
                                        </div>
                                    </div>
                                    <div class="d-flex mb-1">
                                        <div class="w-40 small">Receipt Date:</div>
                                        <div class="w-60 fw-semibold small">
                                            <t t-import="datetime"/>
                                            <t t-esc="datetime.datetime.now().strftime('%Y-%m-%d')"/>
                                        </div>
                                    </div>
                                    <div class="d-flex mb-1">
                                        <div class="w-40 small">Donor Name:</div>
                                        <div class="w-60 fw-semibold small">
                                            <t t-esc="o.donor_id.name or '-'"/>
                                        </div>
                                    </div>
                                    <div class="d-flex mb-1">
                                        <div class="w-40 small">Cell #:</div>
                                        <div class="w-60 fw-semibold small">
                                            <t t-esc="o.mobile or '--'"/>
                                        </div>
                                    </div>
                                </div>

                                <!-- Right column -->
                                <div class="col-6 ps-3">
                                    <div class="d-flex mb-1">
                                        <div class="w-40 small">Amount:</div>
                                        <div class="w-60 fw-semibold small">
                                            <t t-esc="o.amount or '0.00'"/>
                                        </div>
                                    </div>
                                    <div class="d-flex mb-1">
                                        <div class="w-40 small">Service Charges:</div>
                                        <div class="w-60 fw-semibold small">
                                            <t t-esc="o.service_charges or '0.00'"/>
                                        </div>
                                    </div>
                                    <div class="d-flex mb-1">
                                        <div class="w-40 small">Total Amount:</div>
                                        <div class="w-60 fw-semibold small">
                                            <t t-esc="o.total_amount or '0.00'"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Footer -->
                        <div class="text-center border-top border-2 pt-3 mt-5">
                            <p class="text-muted fst-italic mb-4">
                                This certificate is digitally generated and serves as an official acknowledgment of the donation box collection.
                            </p>
                        </div>
                        <div class="d-inline-block border-top border-dark pt-1" style="width: 200px; margin-top: 75px;">
                            <p class="mb-0 text-muted small text-center">Authorized Signature</p>
                        </div>
                    </t>
                </t>
            </t>
        </template>

        <record id="report_donation_home_service_paperformat" model="report.paperformat">
            <field name="name">A4 - Donation Home Service Receipt Format</field>
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">85</field>
            <field name="margin_bottom">15</field>
            <field name="margin_left">18</field>
            <field name="margin_right">14</field>
            <field name="header_spacing">35</field>
        </record>

        <record id="report_donation_home_service" model="ir.actions.report">
            <field name="name">Donation Home Service Receipt</field>
            <field name="model">donation.home.service</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">bn_donation_home_service.donation_home_service_receipt_template</field>
            <field name="report_file">bn_donation_home_service.donation_home_service_receipt_template</field>
            <field name="binding_model_id" ref="bn_donation_home_service.model_donation_home_service"/>
            <field name="binding_type">report</field>
            <field name="print_report_name">'Donation Home Service Receipt - %s' % (object.name)</field>
            <field name="paperformat_id" ref="report_donation_home_service_paperformat"/>
        </record>
    </data>
    
</odoo>
