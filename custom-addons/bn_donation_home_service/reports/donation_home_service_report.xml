<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <!-- ===================== -->
        <!-- Donation DHS Receipt -->
        <!-- ===================== -->
        <template id="bn_donation_home_service.donation_home_service_receipt_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">

                        <!-- PAGE WRAPPER -->
                        <div class="page" style="margin-top: 360px; position:relative;">

                            <!-- ===== STYLES ===== -->
                            <style>
                                body {
                                    font-family: Arial, sans-serif;
                                    font-size: 11px;
                                }

                                h1 {
                                    font-size: 14px;
                                    font-weight: bold;
                                    margin: 2px 0;
                                }

                                h4 {
                                    font-size: 12px;
                                    margin: 6px 0;
                                    font-weight: bold;
                                }

                                table {
                                    font-size: 11px;
                                    border-collapse: collapse;
                                }

                                th, td {
                                    padding: 3px 4px !important;
                                }

                                /* âœ… FIXED WATERMARK */
                                .watermark {
                                    position: absolute; /* was fixed */
                                    top: 120px;         /* adjust if needed */
                                    left: 50%;
                                    transform: translateX(-50%) rotate(-30deg);
                                    font-size: 80px;
                                    color: rgba(200, 200, 200, 0.15);
                                    font-weight: bold;
                                    white-space: nowrap;
                                    pointer-events: none;
                                    z-index: 0;
                                }
                            </style>

                            <!-- ===== WATERMARK ===== -->
                            <div class="watermark">PROVISIONAL</div>

                            <!-- ===== HEADER ===== -->
                            <div class="row mb-2">
                                <div class="col-6">
                                    <h1>Provisional Receipt (DHS)</h1>
                                </div>
                                <div class="col-6 text-end">
                                    <h1>
                                        Saylani Welfare International Trust<br/>
                                        <t t-if="o.env.user.employee_id.analytic_account_id">
                                            (<t t-esc="o.env.user.employee_id.analytic_account_id.name"/>)
                                        </t>
                                    </h1>
                                </div>
                            </div>

                            <hr style="margin:4px 0"/>

                            <!-- ===== BASIC INFO ===== -->
                            <div class="row mb-2">
                                <div class="col-6">
                                    <div><strong>DHS #:</strong> <t t-esc="o.name or '--'"/></div>
                                    <div><strong>Donor Name:</strong> <t t-esc="o.donor_id.name or '-'"/></div>
                                </div>
                                <div class="col-6">
                                    <div>
                                        <strong>Date:</strong>
                                        <t t-esc="o.create_date.strftime('%d-%m-%Y %H:%M') if o.create_date else '--'"/>
                                    </div>
                                    <div>
                                        <strong>Contact No.:</strong>
                                        <t t-esc="o.mobile or '-'"/>
                                    </div>
                                </div>
                            </div>

                            <!-- ===== ITEMS ===== -->
                            <h4>Donation Home Service Details</h4>

                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Product</th>
                                        <th class="text-end">Qty</th>
                                        <th class="text-end">Rate</th>
                                        <th class="text-end">Amount</th>
                                        <th>Remarks</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="o.donation_home_service_line_ids" t-as="line">
                                        <tr>
                                            <td><t t-esc="line.product_id.name"/></td>
                                            <td class="text-end"><t t-esc="line.quantity"/></td>
                                            <td class="text-end"><t t-esc="line.product_id.list_price"/></td>
                                            <td class="text-end"><t t-esc="line.amount"/></td>
                                            <td><t t-esc="line.remarks or '-'"/></td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>

                            <hr style="margin:4px 0"/>

                            <!-- ===== TOTALS ===== -->
                            <div class="row">
                                <div class="col-6">
                                    <div><strong>Service Charges:</strong> Rs <t t-esc="o.service_charges or 0.0"/></div>
                                    <div><strong>Address:</strong> <t t-esc="o.donor_id.street or '-'"/></div>
                                </div>
                                <div class="col-6 text-end">
                                    <div><strong>Entered By:</strong> <t t-esc="o.env.user.name"/></div>
                                    <div><strong>Total Amount:</strong> Rs <t t-esc="o.total_amount or 0.0"/></div>
                                </div>
                            </div>

                        </div> <!-- END PAGE -->

                    </t>
                </t>
            </t>
        </template>

        <!-- ===================== -->
        <!-- A5 Paper Format -->
        <!-- ===================== -->
        <record id="report_donation_home_service_paperformat" model="report.paperformat">
            <field name="name">A5 - Donation Home Service Receipt</field>
            <field name="format">A5</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">10</field>
            <field name="margin_bottom">10</field>
            <field name="margin_left">8</field>
            <field name="margin_right">8</field>
            <field name="header_spacing">10</field>
            <field name="dpi">90</field>
        </record>

        <record id="report_donation_home_service" model="ir.actions.report">
            <field name="name">Donation Home Service Receipt</field>
            <field name="model">donation.home.service</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">bn_donation_home_service.donation_home_service_receipt_template</field>
            <field name="report_file">bn_donation_home_service.donation_home_service_receipt_template</field>
            <field name="binding_model_id" ref="bn_donation_home_service.model_donation_home_service"/>
            <field name="binding_type">report</field>
            <field name="print_report_name">'Donation Home Service Receipt - %s' % (object.name)</field>
            <field name="paperformat_id" ref="report_donation_home_service_paperformat"/>
        </record>

    </data>
</odoo>
