<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">
    <t t-name="ah_accounting_app.dfr_template_new" t-inherit="dynamic_accounts_report.dfr_template_new"
       t-inherit-mode="extension">
        <xpath expr="//div[hasclass('analytic_filter')]" position="before">
            <div class="analytic_plan" style="max-width:17%;">
                <a type="button" class="dropdown-toggle"
                   data-bs-toggle="dropdown" style="display: flex;
                                            text-wrap: wrap;
                                            flex-direction: row;
                                            align-items: center;
                                            justify-content: flex-start;
                                            min-width: 105px;">
                    <span class="fa fa-folder-open"/>
                    Analytic Plans:
                    <span class="analytic_p"/>
                </a>
                <div class="dropdown-menu analytic_plan"
                     name="states[]">
                    <div role="separator" class="dropdown-divider"/>
                    <t t-foreach="state.filter_data['analytic_plan']" t-as="analyticplan" t-key="analytic_index">
                        <span class="dropdown-item"
                              role="menuitem"
                              t-on-click="apply_analytic_plans">
                            <span t-esc="analyticplan.id"
                                  class="d-none"/>
                            <t t-esc="analyticplan.name"/>
                        </span>
                    </t>
                </div>
            </div>
            <div class="analytic_sub_plan" style="max-width:17%;">
                <a type="button" class="dropdown-toggle"
                   data-bs-toggle="dropdown" style="display: flex;
                                            text-wrap: wrap;
                                            flex-direction: row;
                                            align-items: center;
                                            justify-content: flex-start;
                                            min-width: 105px;">
                    <span class="fa fa-folder-open"/>
                    Sub Plans:
                    <span class="analytic_sp"/>
                </a>
                <div class="dropdown-menu analytic_sub_plan"
                     name="states[]">
                    <div role="separator" class="dropdown-divider"/>
                    <t t-foreach="state.filter_data['analytic_sub_plan']" t-as="analyticsubplan" t-key="analytic_index">
                        <span class="dropdown-item"
                              role="menuitem"
                              t-on-click="apply_analytic_sub_plans">
                            <span t-esc="analyticsubplan.id"
                                  class="d-none"/>
                            <t t-esc="analyticsubplan.name"/>
                        </span>
                    </t>
                </div>
            </div>
        </xpath>
    </t>
</templates>