<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="medical_equipment_donation_view_form" model="ir.ui.view">
        <field name="name">medical.equipment.donation.view.form</field>
        <field name="model">medical.equipment.donation</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="product_id" />
                        <h1><field name="product_id" options="{'no_create': True, 'no_edit': True, 'no_open': True}" domain="[('is_medical_equipment_donation', '=', True)]" /></h1>
                    </div>
                    <group name="medical_equipment_donation">
                        <group name="medical_equipment_donation_col_1">
                            <field name="amount" />
                        </group>
                        <group name="medical_equipment_donation_col_2">
                            <field name="remarks" />
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button string="Confirm" name="action_confirm" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
