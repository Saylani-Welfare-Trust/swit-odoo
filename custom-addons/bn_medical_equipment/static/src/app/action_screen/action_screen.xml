<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="bn_medical_equipment.MEButton" t-inherit="bn_pos_custom_action.ActionScreen" t-inherit-mode="extension">
        <xpath expr="//main" position="inside">
            <button class="btn btn-secondary btn-lg flex-fill py-4 d-flex align-items-center justify-content-center" t-on-click="() => this.clickRecordME()">
                <i class="fa fa-medkit me-1 text-danger" role="img" aria-label="Medical Equipment" title="Medical Equipment" />
                Medical Equipment
            </button>
        </xpath>
    </t>

</templates>
