<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="bn_profile_management_profile_management_view_form_inherit_bn_medical_equipment" model="ir.ui.view">
        <field name="name">bn.profile.management.profile.management.view.form.inherit.bn.medical.equipment</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="bn_profile_management.profile_management_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='medical']" position="inside">
                <field name="medical_equipment_ids" readonly="1">
                    <tree>
                        <field name="name"/>
                        <field name="donee_id"/>
                        <field name="state"  widget="badge" decoration-warning="state == 'draft'" decoration-info="state in ['payment_received', 'payment_return', 'validate']" decoration-success="state == 'return'" />
                    </tree>
                </field>
            </xpath>
        </field>
    </record>

    <record id="base_view_partner_form_inherit_bn_medical_equipment" model="ir.ui.view">
        <field name="name">base.view.partner.form.inherit.bn.medical.equipment</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='medical']" position="inside">
                <field name="medical_equipment_ids" readonly="1">
                    <tree>
                        <field name="name"/>
                        <field name="donee_id"/>
                        <field name="state"  widget="badge" decoration-warning="state == 'draft'" decoration-info="state in ['payment_received', 'payment_return', 'validate']" decoration-success="state == 'return'" />
                    </tree>
                </field>
            </xpath>
        </field>
    </record>

</odoo>
