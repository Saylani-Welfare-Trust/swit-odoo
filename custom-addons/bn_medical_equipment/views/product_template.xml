<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_product_template_only_form_view_inherit_bn_medical_equipment" model="ir.ui.view">
        <field name="name">product.product.template.only.form.view.inherit.bn.medical.equipment</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='options']" position="inside">
                <span class="d-inline-flex">
                    <field name="is_medical_equipment" on_change="1" field_id="is_medical_equipment"/>
                    <label for="is_medical_equipment"/>
                </span>
            </xpath>

            <xpath expr="//page[@name='general_information']" position="after">
                <page name="medical_equipment" string="Medical Equipment" invisible="not is_medical_equipment">
                    <group>
                        <group name="medical_equipment_col_1">
                            <field name="is_medical_approval" />
                            <field name="security_deposit" />
                        </group>
                        <group name="medical_equipment_col_2">
                            <field name="recovery_period" />
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
