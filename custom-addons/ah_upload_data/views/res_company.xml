<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="ah_res_company_form_inherit" model="ir.ui.view">
            <field name="name">ah.res.company.form.inherit</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="inside">
                     <header>
                        <button name="upload_company_data" type="object" class="btn-secondary" string="Upload Company Data"/>
                    </header>
                </xpath>
                <xpath expr="//field[@name='name']" position="after">
                    <field name="upload_attachment_name" invisible="1"/>
                    <field name="upload_attachment_id" filename="upload_attachment_name"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
