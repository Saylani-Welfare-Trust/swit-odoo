<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="view_stock_move_operations_say" model="ir.ui.view">
            <field name="name">view_stock_move_operations_say</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_stock_move_operations"/>
            <field name="arch" type="xml">

                <xpath expr="//form" position="inside">
                    <footer>
                        <button string="Save" special="save" class="btn-primary" data-hotkey="c"/>
                        <button string="Discard" class="btn-secondary" special="cancel" data-hotkey="j"/>
                    </footer>
                </xpath>

            </field>
        </record>
    </data>
</odoo>
