<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_purchase_order_form_inherit_to_kg_multiplier" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.to_kg_multiplier</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <!-- Tree view inside order_line -->
            <xpath expr="//field[@name='order_line']/tree/field[@name='price_unit']" position="after">
                <field name="to_kg_multiplier" column_invisible="0" force_save="1"/>
                <field name="x_base_price" column_invisible="0" force_save="1"/>
                <field name="main_attribute_id" column_invisible="0" force_save="1"/>
            </xpath>
        </field>
    </record>

    </data>
</odoo>