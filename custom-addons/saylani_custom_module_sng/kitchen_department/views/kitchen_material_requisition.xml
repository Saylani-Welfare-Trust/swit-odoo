<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_kitchen_requisition_tree" model="ir.ui.view">
            <field name="name">kitchen.material.requisition.tree</field>
            <field name="model">kitchen.material.requisition</field>
            <field name="arch" type="xml">
                <tree string="Material Requisitions">
                    <field name="request_id"/>
                    <field name="state"/>
                    <field name="picking_id"/>
                    <field name="purchase_requisition_id"/>
                </tree>
            </field>
        </record>

        <!-- Form view for kitchen.material.requisition -->
        <record id="view_kitchen_requisition_form" model="ir.ui.view">
            <field name="name">kitchen.material.requisition.form</field>
            <field name="model">kitchen.material.requisition</field>
            <field name="arch" type="xml">
                <form string="Material Requisition">
                    <sheet>
                        <header>
                            <field name="state" widget="statusbar"
                                   statusbar_visible="draft,requested,done"/>
                        </header>
                        <group>
                            <field name="request_id"/>
                            <field name="picking_id" readonly="1"/>
                            <field name="purchase_requisition_id" readonly="1"/>
                        </group>
                        <group string="Requisition Lines">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="branch_name"/>

                                    <field name="quantity"/>
                                    <field name="uom_id"/>
                                    <field name="meat_category"/>
                                </tree>
                                <form string="Requisition Line">
                                    <sheet>
                                        <group>
                                            <field name="product_id"/>
                                            <field name="branch_name"/>
                                            <field name="quantity"/>
                                            <field name="uom_id"/>
                                            <field name="meat_category" readonly="1"/>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action & Menu for Material Requisitions -->
        <record id="action_kitchen_requisition" model="ir.actions.act_window">
            <field name="name">Material Requisitions</field>
            <field name="res_model">kitchen.material.requisition</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_smiling_face">
                    Review and process kitchen material requisitions.
                </p>
            </field>
        </record>


    </data>
</odoo>