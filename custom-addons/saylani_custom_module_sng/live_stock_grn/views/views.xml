<odoo>
    <data>
        <record id="view_product_attribute_value_form_inherit_kg" model="ir.ui.view">
            <field name="name">product.attribute.form.inherit.kg</field>
            <field name="model">product.attribute</field>
            <field name="inherit_id" ref="product.product_attribute_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='attribute_values']//field[@name='value_ids']//tree//field[@name='name']"
                       position="after">
                    <field name="from_kg"/>
                    <field name="to_kg"/>
                </xpath>



            </field>
        </record>

        <record id="view_picking_form_inherit_receive_weight" model="ir.ui.view">
            <field name="name">stock.picking.form.inherit.receive.weight</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="action_open_receive_by_weight"
                            type="object"
                            string="Receive by Weight"
                            class="btn-primary"
                            icon="fa-balance-scale"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
