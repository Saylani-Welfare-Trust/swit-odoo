<odoo>
    <data>
        <template id="report_items_selection_slip_delivery">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <t t-foreach="docs" t-as="doc">
                        <div style="width:100%;max-width:180mm;margin:0 auto;padding:16px;font-family:Arial, sans-serif;color:#333;">
                            <!-- Header -->
                            <div style="display:grid;grid-template-columns:1fr auto 1fr;align-items:center;margin-bottom:16px;">
                                <div style="text-align:left;">
                                    <!-- Uncomment for company logo -->
                                    <!-- <img t-att-src="doc.company_id.logo" alt="Logo" style="max-height:40px;"/> -->
                                </div>
                                <h2 style="margin:0;font-size:24px;text-transform:uppercase;letter-spacing:2px;text-align:center;">
                                    Item Issue Slip
                                </h2>
<!--                                <div style="text-align:right;font-size:12px;">-->
<!--                                    <t t-esc="doc.date_of_delivery.strftime('%Y-%m-%d') if doc.date_of_delivery else ''"/>-->
<!--                                </div>-->
                            </div>
                            <!-- Info Grid -->
                            <div style="display:grid;grid-template-columns:1fr 1fr;gap:8px 16px;font-size:14px;margin-bottom:16px;">
                                <div style="color:#555;">
                                    <strong>Donee</strong>
                                </div>
                                <div>
                                    <t t-esc="doc.donee_id.name"/>
                                </div>
                                <div style="color:#555;">
                                    <strong>Approval Ref</strong>
                                </div>
                                <div>
                                    <t t-esc="doc.name"/>
                                </div>
                                <div style="color:#555;">
                                    <strong>Location</strong>
                                </div>
                                <div>
                                    <t t-esc="doc.location"/>
                                </div>

                                <div style="color:#555;">
                                    <strong>Delivery Date</strong>
                                </div>
                                <div>
                                    <t t-esc="doc.date_of_delivery.strftime('%Y-%m-%d') if doc.date_of_delivery else ''"/>
                                </div>
                            </div>
                            <hr style="border:none;border-top:1px solid #eee;margin:0 0 16px;"/>
                            <!-- Items Section -->
                            <div style="margin-bottom:16px;">
                                <h3 style="font-size:18px;margin:0 0 8px;color:#444;">Items</h3>
                                <table style="width:100%;border-collapse:collapse;font-size:14px;">
                                    <thead>
                                        <tr>
                                            <th style="text-align:left;padding:8px;border-bottom:2px solid #444;">Item
                                                Description
                                            </th>
                                            <th style="text-align:right;padding:8px;border-bottom:2px solid #444;width:20%;">
                                                Qty
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="doc.selection_ids" t-as="line">
                                            <tr>
                                                <td style="padding:8px;border-bottom:1px solid #ddd;">
                                                    <t t-esc="line.product_id.name"/>
                                                </td>
                                                <td style="padding:8px;border-bottom:1px solid #ddd;text-align:right;">
                                                    <t t-esc="line.qty"/>
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                            <!-- Footer -->
                            <div style="text-align:center;font-size:13px;padding-top:12px;border-top:1px solid #eee;">
                                <p style="margin:0;font-style:italic;">Thank You!</p>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>

        <record id="action_items_selection_delivery_slip_report" model="ir.actions.report">
            <field name="name">Donee Slip</field>
            <field name="model">jahaiz.request</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">jahaiz.report_items_selection_slip_delivery</field>
            <field name="report_file">jahaiz.report_items_selection_slip_delivery</field>
            <!--            <field name="print_report_name">'Item_Slip_%s' % (object.name)</field>-->
            <!--            <field name="binding_model_id" ref="model_items_selection"/>-->
            <field name="binding_type">report</field>
        </record>
    </data>
</odoo>
