<odoo>

    <record id="view_distribution_daily_req_tree" model="ir.ui.view">
        <field name="name">distribution.daily.req.tree</field>
        <field name="model">distribution.daily.req</field>
        <field name="arch" type="xml">
            <tree>
                <field name="date"/>
                <field name="center_id"/>
            </tree>
        </field>
    </record>


    <record id="view_distribution_daily_req_form" model="ir.ui.view">
        <field name="model">distribution.daily.req</field>
        <field name="arch" type="xml">
            <form string="Daily Requirements">
                <header>

                    <field name="state" widget="statusbar" statusbar_visible="draft,sent_to_ration"/>

                    <button name="action_send_to_ration" type="object" invisible="state != 'draft'"
                            string="Send to Ration Packing" class="oe_highlight"/>
                </header>
                <sheet>
                    <group>
                        <field name="date"/>
                        <field name="center_id"/>
                    </group>
                    <field name="line_ids">
                        <tree editable="bottom">
<!--                            <field name="category_id"/>-->
                            <field name="donee"/>
                            <field name="name"/>
                            <field name="category_id"/>
                            <field name="disbursement_type_ids" widget="many2many_tags"/>
                            <field name="product" widget="many2many_tags"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_distribution_daily_req" model="ir.actions.act_window">
        <field name="name">Daily Requirements</field>
        <field name="res_model">distribution.daily.req</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
