<odoo>
    <record id="view_partner_form_inherit_donee" model="ir.ui.view">
        <field name="name">res.partner.form.donation</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vat']" position="after">

                <!-- Add the Is Donee checkbox somewhere suitable -->
                <field name="is_donee"/>
                <!-- Add Is Recurring but only visible if is_donee is True -->
                <field name="is_recurring" invisible="is_donee != True"
                />
            </xpath>
        </field>
    </record>
</odoo>
