<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Form View for warehouse.kitchen.request -->
    <record id="view_warehouse_kitchen_request_form" model="ir.ui.view">
        <field name="name">warehouse.kitchen.request.form</field>
        <field name="model">warehouse.kitchen.request</field>
        <field name="arch" type="xml">
            <form string="Warehouse to Kitchen Request">
                <header>
                    <button name="action_send" string="Send Request" type="object" class="btn-primary"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,sent,done"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="date"/>
                    </group>
                    <field name="line_ids">
                        <tree editable="bottom">
                            <field name="product_id"/>
                            <field name="quantity"/>
                            <field name="uom_id"/>
                            <field name="dest_location_id"/>
                            <button name="action_transfer_to_kitchen" string="Transfer" type="object" class="btn-secondary"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View for warehouse.kitchen.request -->
    <record id="view_warehouse_kitchen_request_tree" model="ir.ui.view">
        <field name="name">warehouse.kitchen.request.tree</field>
        <field name="model">warehouse.kitchen.request</field>
        <field name="arch" type="xml">
            <tree string="Warehouse Requests">
                <field name="name"/>
                <field name="date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Action to open Warehouse to Kitchen Requests -->
    <record id="action_warehouse_kitchen_request" model="ir.actions.act_window">
        <field name="name">Warehouse to Kitchen Requests</field>
        <field name="res_model">warehouse.kitchen.request</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>