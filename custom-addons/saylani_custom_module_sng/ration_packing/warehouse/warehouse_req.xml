<odoo>
  <!-- Issuance Request Form -->
  <record id="view_warehouse_issuance_req_form" model="ir.ui.view">
    <field name="model">warehouse.issuance.req</field>
    <field name="arch" type="xml">
      <form string="Issuance Request">
        <header>
          <field name="state" readonly="1"/>
          <button name="create_internal_transfer" type="object" string="Send to Ration Packing" invisible="state != 'draft'"
                  class="oe_highlight"
                  />
        </header>
        <sheet>
          <group>
            <field name="name"/>
            <field name="date"/>
            <field name="center_id"/>
          </group>
          <field name="line_ids">
            <tree editable="bottom">
              <field name="product_id"/>
              <field name="quantity"/>
            </tree>
          </field>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Issuance Request Tree -->
  <record id="view_warehouse_issuance_req_tree" model="ir.ui.view">
    <field name="model">warehouse.issuance.req</field>
    <field name="arch" type="xml">
      <tree string="Issuance Requests">
        <field name="name"/>
        <field name="date"/>
        <field name="center_id"/>
        <field name="state"/>
      </tree>
    </field>
  </record>

  <!-- Action & Menu -->
  <record id="action_warehouse_issuance_req" model="ir.actions.act_window">
    <field name="name">Issuance Requests</field>
    <field name="res_model">warehouse.issuance.req</field>
    <field name="view_mode">tree,form</field>
  </record>

</odoo>
