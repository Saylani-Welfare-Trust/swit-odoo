<odoo>
    <data>
        <!-- Report Template -->
        <template id="report_gate_pass">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <t t-set="title">Gate Pass</t>
                    <!-- loop over docs so you get a `doc` -->
                    <t t-foreach="docs" t-as="doc">
                        <div class="page">
                            <h2>Gate Pass</h2>
                            <table class="table table-sm">
                                <tr>
                                    <td>
                                        <strong>Date:</strong>
                                        <t t-esc="doc.date"/>
                                    </td>
                                    <td>
                                        <strong>GP #:</strong>
                                        <t t-esc="doc.id"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <strong>Center:</strong>
                                        <t t-esc="doc.center_id.name"/>
                                    </td>
                                    <td>
                                        <strong>State:</strong>
                                        <t t-esc="doc.state"/>
                                    </td>
                                </tr>
                            </table>
                            <h4>Items</h4>
                            <table class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th>Product</th>
                                        <th>Qty</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- Iterate aggregated data instead of raw lines -->
                                    <t t-foreach="doc._get_aggregated_products()" t-as="item">
                                        <tr>
                                            <td>
                                                <t t-esc="item['product'].name"/>
                                            </td>
                                            <td>
                                                <t t-esc="item['qty']"/>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                            <br/>
                            <br/>
                            <p>
                                <strong>Prepared by:</strong>
                                ___________________
                            </p>
                            <p>
                                <strong>Approved by:</strong>
                                ___________________
                            </p>
                        </div>
                    </t>
                </t>
            </t>
        </template>
        <!-- Report Action -->
        <!--        <report-->
        <!--                id="action_report_gate_pass"-->
        <!--                model="stock.picking"-->
        <!--                string="Gate Pass"-->
        <!--                report_type="qweb-pdf"-->
        <!--                name="ration_packing.report_gate_pass"-->
        <!--                file="ration_packing.report_gate_pass"-->
        <!--                print_report_name="('GatePass_%s' % (object.name or object.id))"-->
        <!--                attachment_use="False"-->
        <!--        />-->

        <record id="action_report_gate_pass" model="ir.actions.report">
            <field name="name">Gate Pass</field>
            <field name="model">ration.daily.req</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">ration_packing.report_gate_pass</field>
            <field name="report_file">ration_packing.report_gate_pass</field>
        </record>
    </data>
</odoo>
