<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="stock_view_picking_form_inherit_bn_stock_location" model="ir.ui.view">
        <field name="name">stock.view.picking.form.inherit.bn.stock.location</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="before">
                <field name="user_allowed_location_ids" widget="many2many_tags" invisible="1" readonly="1" />
            </xpath>

            <xpath expr="//field[@name='location_id'][@groups='!stock.group_stock_multi_locations']" position="attributes">
                <attribute name="domain">[('id', 'in', user_allowed_location_ids)]</attribute>
            </xpath>
            <xpath expr="//field[@name='location_dest_id'][@groups='!stock.group_stock_multi_locations']" position="attributes">
                <attribute name="domain">[('id', 'in', user_allowed_location_ids)]</attribute>
            </xpath>
            <xpath expr="//field[@name='location_id'][@groups='stock.group_stock_multi_locations']" position="attributes">
                <attribute name="domain">[('id', 'in', user_allowed_location_ids)]</attribute>
            </xpath>
            <xpath expr="//field[@name='location_dest_id'][@groups='stock.group_stock_multi_locations']" position="attributes">
                <attribute name="domain">[('id', 'in', user_allowed_location_ids)]</attribute>
            </xpath>
        </field>
    </record>

</odoo>
