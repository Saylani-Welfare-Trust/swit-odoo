<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="base_view_users_form_inherit_bn_stock_location" model="ir.ui.view">
        <field name="name">base.view.users.form.inherit.bn.stock.location</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='access_rights']" position="after">
                <page name="inventory" string="Inventory">
                    <group>
                        <group name="inventory_col_1">
                          <field name="allowed_warehouse_ids" widget="many2many_tags" options="{'no_create': True, 'no_edit': True, 'no_open': True}" />  
                        </group>
                        <group name="inventory_col_1">
                          <field name="allowed_location_ids" widget="many2many_tags" options="{'no_create': True, 'no_edit': True, 'no_open': True}" domain="[('warehouse_id', 'in', allowed_warehouse_ids)]" />  
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
