<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="report_distribution_delivery_note">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <t t-foreach="docs" t-as="doc">
                        <div class="page">

                            <h2>Delivery Note:
                                <span t-esc="doc.name"/>
                            </h2>
                            <div>
                                <strong>Donee:</strong>
                                <span t-esc="doc.donee_id.name"/>
                                <br/>
                                <br/>
                                <strong>Date of Delivery:</strong>
                                <span t-field="doc.date_of_delivery"/>
                            </div>

                            <table class="table table-sm mt16">
                                <thead>
                                    <tr>
                                        <th>Item</th>
                                        <th>Quantity</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="doc.selection_ids" t-as="line">
                                        <td t-esc="line.product_id.name"/>
                                        <td t-esc="line.qty"/>
                                    </tr>
                                </tbody>
                            </table>

                            <div class="mt32">
                                <strong>Signature of Donee:</strong>
                                <div style="border-bottom:1px solid #000; width:300px; height:80px;"/>
                            </div>

                        </div>
                    </t>
                </t>
            </t>
        </template>


        <record id="action_delivery_note_report" model="ir.actions.report">
            <field name="name">Delivery Note</field>
            <field name="model">distribution.request</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">jahaiz.report_distribution_delivery_note</field>
            <field name="report_file">jahaiz.report_distribution_delivery_note</field>
            <!--            <field name="print_report_name">'Item_Slip_%s' % (object.name)</field>-->
            <!--            <field name="binding_model_id" ref="model_items_selection"/>-->
            <field name="binding_type">report</field>
        </record>


    </data>
</odoo>