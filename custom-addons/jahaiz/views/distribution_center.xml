<odoo>
    <record id="view_jahaiz_distribution_request_form" model="ir.ui.view">
        <field name="model">distribution.request</field>
        <field name="arch" type="xml">
            <form string="Distribution Center (Wedding Department)">
                <header>



                    <button name="action_issue_pr" type="object" string="Issue to SCD"/>

<!--                    <button name="action_receive_grn"-->
<!--                            type="object"-->
<!--                            string="Receive GRN"-->
<!--                            class="oe_highlight"/>-->

                    <button name="action_issue_delivery_note"
                            type="object"
                            string="Issue Delivery Note"
                            class="oe_highlight"/>


                    <button name="%(action_delivery_note_report)d" string="Print Delivery Note" type="action"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="donee_id"/>
                            <field name="date_request"/>
                            <field name="state" readonly="1"/>
                            <field name="purchase_req_id" invisible="1"/>
                        </group>

                        <group>
                            <field name="lead_time"/>
                            <field name="date_of_delivery"/>
                            <field name="location"/>
                            <field name="delivery_instruction"/>
                        </group>
                    </group>


                    <notebook>
                        <page string="Selection">
                            <field name="selection_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="qty"/>
                                </tree>
                            </field>

                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>

    <record id="view_jahaiz_distribution_request_tree" model="ir.ui.view">
        <field name="model">distribution.request</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="donee_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>


    <record id="action_jahaiz_distribution_request_tree" model="ir.actions.act_window">
        <field name="name">Distribution Center</field>
        <field name="res_model">distribution.request</field>
        <field name="view_mode">tree,form</field>
    </record>


</odoo>
