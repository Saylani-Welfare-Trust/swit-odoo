<odoo>
    <record id="view_jahaiz_request_form" model="ir.ui.view">
        <field name="model">jahaiz.request</field>
        <field name="arch" type="xml">
            <form string="Jahaiz Request">

                <header>
                    <button name="%(action_items_selection_delivery_slip_report)d" type="action" string="Print Slip"
                            invisible="state != 'approved'"/>
                </header>
                <sheet>

                    <group>
                        <group>
                            <field name="name"/>
                            <field name="donee_id"/>
                            <field name="date_request"/>
                            <field name="state" readonly="1"/>
                        </group>

                        <group>
                            <field name="lead_time"/>
                            <field name="date_of_delivery"/>
                            <field name="location"/>
                        </group>
                    </group>
                    <button name="action_welfare_approve" type="object" string="Approve Welfare"
                            invisible="state != 'selected'"/>


                    <notebook>
                        <page string="Selection">
                            <field name="selection_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="qty"/>
                                </tree>
                            </field>
                            <button name="action_confirm_selection" type="object" string="Confirm Selection"
                                    invisible="state != 'draft'"
                            />
                        </page>
                        <!--                        <page string="Procurement">-->
                        <!--                            <button name="action_create_pr" type="object" string="Create PR/PO"-->
                        <!--                                    invisible="state != 'selected'"-->
                        <!--                            />-->
                        <!--                        </page>-->
                        <!--                        <page string="Delivery">-->
                        <!--                            <group>-->
                        <!--                                <field name="slip_date"/>-->
                        <!--                                <field name="slip_location"/>-->
                        <!--                            </group>-->
                        <!--                            <button name="action_mark_done" type="object" string="Mark Delivered"-->
                        <!--                                    invisible="state != 'grn'"-->
                        <!--                            />-->
                        <!--                        </page>-->
                    </notebook>


                </sheet>
            </form>
        </field>
    </record>

    <record id="view_jahaiz_request_tree" model="ir.ui.view">
        <field name="model">jahaiz.request</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="donee_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>




    <record id="action_jahaiz_request_tree" model="ir.actions.act_window">
        <field name="name">Jahaiz Requests</field>
        <field name="res_model">jahaiz.request</field>
        <field name="view_mode">tree,form</field>
    </record>


    <menuitem id="menu_jahaiz_root" name="Jahaiz Department"/>
    <menuitem id="menu_jahaiz_requests" name="Requests" parent="menu_jahaiz_root"
              action="action_jahaiz_request_tree"/>

    <menuitem id="menu_jahaiz_action_jahaiz_distribution_request_tree" name="Distribution Center" parent="menu_jahaiz_root"
              action="action_jahaiz_distribution_request_tree"/>

</odoo>
