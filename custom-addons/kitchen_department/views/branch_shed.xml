<odoo>

    <!-- Menu Tree View -->
    <record id="view_branch_request_tree" model="ir.ui.view">
        <field name="name">branch.request.tree</field>
        <field name="model">branch.request</field>
        <field name="arch" type="xml">
            <tree string="Monthly Menus">
                <field name="branch_name"/>
                <field name="menu_month"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Menu Form View -->
    <record id="view_branch_request_form" model="ir.ui.view">
        <field name="name">branch.request.form</field>
        <field name="model">branch.request</field>
        <field name="arch" type="xml">
            <form string="Monthly Cooked Food Menu">

                <header>
                    <button name="action_send_to_kitchen" string="Send to Kitchen" type="object" invisible="state != 'draft'"/>
                </header>

                <sheet>
                    <group>
                        <field name="branch_name"/>
                        <field name="menu_month"/>
                        <field name="year"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,sent"/>
                    </group>

                    <notebook>
                        <page string="Menu Items">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="date"/>
                                    <field name="name"/>
                                    <field name="product_id" column_invisible="1"/>
                                    <field name="quantity"/>
                                </tree>

                            </field>
                        </page>
                    </notebook>

                    <footer>

                    </footer>

                </sheet>
            </form>
        </field>
    </record>


    <!-- Action & Menu Items -->
    <record id="action_branch_request" model="ir.actions.act_window">
        <field name="name">Kitchen Menus</field>
        <field name="res_model">branch.request</field>
        <field name="view_mode">tree,form</field>

    </record>



</odoo>
