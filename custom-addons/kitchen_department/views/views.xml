<odoo>

    <!-- Menu Tree View -->
    <record id="view_kitchen_menu_tree" model="ir.ui.view">
        <field name="name">kitchen.menu.tree</field>
        <field name="model">kitchen.menu</field>
        <field name="arch" type="xml">
            <tree string="Monthly Menus">
                <field name="name"/>
                <field name="menu_month"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Menu Form View -->
    <record id="view_kitchen_menu_form" model="ir.ui.view">
        <field name="name">kitchen.menu.form</field>
        <field name="model">kitchen.menu</field>
        <field name="arch" type="xml">
            <form string="Monthly Cooked Food Menu">
                <header>
                    <button name="action_submit"
                            string="Submit for Approval"
                            type="object"
                            invisible="state !=  'draft'"
                            class="btn-primary"/>

                    <button name="action_approve"
                            string="Approve"
                            type="object"
                            invisible="state !=  'to_approve'"
                            class="btn-success"/>


                    <button string="Cancel"
                            class="btn-secondary"
                            special="cancel"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="menu_month"/>
                        <field name="bom_id" invisible="1"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,to_approve,approved"/>
                    </group>

                    <notebook>
                        <page string="Menu Items">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                </tree>

                            </field>
                        </page>
                    </notebook>

                    <footer>

                    </footer>

                </sheet>
            </form>
        </field>
    </record>


    <!-- Menu Line Tree View (optional standalone) -->
    <record id="view_kitchen_menu_line_tree" model="ir.ui.view">
        <field name="name">kitchen.menu.line.tree</field>
        <field name="model">kitchen.menu.line</field>
        <field name="arch" type="xml">
            <tree string="Menu Items">
                <field name="menu_id"/>
                <field name="product_id"/>
            </tree>
        </field>
    </record>

    <!-- Ingredient Tree View (optional standalone) -->
    <record id="view_kitchen_menu_line_ingredient_tree" model="ir.ui.view">
        <field name="name">kitchen.menu.line.ingredient.tree</field>
        <field name="model">kitchen.menu.line.ingredient</field>
        <field name="arch" type="xml">
            <tree string="Ingredients">
                <field name="line_id"/>
                <field name="ingredient_id"/>
                <field name="percentage"/>
            </tree>
        </field>
    </record>

    <!-- Action & Menu Items -->
    <record id="action_kitchen_menu" model="ir.actions.act_window">
        <field name="name">Kitchen Menus</field>
        <field name="res_model">kitchen.menu</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_smiling_face">
                Create your monthly cooked food menu by the 20th!
            </p>
        </field>
    </record>

    <menuitem id="menu_kitchen_root" name="Kitchen" sequence="10"/>
    <menuitem id="menu_kitchen_menus"
              name="Menus"
              parent="menu_kitchen_root"
              action="action_kitchen_menu"
              sequence="1"/>

    <menuitem id="menu_branch_shed_req_menus"
              name="Branch/Sheds Request"
              parent="menu_kitchen_root"
              action="action_branch_request"
              sequence="5"/>

    <menuitem id="menu_branch_kitchen_req_menus"
              name="Monthly Request from Branches"
              parent="menu_kitchen_root"
              action="action_branch_kitchen_request"
              sequence="10"/>


    <menuitem id="menu_material_requisitions"
              name="Material Requisitions"
              parent="menu_kitchen_root"
              action="action_kitchen_requisition"
              sequence="10"/>


    <menuitem id="menu_branch_kitchen_request"
              name="Daily Branch Requests"
              parent="menu_kitchen_root"
              action="action_kitchen_daily_request"
              sequence="15"/>

</odoo>
