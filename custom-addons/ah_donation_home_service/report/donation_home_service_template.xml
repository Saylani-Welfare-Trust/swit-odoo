<odoo>
    <data>

        <template id="donation_home_service_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="mt-5 clearfix">
                            <div class="page" style="font-family: serif;">
                                <div class="mb-3">
                                    <h3 class="fw-bold">Donation Home Service Receipt
                                        <span style="color: #1571b9;">
                                            <t t-esc="o.name"/>
                                        </span>
                                    </h3>
                                </div>
                                <div>
                                    <div style="font-size:16px;">
                                        <div>
                                            <span class="fw-bold" style="width: 100px; display: inline-block; color: #99ca3c;">ID</span>
                                            <span>
                                                <t t-esc="o.name"/>
                                            </span>
                                        </div>
                                        <div>
                                            <t t-import="datetime"/>
                                            <span class="fw-bold" style="width: 100px; display: inline-block; color: #99ca3c;">Date</span>
                                            <span >
                                                <t t-esc="datetime.datetime.now().strftime('%Y-%m-%d')"/>
                                            </span>
                                        </div>
<!--                                        <div>-->
<!--                                            <span class="fw-bold" style="width: 100px; display: inline-block; color: #99ca3c;">Loan ID</span>-->
<!--                                            <span>-->
<!--                                                <t t-esc="o.loan_id.name"/>-->
<!--                                            </span>-->
<!--                                        </div>-->
                                        <div>
                                            <span class="fw-bold" style="width: 100px; display: inline-block; color: #99ca3c;">Customer</span>
                                            <span>
                                                <t t-esc="o.partner_id.name"/>
                                            </span>
                                        </div>
                                        <div>
                                            <span class="fw-bold" style="width: 100px; display: inline-block; color: #99ca3c;">Address</span>
                                            <span>
                                                <t t-esc="o.address"/>
                                            </span>
                                        </div>
                                        <div>
                                            <span class="fw-bold" style="width: 100px; display: inline-block; color: #99ca3c;">Mobile No.</span>
                                            <span>
                                                <t t-esc="o.phone_no"/>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="mt-3">
                                    <table class="table fw-bold">
                                        <thead style="color: #99ca3c;">
                                            <tr>
                                                 <td><span>Product</span></td>
                                                 <td><span>Quantity</span></td>
                                                 <td style="text-align:right;"><span>Amount</span></td>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <t t-foreach="o.donation_product_lines" t-as="line">
                                                <tr>
                                                    <td><span t-field="line.product_id.name"/></td>
                                                    <td><span t-field="line.quantity"/></td>
                                                    <td style="text-align:right;">
                                                        <span t-field="line.amount"/>
                                                    </td>
                                                </tr>
                                            </t>
                                        </tbody>
                                    </table>
                                </div>
                                <div>
<!--                                    <img class="w-25" src="/donation_home_service/static/paid_stamp.png"/>-->
                                    <div class="fw-bold" style="width:40%; float:right; ">
                                    <table class="table">
                                        <tr>
                                            <td style="color:white; background-color: #1571b9;">
                                                <span>Subtotal</span>
                                                <span style="float:right;" t-field="o.subtotal"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="color:white; background-color: #1571b9;">
                                                <span>Service Charges</span>
                                                <span style="float:right;" t-field="o.delivery_charges"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="color:white; background-color: black;">
                                                <span>Total Amount</span>
                                                <span style="float:right;" t-field="o.total_amount"/>
                                            </td>
                                        </tr>
<!--                                        <tr>-->
<!--                                            <td style="color:white; background-color: black;">-->
<!--                                                <span>Paid by</span>-->
<!--                                                <span t-field="o.payment_type"/>-->
<!--                                                <span>on</span>-->
<!--                                                <span t-field="o.date"/>-->
<!--                                            </td>-->
<!--                                        </tr>-->
                                    </table>
                                </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>

    </data>
</odoo>