<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

         <record id="ah_stock_picking_view_form" model="ir.ui.view">
            <field name="name">ah.stock.picking.view.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='%(stock.act_stock_return_picking)d']" position="attributes">
                    <attribute name="invisible">state != 'done' or is_donation_home_service == True</attribute>
                </xpath>
                <xpath expr="//button[@name='action_cancel']" position="after">
                    <field name="is_donation_home_service" invisible="1"/>
                    <field name="is_dhs_returned" invisible="1"/>
                    <button name="action_receive_product" invisible="state not in ('done') or is_donation_home_service == False or state not in ('done') and is_dhs_returned == True" string="Receive Items" type="object" class="oe_highlight"/>
                    <button name="action_cancel_order" invisible="state not in ('done') or is_donation_home_service == False or state not in ('done') and is_dhs_returned == True" string="Cancel Order" type="object"/>
                </xpath>
            </field>
         </record>

    </data>
</odoo>
