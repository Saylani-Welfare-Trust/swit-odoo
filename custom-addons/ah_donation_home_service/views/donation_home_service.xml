<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
     <record id="view_donation_home_service_tree" model="ir.ui.view">
            <field name="name">view.donation.home.service.tree</field>
            <field name="model">donation.home.service</field>
            <field name="arch" type="xml">
                <tree default_order="create_date desc">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="state"/>
                </tree>
            </field>
     </record>


    <record id="view_donation_home_service_form" model="ir.ui.view">
            <field name="name">view.donation.home.service.form</field>
            <field name="model">donation.home.service</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="confirm_donation" string="Confirm Donation" type="object" class="oe_highlight" invisible="state != 'draft'"/>
<!--                        <button name="deposit_cheque" string="Deposit Cheque" type="object" class="oe_highlight" invisible="state != 'pending' or payment_type == 'cash'"/>-->
                        <button name="confirm_payment" string="Confirm Payment" type="object" class="oe_highlight" invisible="state == 'pending' and payment_type == 'cheque' or state in ('draft','paid','cheque_bounced','cancel')"/>
                        <button name="bounce_cheque" string="Bounced" type="object" class="oe_highlight" invisible="state != 'cheque_deposited'"/>
                        <button name="cancel_donation" string="Cancel" type="object" invisible="state != 'pending'"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,pending,paid"/>
                    </header>
                    <sheet>
                        <widget name="web_ribbon" title="Paid" invisible="state != 'paid'"/>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="partner_id" readonly="state != 'draft'"/>
                                <field name="address" readonly="state != 'draft'"/>
                                <field name="phone_no" readonly="state != 'draft'"/>
                                <field name="payment_type" required="1" readonly="state not in ('draft','pending')"/>
                                <field name="picking_id" invisible="1"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                            <group>
                                <field name="bank_id" readonly="state != 'pending'" invisible="payment_type == 'cash' or state == 'draft'" required="1"/>
                                <field name="cheque_number" readonly="state != 'pending'" invisible="payment_type == 'cash' or state == 'draft'" required="1"/>
                                <field name="cheque_date" readonly="state != 'pending'" invisible="payment_type == 'cash' or state == 'draft'" required="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Product Lines">
                                <field name="donation_product_lines" readonly="state != 'draft'">
                                    <tree editable="bottom">
                                        <field name="currency_id" column_invisible="1"/>
                                        <field name="product_id" options="{'no_quick_create': True, 'no_create_edit': True}"/>
                                        <field name="quantity"/>
                                        <field name="amount" readonly="1" force_save="1"/>
                                    </tree>
                                </field>
                                <group class="oe_subtotal_footer">
                                    <field name="subtotal" readonly="1" force_save="1"/>
                                    <field name="delivery_charges" readonly="state != 'draft'"/>
                                    <field name="total_amount" readonly="1" force_save="1"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
     </record>

    <record id="action_donation_home_service" model="ir.actions.act_window">
        <field name="name">Donation Home Service</field>
        <field name="res_model">donation.home.service</field>
        <field name="view_mode">tree,form</field>
    </record>

    

</odoo>