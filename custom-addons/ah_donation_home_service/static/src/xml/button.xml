<?xml version="1.0" encoding="UTF-8"?>

<templates id="ah_donation_home_service" xml:space="preserve">

    <t t-name="ah_donation_home_service.DonationHomeServiceButton">
        <button class="control-button btn btn-light rounded-0 fw-bolder" t-on-click="() => this.NewDonationOrder()">
            <i aria-label="DonationHomeService" title="DonationHomeService"/>
            <span>Donation Home Service</span>
        </button>
    </t>

    <t t-name="ah_donation_home_service.OperationSelection">
        <div class="popup">
            <div class="modal-header">
                <h2>Please Select</h2>
            </div>
            <div class="mt-3 mb-3">
                <div class="mb-2 mt-2">
                    <button class="w-50 btn-secondary control-button btn rounded-0 fw-bolder" t-on-click="() => this.NewDonationOrder()">
                        <i aria-label="NewDonationOrder" title="NewDonationOrder"/>
                        <span>New Donation Order</span>
                    </button>
                </div>
                <div class="mb-2 mt-2">
                    <button class="w-50 btn-secondary control-button btn rounded-0 fw-bolder" t-on-click="() => this.PayForDonation()">
                        <i aria-label="DonationHomeService" title="DonationHomeService"/>
                        <span>Pay for Donation</span>
                    </button>
                </div>
                <div class="mb-2 mt-2">
                    <button class="w-50 btn-secondary control-button btn rounded-0 fw-bolder" t-on-click="() => this.CancelDonation()">
                        <i aria-label="CancelDonation" title="CancelDonation"/>
                        <span>Cancel Donation</span>
                    </button>
                </div>
            </div>
            <footer class="footer modal-footer">
                <button type="button" class="btn btn-secondary" t-on-click="cancel">Cancel</button>
            </footer>
        </div>
    </t>

    <t t-name="ah_donation_home_service.NewDonationOrderPoPup">
