                    <span style="width:120px; display:inline-block;">Address:</span>
                    <span class="fw-bold" t-esc="this.customer_address"/>
                </div>
                <div style="text-align:left; display:flex;">
                    <span style="width:120px; display:inline-block;">Payment Type:</span>
                    <select style="width:auto;" t-on-change="onPaymentTypeChange">
                        <option value="cash">Cash</option>
                        <option value="cheque">Cheque</option>
                    </select>
                </div>
                <div style="text-align:left;">
                    <span style="width:120px; display:inline-block;">Subtotal:</span>
                    <span class="fw-bold" t-esc="this.state.subtotal"/>
                </div>

