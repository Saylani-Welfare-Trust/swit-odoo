                <div style="text-align:left; display:flex;">
                    <span style="width:120px; display:inline-block;">Service Charges:</span>
                    <span>
                        <input type="text" t-att-value="this.state.delivery_charges" id="delivery_charges" name="delivery_charges" required="True" t-on-change="onDeliveryChargesChange"/>
                    </span>
                </div>
                <div style="text-align:left;">
                    <span style="width:120px; display:inline-block;">Total:</span>
                    <span class="fw-bold" t-esc="this.state.total"/>
                </div>
            </div>
            <footer class="footer modal-footer">
                <button type="button" class="btn btn-primary" t-on-click="confirmDonation">Confirm</button>
