<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="OrderReceipt" t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension">
        <xpath expr="//ReceiptHeader" position="after">
        <img t-attf-src="/report/barcode/?barcode_type=Codabar&amp;value=#{props.data.barcode}" style="max-height: 50px"/>
        </xpath>
        <xpath expr="//div[hasclass('receipt-change')]" position="after">
            <t t-if="props.data.description">
                Description: 
                <p t-esc="props.data.description"/>
            </t>
        </xpath>
    </t>
</templates>
