<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="pos_registered_order_tree" model="ir.ui.view">
        <field name="name">pos.registered.order.tree</field>
        <field name="model">pos.registered.order</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="pos_reference"/>
                <field name="partner_id"/>
                <field name="registrar"/>
                <field name="create_date" optional="hide"/>
                <field name="state" 
                       widget="badge" 
                       decoration-info="state == 'expire'" 
                       decoration-success="state == 'active'"/>
            </tree>
        </field>
    </record>
</odoo>
