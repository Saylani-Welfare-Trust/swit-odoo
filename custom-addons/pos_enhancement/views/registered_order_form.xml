<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <record id="pos_registered_order_form" model="ir.ui.view">
        <field name="name">pos.registered.order.form</field>
        <field name="model">pos.registered.order</field>
        <field name="arch" type="xml">
            <form>
            <sheet>
                <header>
                    <button name="active_deactive" type="object" class="btn-secondary" string="Deactive" invisible="state == 'expire'"/>
                    <field name="state" widget="statusbar" statusbar_visible="active,expire" readonly="1"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="registrar"/>
                            <field name="pos_reference"/>
                            <field name="order_type"/>
                            <field name="analytic_account_ids" widget="many2many_tags"/>
                            <field name="description" />

                        </group>
                        <group>
                            <field name="create_date" readonly="1"/>
                            <field name="barcode"/>
                            <field name="disbursement_type"/>
                            <field name="cash_transaction_type" invisible="disbursement_type == 'in_kind'"/>
                            <field name="in_kind_transaction_type" invisible="disbursement_type == 'cash'"/>
                            <field name="reprint_support" invisible="order_type != 'recurring'"/>

                        </group>
                    </group>

                    <notebook>
                        <page string="Order Lines" name="order_lines">

                            <field name="order_lines" >
                                <tree string="Documents" editable="bottom">
                                    <control>
                                        <create name="add_order_line" string="Add a Line"/>
                                    </control>

                                    <field name="product_id" required="1"/>
                                    <field name="product_tmpl_id" optional="hide" readonly="1"/>
                                    <field name="qty" required="1"/>
                                    <field name="price_unit" required="1"/>
                                </tree> 
                            </field>
                        </page>
                        <page string="Validation Lines" name="validation_lines">

                            <field name="validation_lines" readonly="1">
                                <tree string="Documents" editable="bottom">

                                    <field name="print_date"/>
                                    <field name="validation_date"/>
                                    <field name="reference_no"/>
                                    <field name="validated_by"/>
                                </tree> 
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </sheet>
            </form>
        </field>
    </record>


</odoo>