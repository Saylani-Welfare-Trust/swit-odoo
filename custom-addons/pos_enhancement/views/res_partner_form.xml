<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_partner_form" model="ir.ui.view">
        <field name="name">res.partner.from</field>
        <field name="model">res.partner</field>
        <field eval="20" name="priority"/>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">

            <div name="button_box" position="inside">
                <button invisible="not is_student" class="oe_stat_button" type="object" name="action_view_fee_vouchers"
                    icon="fa-usd">
                    <field string="Fee Vouchers" name="fee_voucher_count" widget="statinfo"/>
                </button>
            </div>

            <xpath expr="//field[@name='vat']" position="after">
                <field name="gender" invisible="company_type=='company'"/>
                <field name="date_of_birth" invisible="company_type=='company'"/>
                <field name="age" invisible="company_type=='company'"/>
            </xpath>

            <xpath expr="//field[@name='category_id']" position="after">
                <field name="cnic_no" invisible="company_type=='company'"/>
                <field name="is_student" invisible="company_type=='company'"/>
            </xpath>
            
        </field>
    </record>

</odoo>
