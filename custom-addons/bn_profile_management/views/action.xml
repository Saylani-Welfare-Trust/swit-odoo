<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Donee -->
    <record id="master_donee_action" model="ir.actions.act_window">
        <field name="name">Master Donee</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('is_donee', '=', True), ('registration_category', '=', 'donee')]</field>
        <field name="context">{
            'default_is_donee': True,
            'default_donee_type': 'individual',
            'default_registration_category': 'donee',
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Lets Create a New Donee
            </p>
        </field>
        <field name="view_ids"
            eval="[(5, 0, 0),
                    (0, 0, {'view_mode': 'tree', 'view_id': ref('bn_profile_management.custom_donee_res_partner_view_tree')}),
                    (0, 0, {'view_mode': 'form', 'view_id': ref('bn_profile_management.custom_donee_res_partner_view_form')})]"/>
    </record>
    
    <!-- Donor -->
    <record id="master_donor_action" model="ir.actions.act_window">
        <field name="name">Master Donor</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('is_donee', '=', False), ('registration_category', '=', 'donor')]</field>
        <field name="context">{
            'default_is_donee': False,
            'default_donor_type': 'individual',
            'default_registration_category': 'donor',
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Lets Create a New Donor
            </p>
        </field>
        <field name="view_ids"
            eval="[(5, 0, 0),
                    (0, 0, {'view_mode': 'tree', 'view_id': ref('bn_profile_management.custom_donor_res_partner_view_tree')}),
                    (0, 0, {'view_mode': 'form', 'view_id': ref('bn_profile_management.custom_donor_res_partner_view_form')})]"/>
    </record>

</odoo>
