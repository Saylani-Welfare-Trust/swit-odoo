<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_report_donee_form" model="ir.actions.report">
        <field name="name">Donee Form</field>
        <field name="model">res.partner</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">bn_profile_management.donee_form</field>
        <field name="report_file">bn_profile_management.donee_form</field>
        <field name="print_report_name">'%s' % object.name</field>
        <field name="binding_model_id" ref="model_res_partner"/>
        <field name="binding_type">report</field>
    </record>

    <template id="donee_form" name="Donee Form">
        <t t-call="web.html_container">
           <t t-call="web.external_layout">
                <section name="Title">
                    <t t-if="docs.is_microfinance">
                        <center>
                            <h1>MicroFinance Application</h1>
                        </center>
                    </t>
                    <t t-elif="docs.is_welfare">
                        <center>
                            <h1>Welfare Application</h1>
                        </center>
                    </t>
                </section>
                <br/><br/>
                <section name="print_detail" style="width: 80%;">
                    <div class="row">
                        <div class="col-4">
                            <span>Date : </span>
                        </div>
                        <div class="col-4">
                            <t t-esc="datetime.date.today()"/>
                        </div>
                        <div class="col-4">
                            <span>Master Donee No. : </span>
                        </div>
                        <div class="col-4">
                            <t t-esc="docs.barcode"/>
                        </div>
                    </div>
                    <br/>
                    <div class="row">
                        <div class="col-4">
                            <span>Name : </span>
                        </div>
                        <div class="col-4">
                            <t t-esc="docs.name"/>
                        </div>
                        <div class="col-4">
                            <span>Mobile : </span>
                        </div>
                        <div class="col-4">
                            <t t-esc="docs.mobile"/>
                        </div>
                    </div>
                    <br/>
                    <div class="row">
                        <div class="col-4">
                            <span>CNIC No. : </span>
                        </div>
                        <div class="col-4">
                            <t t-esc="docs.cnic_no"/>
                        </div>
                        <div class="col-4">
                            <span>City : </span>
                        </div>
                        <div class="col-4">
                            <t t-esc="docs.city"/>
                        </div>
                    </div>
                    <br/>
                    <div class="row">
                        <div class="col-4">
                            <span>Branch : </span>
                        </div>
                        <div class="col-4">
                            <t t-esc="docs.branch_id.name"/>
                        </div>
                        <t t-if="docs.is_microfinance">
                            <div class="col-4">
                                <span>Scheme Type : </span>
                            </div>
                            <div class="col-4">
                                <t t-esc="docs.scheme_type_ids[-1].name"/>
                            </div>
                        </t>
                        <t t-elif="docs.is_welfare">
                            <div class="col-4">
                                <span>Disbursement Type : </span>
                            </div>
                            <div class="col-4">
                                <!-- <t t-esc="docs.disbursement_type_ids[-1].name"/> -->
                            </div>
                        </t>
                        <t t-else="">
                            <div class="col-4">
                                <span>Donee Type : </span>
                            </div>
                            <div class="col-4">
                                <t t-esc="docs.donee_type.title()"/>
                            </div>
                        </t>
                    </div>
                    <br/>
                    <div class="row">
                        <div class="col-4">
                            <span>Gender : </span>
                        </div>
                        <div class="col-4">
                            <t t-esc="docs.gender.title()"/>
                        </div>
                        <div class="col-4">
                            <span>DOB : </span>
                        </div>
                        <div class="col-4">
                            <t t-esc="docs.date_of_birth"/>
                        </div>
                    </div>
                    <br/>
                    <div class="row">
                        <div class="col-4">
                            <span>Religion : </span>
                        </div>
                        <div class="col-4">
                            <t t-esc="docs.religion_category.title()"/>
                        </div>
                        <div class="col-4">
                            <span>Next Kin : </span>
                        </div>
                        <div class="col-4">
                            <t t-esc="docs.next_kin"/>
                        </div>
                    </div>
                    <br/>
                    <div class="row">
                        <div class="col-4">
                            <span>Address : </span>
                        </div>
                        <div class="col-4">
                            <t t-esc="docs.street"/>
                        </div>
                        <div class="col-4">
                            <span>Nearest Land Mark : </span>
                        </div>
                        <div class="col-4">
                            <t t-esc="docs.nearest_land_mark"/>
                        </div>
                    </div>
                    <br/>
                    <div class="row">
                        <div class="col-4">
                            <span>Father Name : </span>
                        </div>
                        <div class="col-4">
                            <t t-esc="docs.father_name"/>
                        </div>
                        <div class="col-4">
                            <span>Surname : </span>
                        </div>
                        <div class="col-4">
                            <t t-esc="docs.surname_name"/>
                        </div>
                    </div>
                    <br/>
                    <div class="row">
                        <div class="col-4">
                            <span>Married Status : </span>
                        </div>
                        <div class="col-4">
                            <t t-esc="docs.martial_status.title()"/>
                        </div>
                        <t t-if="docs.martial_status == 'married'">
                            <div class="col-4">
                                <span>Spouse Name : </span>
                            </div>
                            <div class="col-4">
                                <t t-esc="docs.spouse_name"/>
                            </div>
                        </t>
                    </div>
                    <br/>
                    <div class="row">
                        <div class="col-4">
                            <span>Bank / Wallet Account : </span>
                        </div>
                        <div class="col-4" />
                        <div class="col-4">
                            <span>Details : </span>
                        </div>
                        <div class="col-4" />
                    </div>
                </section>
           </t>
        </t>
    </template>

</odoo>
