<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="user_profile_report" name="Donee Form">
        <t t-call="web.html_container">
           <t t-call="web.external_layout">
                <section name="Title">
                    <t t-if="'MicroFinance' in docs.category_id.mapped('name')">
                        <center>
                            <h1>MicroFinance Application</h1>
                        </center>
                    </t>
                    <t t-elif="'Welfare' in docs.category_id.mapped('name')">
                        <center>
                            <h1>Welfare Application</h1>
                        </center>
                    </t>
                    <t t-else="">
                        <center>
                            <h1>User Profile</h1>
                        </center>
                    </t>
                </section>
                <br/><br/>
                <section name="print_detail" style="width: 80%;">
                    <div class="row">
                        <div class="col-4">
                            <span>Date : </span>
                        </div>
                        <div class="col-4">
                            <t t-esc="datetime.date.today()"/>
                        </div>
                        <div class="col-4">
                            <span>Master Donee No. : </span>
                        </div>
                        <div class="col-4">
                            <t t-esc="docs.primary_registration_id"/>
                        </div>
                    </div>
                    <br/>
                    <div class="row">
                        <div class="col-4">
                            <span>Name : </span>
                        </div>
                        <div class="col-4">
                            <t t-esc="docs.name"/>
                        </div>
                        <div class="col-4">
                            <span>Mobile : </span>
                        </div>
                        <div class="col-4">
                            <t t-esc="docs.mobile"/>
                        </div>
                    </div>
                    <br/>
                    <div class="row">
                        <div class="col-4">
                            <span>CNIC No. : </span>
                        </div>
                        <div class="col-4">
                            <t t-esc="docs.cnic_no"/>
                        </div>
                        <div class="col-4">
                            <span>City : </span>
                        </div>
                        <div class="col-4">
                            <t t-esc="docs.city"/>
                        </div>
                    </div>
                    <br/>
                    <div class="row">
                        <div class="col-4">
                            <span>Branch : </span>
                        </div>
                        <div class="col-4">
                            <t t-esc="docs.analytic_account_id.name"/>
                        </div>
                    </div>
                    <br/>
                    <div class="row">
                        <div class="col-4">
                            <span>Gender : </span>
                        </div>
                        <div class="col-4">
                            <t t-if="docs.gender" t-esc="docs.gender.title()"/>
                        </div>
                        <div class="col-4">
                            <span>DOB : </span>
                        </div>
                        <div class="col-4">
                            <t t-esc="docs.date_of_birth"/>
                        </div>
                    </div>
                    <br/>
                    <div class="row">
                        <div class="col-4">
                            <span>Religion : </span>
                        </div>
                        <div class="col-4">
                            <t t-if="docs.religion" t-esc="docs.religion.title()"/>
                        </div>
                        <div class="col-4">
                            <span>Next Kin : </span>
                        </div>
                        <div class="col-4">
                            <t t-esc="docs.next_kin"/>
                        </div>
                    </div>
                    <br/>
                    <div class="row">
                        <div class="col-4">
                            <span>Address : </span>
                        </div>
                        <div class="col-4">
                            <t t-esc="docs.street"/>
                        </div>
                        <div class="col-4">
                            <span>Nearest Land Mark : </span>
                        </div>
                        <div class="col-4">
                            <t t-esc="docs.nearest_land_mark"/>
                        </div>
                    </div>
                    <br/>
                    <div class="row">
                        <div class="col-4">
                            <span>Father Name : </span>
                        </div>
                        <div class="col-4">
                            <t t-esc="docs.father_name"/>
                        </div>
                        <div class="col-4">
                            <span>Surname : </span>
                        </div>
                        <div class="col-4">
                            <t t-esc="docs.surname"/>
                        </div>
                    </div>
                    <br/>
                    <div class="row">
                        <div class="col-4">
                            <span>Married Status : </span>
                        </div>
                        <div class="col-4">
                            <t t-if="docs.martial_status" t-esc="docs.martial_status.title()"/>
                        </div>
                        <t t-if="docs.martial_status == 'married'">
                            <div class="col-4">
                                <span>Spouse Name : </span>
                            </div>
                            <div class="col-4">
                                <t t-esc="docs.spouse_name"/>
                            </div>
                        </t>
                    </div>
                    <br/>
                    <div class="row">
                        <div class="col-4">
                            <span>Bank / Wallet Account : </span>
                        </div>
                        <div class="col-4">
                            <t t-esc="docs.bank_wallet_account"/>
                        </div>
                        <div class="col-4">
                            <span>Details : </span>
                        </div>
                        <div class="col-4">
                            <t t-esc="docs.details"/>
                        </div>
                    </div>
                </section>
           </t>
        </t>
    </template>

    <record id="action_profile_management_report" model="ir.actions.report">
        <field name="name">User Profile Report</field>
        <field name="model">res.partner</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">bn_profile_management.user_profile_report</field>
        <field name="report_file">bn_profile_management.user_profile_report</field>
        <field name="print_report_name">'%s' % object.name</field>
        <field name="binding_model_id" ref="model_res_partner"/>
        <field name="binding_type">report</field>
    </record>

</odoo>
