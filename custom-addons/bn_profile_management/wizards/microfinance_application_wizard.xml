<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="microfinance_application_wizard_form" model="ir.ui.view">
        <field name="name">microfinance.application.wizard.form</field>
        <field name="model">microfinance.application.wizard</field>
        <field name="arch" type="xml">
            <form string="Print Microfinance Application">
                <group>
                    <field name="partner_id" invisible="1"/>
                    <field name="microfinance_scheme_id" options="{'no_create': True, 'no_edit': True, 'no_open': True}"/>
                </group>
                <footer>
                    <button string="Print Application" name="action_print_application" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_microfinance_application_wizard" model="ir.actions.act_window">
        <field name="name">Select Microfinance Scheme</field>
        <field name="res_model">microfinance.application.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="microfinance_application_wizard_form"/>
        <field name="target">new</field>
    </record>
</odoo>
