<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record model="ir.ui.view" id="bn_closing_session_config_settings_inherit">
       <field name="name">res.config.settings.view.form.inherit.bn.closing.session</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <block id="pos_accounting_section" position="inside">
                <setting groups="account.group_account_readonly">
                    <label string="Default Restricted Temporary Account" for="account_default_pos_restricted_receivable_account_id"/>
                    <i class="fa fa-info-circle me-1" title="This setting is common to all PoS." pos-data-toggle="tooltip"/>
                    <div class="text-muted">
                        Intermediary account used for unidentified customers.
                    </div>
                    <field name="account_default_pos_restricted_receivable_account_id" colspan="4" nolabel="1" domain="[('reconcile', '=', True), ('account_type', '=', 'asset_receivable')]"/>
                </setting>
                <setting groups="account.group_account_readonly">
                    <label string="Default Unrestricted Temporary Account" for="account_default_pos_unrestricted_receivable_account_id"/>
                    <i class="fa fa-info-circle me-1" title="This setting is common to all PoS." pos-data-toggle="tooltip"/>
                    <div class="text-muted">
                        Intermediary account used for unidentified customers.
                    </div>
                    <field name="account_default_pos_unrestricted_receivable_account_id" colspan="4" nolabel="1" domain="[('reconcile', '=', True), ('account_type', '=', 'asset_receivable')]"/>
                </setting>
            </block>
        </field>
    </record>
    
</odoo>
