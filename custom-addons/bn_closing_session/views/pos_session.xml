<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="point_of_sale_view_pos_session_form_inherit_bn_closing_session" model="ir.ui.view">
        <field name="name">point.of.sale.view.pos.session.form.inherit.bn.closing.session</field>
        <field name="model">pos.session</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_session_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='oe_button_box']" position="inside">
                <button name="show_session_slip" type="object" class="oe_stat_button" icon="fa-bars">
                    <div class="o_stat_info">
                        <span class="o_stat_text">Deposit Slips</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>

</odoo>
