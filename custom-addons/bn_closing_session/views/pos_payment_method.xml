<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_pos_payment_method_form_inherit" model="ir.ui.view">
        <field name="name">pos.payment.method.form.inherit</field>
        <field name="model">pos.payment.method</field>
        <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='receivable_account_id']" position="after">
                <field name="restricted_account_id" groups="account.group_account_readonly" invisible="split_transactions" placeholder="Leave empty to use the default account from the company setting"/>
                <field name="unrestricted_account_id" groups="account.group_account_readonly" invisible="split_transactions" placeholder="Leave empty to use the default account from the company setting"/>
            </xpath>

        </field>
    </record>

</odoo>
