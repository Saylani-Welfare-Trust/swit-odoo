<odoo>
    <data>

        <record id="view_adv_don_category_tree" model="ir.ui.view">
            <field name="name">view.adv.don.category.tree</field>
            <field name="model">adv.don.category</field>
            <field name="arch" type="xml">
                <tree default_order="create_date desc">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="view_adv_don_category_form" model="ir.ui.view">
            <field name="name">view.adv.don.category.form</field>
            <field name="model">adv.don.category</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Product Lines">
                                <field name="category_lines">
                                    <tree editable="bottom">
                                        <field name="product_id"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_adv_don_category" model="ir.actions.act_window">
            <field name="name">Category</field>
            <field name="res_model">adv.don.category</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>