<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="view_advance_donation_account_conf_tree" model="ir.ui.view">
            <field name="name">view.advance.donation.account.conf.tree</field>
            <field name="model">ah.adv.don.account.conf</field>
            <field name="arch" type="xml">
                <tree editable="bottom" create="false" delete="false" default_order="create_date asc">
                    <field name="name" readonly="True"/>
                    <field name="account_id" options="{'no_create': True, 'no_edit': True}" />
                </tree>
            </field>
        </record>

        <record id="view_advance_donation_account_conf_search" model="ir.ui.view">
            <field name="name">view.advance.donation.account.conf.search</field>
            <field name="model">ah.adv.don.account.conf</field>
            <field name="arch" type="xml">
                <search>
                    <group expand="0" string="Group By">
                        <filter name="group_account_conf" string="Account Configuration" domain="[]" context="{'group_by': 'account_type'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_advance_donation_account" model="ir.actions.act_window">
            <field name="name">Chart of Account Configuration</field>
            <field name="res_model">ah.adv.don.account.conf</field>
            <field name="view_mode">tree</field>
            <field name="context">{'search_default_group_account_conf': 1}</field>
        </record>

    </data>
</odoo>