<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="microfinance_installment_view_tree" model="ir.ui.view">
        <field name="name">microfinance.installment.view.tree</field>
        <field name="model">microfinance.installment</field>
        <field name="arch" type="xml">
            <tree create="0" edit="0">
                <field name="name" />
                <field name="date" />
                <field name="payment_type" />
                <field name="payment_method" />
                <field name="donee_id" />
                <field name="cnic_no" />
                <field name="bank_name" />
                <field name="cheque_no" />
                <field name="cheque_date" />
                <field name="amount" />
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-success="state == 'paid'"/>
            </tree>
        </field>
    </record>

    <record id="microfinance_security_action" model="ir.actions.act_window">
        <field name="name">Security Receipts</field>
        <field name="res_model">microfinance.installment</field>
        <field name="view_mode">tree</field>
        <field name="domain">[('payment_type', '=', 'security')]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Waiting for a Security Deposite....
            </p>
        </field>
    </record>
    
    <record id="microfinance_installment_action" model="ir.actions.act_window">
        <field name="name">Installment Receipts</field>
        <field name="res_model">microfinance.installment</field>
        <field name="view_mode">tree</field>
        <field name="domain">[('payment_type', '=', 'installment')]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Waiting for a Installment Deposite....
            </p>
        </field>
    </record>

    <menuitem
        id="microfinance_installment_menu"
        name="Security &amp; Installment Receipt"
        action="microfinance_installment_action"
        parent="bn_microfinance.microfinance_menu"
        sequence="1"/>

    <menuitem
        id="security_receipt_menu"
        name="Security Receipt"
        action="microfinance_security_action"
        parent="microfinance_installment_menu"
        sequence="1"/>

    <menuitem
        id="installment_receipt_menu"
        name="Installment Receipt"
        action="microfinance_installment_action"
        parent="microfinance_installment_menu"
        sequence="1"/>

</odoo>
