<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_product_normal_form_view_inherit_bn_microfinance" model="ir.ui.view">
        <field name="name">product.product.normal.form.view.inherit.bn.microfinance</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='options']" position="inside">
                <span class="d-inline-flex">
                    <field name="is_microfinance" on_change="1" field_id="is_microfinance"/>
                    <label for="is_microfinance"/>
                </span>
            </xpath>
        </field>
    </record>

</odoo>
