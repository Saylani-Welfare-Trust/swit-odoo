<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="donation_box_registration_installation_view_form" model="ir.ui.view">
        <field name="name">donation.box.registration.installation.view.form</field>
        <field name="model">donation.box.registration.installation</field>
        <field name="arch" type="xml">
            <form create="0">
                <header>
                    <!-- <button string="Create Donor" name="action_create_donor" type="object" class="oe_highlight"/> -->
                    <button name="action_install" string="Install" type="object" class="oe_highlight" invisible="status in ['installed', 'approved', 'available']" />
                    <button name="action_approved" string="Approved" type="object" class="oe_highlight" invisible="status in ['draft', 'approved', 'available']" groups="bn_donation_box.donation_box_registration_installation_approve_group" />
                    
                    <field name="status" widget="statusbar" statusbar_visible="draft, installed, approved, available"/>
                </header>
                
                <sheet>
                    <div class="oe_title">
                        <label for="request_no" />
                        <h1><field name="request_no" class="oe_inline" readonly="1" /></h1>
                    </div>

                    <group>
                        <group name="donation_box_registration_installation_col_1">
                            <field name="employee_category_1_id" invisible="1" />
                            <field name="employee_category_2_id" invisible="1" />

                            <field name="name" string="Registration No." readonly="1" />
                            <field name="shop_name" required="1" readonly="status in ['approved', 'available']" />
                            <field name="contact_person" required="1" readonly="status in ['approved', 'available']" />
                            <field name="location" required="1" readonly="status in ['approved', 'available']" />
                            <field name="rider_id" string="Rider" domain="[('category_ids', 'in', [employee_category_1_id])]" options="{'no_create': True, 'no_edit': True, 'no_open': True}"  required="status == 'installed'" invisible="status not in ['installed', 'approved']" />
                            <field name="installer_id" string="Installer" domain="[('category_ids', 'in', [employee_category_2_id])]" options="{'no_create': True, 'no_edit': True, 'no_open': True}" readonly="1" />
                            <field name="product_id" string="Box Category" options="{'no_create': True, 'no_edit': True, 'no_open': True}" readonly="1" />
                            <field name="lot_id" options="{'no_create': True, 'no_edit': True, 'no_open': True}" string="Box No." readonly="1" />
                            <field name="box_status" readonly="1" />
                        </group>
                        <group name="donation_box_registration_installation_col_2">
                            <!-- <field name="donor_id" domain="[('is_donee', '=', False), ('registration_category', '=', 'donor')]" string="Donor Name" options="{'no_create': True, 'no_edit': True, 'no_open': True}" readonly="status in ['approved', 'available']" /> -->
                            <field name="donor_id" string="Donor" options="{'no_create': True, 'no_edit': True, 'no_open': True}" readonly="status in ['approved', 'available']" />
                            <label for="contact_no"/>
                            <div style="display: flex;"><field options="{'no_create': True, 'no_edit': True, 'no_open': True}" style="width: 30% !important;" name="country_id" readonly="status in ['approved', 'available']" required="1"/> <field style="width: 70% !important;" name="contact_no" required="1" readonly="status in ['approved', 'available']" /></div>
                            <field name="installation_date" required="1" readonly="status in ['approved', 'available']" />
                            <field name="installation_category_id" string="Installation Category" options="{'no_create': True, 'no_edit': True, 'no_open': True}" required="1" readonly="status in ['approved', 'available']" />
                            <field name="city_id" string="City" domain="[('location_option_id.name', '=', 'City')]" options="{'no_create': True, 'no_edit': True, 'no_open': True}" required="status == 'installed'" />
                            <field name="zone_id" string="Zone" domain="[('parent_id', '=', city_id)]" options="{'no_create': True, 'no_edit': True, 'no_open': True}" required="status == 'installed'" invisible="city_id == False" />
                            <field name="sub_zone_id" string="Sub Zone" domain="[('analytic_account_id', '=', zone_id)]" options="{'no_create': True, 'no_edit': True, 'no_open': True}" required="status == 'installed'" invisible="zone_id == False" />
                            <field name="old_box_no" />
                        </group>
                    </group>
                    <notebook>
                        <page name="complain_center" string="Complain Center">
                            <field name="complain_center_ids" readonly="1">
                                <tree>
                                    <field name="rider_id" string="Rider" />
                                    <field name="donation_box_registration_installation_id" string="Donation Box" />
                                    <field name="box_status" />
                                    <field name="remarks" />
                                    <field name="status" widget="badge" decoration-warning="status == 'draft'" decoration-info="status == 'process'" decoration-success="status == 'resolved'" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="donation_box_registration_installation_view_tree" model="ir.ui.view">
        <field name="name">donation.box.registration.installation.view.tree</field>
        <field name="model">donation.box.registration.installation</field>
        <field name="arch" type="xml">
            <tree create="0">
                <field name="donor_id" string="Donor" />
                <field name="installer_id" string="Installer" />
                <field name="rider_id" string="Rider" />
                <field name="name" string="Registration No." />
                <field name="location" />
                <field name="contact_person" />
                <field name="contact_no" />
                <field name="lot_id" string="Box No." />
                <field name="box_status" widget="badge" decoration-info="box_status == 'not_installed'" decoration-success="box_status == 'installed'" />
                <field name="installation_date" />
                <field name="status" widget="badge" decoration-warning="status == 'draft'" decoration-info="status == 'installed'" decoration-success="status == 'approved'" />
            </tree>
        </field>
    </record>

    <record id="donation_box_registration_installation_view_search" model="ir.ui.view">
        <field name="name">donation.box.registration.installation.view.search</field>
        <field name="model">donation.box.registration.installation</field>
        <field name="arch" type="xml">
            <search>
                <field name="lot_id" string="Box No." />
            </search>
        </field>
    </record>

    <record id="donation_box_registration_installation_action" model="ir.actions.act_window">
        <field name="name">Regitration / Installation</field>
        <field name="res_model">donation.box.registration.installation</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Let's Register and Install a new Donation Box...
            </p>
        </field>
    </record>

    <menuitem
        id="donation_box_sub_root_menu"
        name="Donation Box"
        parent="bn_donation_box.donation_box_root_menu"
        sequence="1"/>

    <menuitem
        id="donation_box_registration_installation_menu"
        name="Registration / Installation"
        action="donation_box_registration_installation_action"
        parent="bn_donation_box.donation_box_sub_root_menu"
        sequence="1"/>

</odoo>
