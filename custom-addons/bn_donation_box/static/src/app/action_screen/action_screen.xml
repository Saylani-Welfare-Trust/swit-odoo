<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="bn_donation_box.DonationBoxButton" t-inherit="bn_pos_custom_action.ActionScreen" t-inherit-mode="extension">
        <xpath expr="//main" position="inside">
            <button class="btn btn-secondary btn-lg py-5" t-on-click="() => this.clickRecordDonation()">
                <i class="fa fa-gift me-1" role="img" aria-label="Donation Box" title="Donation Box"/>
                Donation Box
            </button>
        </xpath>
    </t>

</templates>
