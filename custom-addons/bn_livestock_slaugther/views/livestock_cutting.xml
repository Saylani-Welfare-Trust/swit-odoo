<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="livestock_cutting_view_tree" model="ir.ui.view">
        <field name="name">livestock.cutting.view.tree</field>
        <field name="model">livestock.cutting</field>
        <field name="arch" type="xml">
            <tree>
                <field name="product_id" />
                <field name="code" />
                <field name="quantity" />
                <field name="price" />
                <field name="state" widget="badge" decoration-warning="state == 'not_received'" decoration-success="state == 'received'" readonly="1" />
            </tree>
        </field>
    </record>

    <record id="livestock_cutting_view_form" model="ir.ui.view">
        <field name="name">livestock.cutting.view.form</field>
        <field name="model">livestock.cutting</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button string="Confirm" name="action_confirm" type="object" class="oe_highlight"/>
                    <button string="Validate Picking" name="action_validate_picking" type="object" class="oe_highlight"/>

                    <field name="state" widget="statusbar" statusbar_visible="not_received, received"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="product_id"/>
                        <h1><field name="product_id" options="{'no_create': True, 'no_edit': True, 'no_open': True}" class="oe_inline" required="1" /></h1>
                    </div>

                    <group>
                        <group name="livestock_cutting_col_1">
                            <field name="quantity" />
                            <field name="price" />
                        </group>
                        <group name="livestock_cutting_col_2">
                            <field name="code" />
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="livestock_cutting_action" model="ir.actions.act_window">
        <field name="name">Livestock Cutting</field>
        <field name="res_model">livestock.cutting</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Let's add a new livestock cutting...
            </p>
        </field>
    </record>

    <menuitem
        id="cutting_menu"
        name="Cutting"
        action="livestock_cutting_action"
        parent="bn_livestock_slaugther.livestock_menu"
        sequence="1"/>

</odoo>
