<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="livestock_slaugther_wizard_view_form" model="ir.ui.view">
        <field name="name">livestock.slaugther.wizard.view.form</field>
        <field name="model">livestock.slaugther.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="livestock_slaughter_id" invisible="1" />
                    <div class="oe_title">
                        <label for="dest_location_id"/>
                        <h1><field name="dest_location_id" options="{'no_create': True, 'no_edit': True, 'no_open': True}" class="oe_inline" required="1" /></h1>
                    </div>
                </sheet>
                <footer>
                    <button name="action_do_transfer" string="Fetch" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
