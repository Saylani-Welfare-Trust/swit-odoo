<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.donation.box.sp</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="99"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="inside">
                    <app string="Donation Box" name="donation_box">
                        <block title="Stock Picking Configuration" name="stock_picking_config">
                            <setting id="picking_config"
                                     string="Generate Picking For Donation Box Request">
                                <field name="gen_donation_req_picking"/>
                                <div class="mt16" id="picking_config_div" invisible="not gen_donation_req_picking">
                                    <label for="donation_box_sp_type"/>
                                    <field name="donation_box_sp_type"/>
                                </div>
                            </setting>
                        </block>
                    </app>
                </xpath>
            </field>
        </record>

        <record id="action_donation_box_sp_configuration" model="ir.actions.act_window">
            <field name="name">Settings</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_id" ref="res_config_settings_view_form"/>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="context">{'module' : 'donation_box_sp', 'bin_size': False}</field>
        </record>
    </data>
</odoo>