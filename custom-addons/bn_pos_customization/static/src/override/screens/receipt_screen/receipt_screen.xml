<?xml version="1.0" encoding="utf-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="bn_pos_customization.ReceiptScreen" t-inherit="point_of_sale.ReceiptScreen" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('pos-receipt-container')]" position="replace">
            <div class="pos-receipt-container user-select-none bg-200"
                style="overflow: auto; width: 100%; height: 100%; display: flex; justify-content: center; align-items: flex-start;">
                <div style="
                        display: inline-block;
                        width: 210mm;
                        min-height: 297mm;
                        background: white;
                        box-shadow: 0 0 6px rgba(0, 0, 0, 0.2);
                        padding: 10mm;
                        margin: 10px;
                    ">
                    <OrderReceipt 
                        data="pos.get_order().export_for_printing()" 
                        formatCurrency="env.utils.formatCurrency" 
                    />
                </div>
            </div>
        </xpath>
    </t>

</templates>