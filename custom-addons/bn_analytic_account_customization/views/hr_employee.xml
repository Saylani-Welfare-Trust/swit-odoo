<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_view_employee_form_inherit_bn_analytic_account_customization" model="ir.ui.view">
        <field name="name">hr.view.employee.form.inherit.bn.analytic.account.customization</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='work_location_id']" position="after">
                <field name="analytic_account_id" string="Branch Location" options="{'no_create': True, 'no_edit': True, 'no_open': True}" domain="[('location_option_id.name', '=', 'Branch')]" required="1" />
            </xpath>
        </field>
    </record>

</odoo>
