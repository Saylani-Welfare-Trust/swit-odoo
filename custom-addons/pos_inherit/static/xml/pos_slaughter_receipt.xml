<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-extend="OrderReceipt">
        <t t-jquery=".pos-receipt-container" t-operation="append">
            <t t-if="order.slaughter_qr">
                <div style="text-align:center; margin-top:10px;">
                    <img t-att-src="'data:image/png;base64,%s' % order.slaughter_qr"
                         style="width:150px; height:150px;"/>
                    <div>Scan for Slaughter Record</div>
                </div>
            </t>
        </t>
    </t>
</templates>

