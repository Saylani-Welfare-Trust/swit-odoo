<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_pos_requisition_tree" model="ir.ui.view">
        <field name="name">pos_requisition.tree</field>
        <field name="model">pos.requisition</field>
        <field name="arch" type="xml">
            <tree string="Live Stock Slaughter">
                <field name="type"/>
                <field name="meat_type"/>
                <field name="live_stock_type"/>
                <field name="quantity"/>
                <field name="delivery_location"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_pos_requisition_form" model="ir.ui.view">
        <field name="name">pos_requisition.form</field>
        <field name="model">pos.requisition</field>
        <field name="arch" type="xml">
            <form string="POS Requisition">

                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed"/>

                    <button name="action_confirm"
                            string="Confirm"
                            type="object"
                            class="btn-primary"
                            invisible="state != 'draft'"/>

                </header>
                <sheet>
                    <group>
                        <field name="type"/>
                        <field name="meat_type" invisible="type != 'meat'"/>
                        <field name="live_stock_type" invisible="type != 'live_stock'"/>
                        <field name="quantity"/>
                        <field name="material_from"/>
                        <field name="delivery_location"/>
                        <field name="date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action to Open the Views -->
    <record id="action_pos_requisition" model="ir.actions.act_window">
        <field name="name">Live Stock Slaughter</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pos.requisition</field>
        <field name="view_mode">tree,form</field>
    </record>


    <menuitem id="menu_pos_requisitionnn"
              name="Requisition"
              parent="point_of_sale.menu_point_of_sale"
              action="action_pos_requisition"
              sequence="20"/>


</odoo>
