<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_master_view_tree" model="ir.ui.view">
        <field name="name">product.master.view.tree</field>
        <field name="model">product.master</field>
        <field name="arch" type="xml">
            <tree>
                <field name="product_id" />
                <field name="ref" />
            </tree>
        </field>
    </record>

    <record id="product_master_view_form" model="ir.ui.view">
        <field name="name">product.master.view.form</field>
        <field name="model">product.master</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="product_id"/>
                        <h1><field name="product_id" class="oe_inline" /></h1>
                    </div>

                    <group>
                        <group name="product_master_col_1">
                            <field name="ref" />
                        </group>
                    </group>

                    <notebook>
                        <page name="product_line" string="Lines">
                            <field name="product_master_line_ids">
                                <tree editable="bottom">
                                    <field name="product_id" />
                                    <field name="quantity" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="product_master_action" model="ir.actions.act_window">
        <field name="name">Product Master</field>
        <field name="res_model">product.master</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Let's create a product master....
            </p>
        </field>
    </record>

    <menuitem
        id="livestock_menu"
        name="Product Master"
        parent="bn_master_setup.master_setup_menu"
        sequence="7"/>
    
    <menuitem
        id="product_master_menu"
        name="Product Master"
        action="product_master_action"
        parent="livestock_menu"
        sequence="0"/>

</odoo>
