<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="view_advance_donation_category_tree" model="ir.ui.view">
            <field name="name">view.advance.donation.category.tree</field>
            <field name="model">advance.donation.category</field>
            <field name="arch" type="xml">
                <tree default_order="create_date desc">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="view_advance_donation_category_form" model="ir.ui.view">
            <field name="name">view.advance.donation.category.form</field>
            <field name="model">advance.donation.category</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Product Lines">
                                <field name="category_lines">
                                    <tree editable="bottom">
                                        <field name="product_id"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_advance_donation_category" model="ir.actions.act_window">
            <field name="name">Category</field>
            <field name="res_model">advance.donation.category</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem
            id="advance_donation_menu"
            name="Advance Donation"
            parent="bn_master_setup.master_setup_menu"
            sequence="8"/>

        <menuitem
            id="advance_donation_category_menu"
            name="Category"
            action="action_advance_donation_category"
            parent="advance_donation_menu"
            sequence="0"/>

    </data>
</odoo>