<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="disbursement_application_type_view_tree" model="ir.ui.view">
        <field name="name">disbursement.application.type.view.tree</field>
        <field name="model">disbursement.application.type</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name" />
                <field name="order_type" />
                <field name="product_category_id" options="{'no_create': True, 'no_edit': True, 'no_open': True}" />
                <field name="disbursement_category_id" options="{'no_create': True, 'no_edit': True, 'no_open': True}" />
            </tree>
        </field>
    </record>

    <record id="disbursement_application_type_action" model="ir.actions.act_window">
        <field name="name">Disbursement Application Type</field>
        <field name="res_model">disbursement.application.type</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Let's create a new disbursement application type for welfare....
            </p>
        </field>
    </record>

    <menuitem
        id="disbursement_application_type_menu"
        name="Disbursement Application Type"
        action="disbursement_application_type_action"
        parent="bn_master_setup.welfare_menu"
        sequence="1"/>

</odoo>
