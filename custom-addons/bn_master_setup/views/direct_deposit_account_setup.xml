<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View (no create, no delete, allow edit) -->
    <record id="bn_master_setup_view_direct_deposit_account_setup_tree" model="ir.ui.view">
        <field name="name">direct.deposit.account.setup.tree</field>
        <field name="model">direct.deposit.account.setup</field>
        <field name="arch" type="xml">
            <tree create="false" delete="false" editable="bottom">
                <field name="name" string="Account Prefix" />
            </tree>
        </field>
    </record>

    <!-- Action -->
    <record id="bn_master_setup_action_direct_deposit_account_setup" model="ir.actions.act_window">
        <field name="name">Direct Deposit Account</field>
        <field name="res_model">direct.deposit.account.setup</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="bn_master_setup_view_direct_deposit_account_setup_tree"/>
        <field name="target">current</field>
        <field name="context">{"default_active": True}</field>
    </record>


     <!-- Parent Menu: Direct Deposit -->
    <menuitem id="bn_master_setup_menu_direct_deposit_root" 
              parent="bn_master_setup.master_setup_menu"  
              name="Direct Deposit" sequence="50"/>

    <!-- Child Menu: Direct Deposit Account -->
    <menuitem id="bn_master_setup_menu_direct_deposit_account" 
              name="Direct Deposit Account" 
              parent="bn_master_setup_menu_direct_deposit_root" 
              action="bn_master_setup_action_direct_deposit_account_setup"/>
</odoo>