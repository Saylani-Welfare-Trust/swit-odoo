<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="disbursement_category_view_tree" model="ir.ui.view">
        <field name="name">disbursement.category.view.tree</field>
        <field name="model">disbursement.category</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="disbursement_category_action" model="ir.actions.act_window">
        <field name="name">Disbursement Category</field>
        <field name="res_model">disbursement.category</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Let's create a new disbursement category for welfare....
            </p>
        </field>
    </record>

    <menuitem
        id="welfare_menu"
        name="Welfare"
        parent="bn_master_setup.master_setup_menu"
        sequence="4"/>

    <menuitem
        id="disbursement_category_menu"
        name="Disbursement Category"
        action="disbursement_category_action"
        parent="bn_master_setup.welfare_menu"
        sequence="0"/>

</odoo>
