<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="gateway_config_view_tree" model="ir.ui.view">
        <field name="name">gateway.config.view.tree</field>
        <field name="model">gateway.config</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="type" />
            </tree>
        </field>
    </record>

    <record id="gateway_config_view_form" model="ir.ui.view">
        <field name="name">gateway.config.view.form</field>
        <field name="model">gateway.config</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Name"/>
                        <h1><field name="name" class="oe_inline" /></h1>
                    </div>

                    <group>
                        <group>
                            <field name="type" />
                        </group>
                        <group>
                            <field name="account_id" string="Debit Account" invisible="type == 'api'" />
                        </group>
                    </group>
                    <notebook>
                        <page name="gateway_config_line" string="Config. Gateway">
                            <field name="gateway_config_line_ids">
                                <tree editable="bottom">
                                    <field name="name" />
                                    <field name="product_id" string="Product" options="{'no_create': True, 'no_edit': True, 'no_open': True}" />
                                    <field name="analytic_account_id" domain="[('plan_id.name', '=', 'Segment')]" string="Analytic Account" options="{'no_create': True, 'no_edit': True, 'no_open': True}" />
                                    <field name="account_id" string="GL Account" options="{'no_create': True, 'no_edit': True, 'no_open': True}" />
                                </tree>
                            </field>
                        </page>
                        <page name="gateway_config_header" string="Config. Header" invisible="type == 'api'">
                            <field name="gateway_config_header_ids">
                                <tree editable="bottom">
                                    <field name="name" />
                                    <field name="header_type_id" string="Header Type" options="{'no_create': True, 'no_edit': True, 'no_open': True}" />
                                    <field name="position" />
                                </tree>
                            </field>
                        </page>
                        <page name="gateway_config_currency" string="Config. Currency Debit Account" invisible="type != 'api'">
                            <field name="gateway_config_currency_ids">
                                <tree editable="bottom">
                                    <field name="currency_id" string="Currency" />
                                    <field name="account_id" string="Debit Account" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="gateway_config_action" model="ir.actions.act_window">
        <field name="name">Gateway Configuration</field>
        <field name="res_model">gateway.config</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Let's create a new gateway configuration for import donation....
            </p>
        </field>
    </record>

    <menuitem
        id="gateway_config_menu"
        name="Gateway Configuration"
        action="gateway_config_action"
        parent="bn_master_setup.donation_inflow_config_menu"
        sequence="1"/>

</odoo>
