<?xml version="1.0" ?>
<odoo>
    <data>
        <record id="amount_currency_box_lines_tree_view" model="ir.ui.view">
            <field name="name">amount.currency.box.lines.tree.view</field>
            <field name="model">amount.currency.box.lines</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Amount Currency Box Lines" editable="bottom">
                    <field name="name" />
                    <field name="currency_id" options="{'no_create': True, 'no_edit': True, 'no_open': True, 'no_quick_create': True, 'no_create_edit': True}" />
                    <field name="amount_type_id" readonly="amount_currency_box_id != False" options="{'no_create': True, 'no_edit': True, 'no_open': True, 'no_quick_create': True, 'no_create_edit': True}" />
                    <field name="quantity" readonly="amount_currency_box_id != False" />
                    <field name="amount_currency_box_id" readonly="amount_currency_box_id != False" options="{'no_create': True, 'no_edit': True, 'no_open': True, 'no_quick_create': True, 'no_create_edit': True}" />
                    <field name="company_id" readonly="1" />
                </tree>
            </field>
        </record>
        <record id="amount_currency_box_lines_form_view" model="ir.ui.view">
            <field name="name">amount.currency.box.lines.form.view</field>
            <field name="model">amount.currency.box.lines</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Amount Currency Box Lines">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" style="pointer-events: none;" />
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="currency_id" options="{'no_create': True, 'no_edit': True, 'no_open': True, 'no_quick_create': True, 'no_create_edit': True}" />
                                <field name="quantity" readonly="amount_currency_box_id != False" />
                                <field name="company_id" readonly="1" />
                            </group>
                            <group>
                                <field name="amount_type_id" readonly="amount_currency_box_id != False" options="{'no_create': True, 'no_edit': True, 'no_open': True, 'no_quick_create': True, 'no_create_edit': True}" />
                                <field name="amount_currency_box_id" readonly="amount_currency_box_id != False" options="{'no_create': True, 'no_edit': True, 'no_open': True, 'no_quick_create': True, 'no_create_edit': True}" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_amount_currency_box_lines" model="ir.actions.act_window">
            <field name="name">Amount Currency Box Lines</field>
            <field name="res_model">amount.currency.box.lines</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>