<?xml version="1.0" ?>
<odoo>
    <data>
        <record id="pos_category_tree_view_inherit" model="ir.ui.view">
            <field name="name">pos.category.tree.view.inherit</field>
            <field name="model">pos.category</field>
            <field name="type">tree</field>
            <field name="inherit_id" ref="point_of_sale.product_pos_category_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='display_name']" position="after">
                    <field name="type" />
                    <field name="level" />
                </xpath>
            </field>
        </record>
        <record id="pos_category_form_view_inherit" model="ir.ui.view">
            <field name="name">pos.category.form.view.inherit</field>
            <field name="model">pos.category</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="point_of_sale.product_pos_category_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='parent_id']" position="before">
                    <field name="type" />
                    <field name="level" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>