<?xml version="1.0" ?>
<odoo>
    <data>
        <record id="donation_by_home_service_tree_view" model="ir.ui.view">
            <field name="name">donation.by.home.service.tree.view</field>
            <field name="model">donation.by.home.service</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Donation By Home Service">
                    <field name="reference_number" />
                    <field name="name" />
                    <field name="street" />
                    <field name="phone" />
                    <field name="branch_id" />
                    <field name="delivery_charges_amount" />
                    <field name="donation_type" />
                    <field name="amount" />
                    <field name="bank_name" />
                    <field name="cheque_number" />
                    <field name="remark" />
                </tree>
            </field>
        </record>
        <record id="donation_by_home_service_form_view" model="ir.ui.view">
            <field name="name">donation.by.home.service.form.view</field>
            <field name="model">donation.by.home.service</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Donation By Home Service">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" />
                                <field name="branch_id" />
                                <field name="delivery_charges_amount" />
                                <field name="street" />
                                <field name="phone" />
                                <field name="remark" />
                            </group>
                            <group>
                                <field name="donation_type" />
                                <field name="bank_name" invisible="donation_type != 'cheque'" />
                                <field name="amount" invisible="donation_type == 'in_kind'" />
                                <field name="cheque_number" invisible="donation_type != 'cheque'" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_donation_by_home_service" model="ir.actions.act_window">
            <field name="name">Donation By Home Service</field>
            <field name="res_model">donation.by.home.service</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem
            id="menu_donation_by_home_service"
            name="Donation By Home Service"
            parent="point_of_sale.menu_point_of_sale"
            sequence="3"
            action="action_donation_by_home_service"
        />
    </data>
</odoo>