<?xml version="1.0" ?>
<odoo>
    <data>
        <record id="product_stock_move_tree_view" model="ir.ui.view">
            <field name="name">product.stock.move.tree.view</field>
            <field name="model">product.stock.move</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Warehouses Stock">
                    <field name="name" readonly="1" />
                    <field name="partner_id" />
                    <field name="product_id" />
                    <field name="location_id" />
                    <field name="quantity" />
                    <field name="company_id" />
                    <field name="state" />
                </tree>
            </field>
        </record>
        <record id="product_stock_move_form_view" model="ir.ui.view">
            <field name="name">product.stock.move.form.view</field>
            <field name="model">product.stock.move</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Warehouses Stock">
                    <header>
                        <button name="action_validate" string="Validate" type="object" class="oe_highlight" invisible="state in ['validate', 'box_open', 'valuation_committee', 'approval', 'box_validate', 'cancel']"/>
                        <button name="action_cancel" type="object" string="Cancel" invisible="state in ['validate', 'box_open','valuation_committee', 'approval', 'box_validate','cancel']" />
                        <button name="action_box_open" string="Open Box" type="object" class="oe_highlight" invisible="state in ['draft', 'box_open', 'valuation_committee', 'approval', 'box_validate', 'cancel']" />
                        <button name="action_check" string="Check Item" type="object" class="oe_highlight" invisible="state != 'box_open' or check_bool in ['yes', 'no']" />
                        <button name="action_valuation_committee" string="Valuation Committee" type="object" class="oe_highlight" invisible="state in ['draft', 'validate', 'valuation_committee', 'approval', 'box_validate', 'cancel'] or check_bool in ['default', 'no']"/>
                        <button name="action_approval" string="Approval" type="object" class="oe_highlight" invisible="state in ['draft', 'validate', 'box_open', 'approval', 'box_validate', 'cancel']" groups="sm_point_of_sale_apps.approval_res_groups" />
                        <button name="action_box_validate" string="Box Validate" type="object" class="oe_highlight" invisible="state in ['draft', 'validate', 'box_open', 'valuation_committee', 'box_validate', 'cancel']" />
                        <button name="action_box_validate" string="Box Validate" type="object" class="oe_highlight" invisible="state == 'box_validate' or check_bool in ['default', 'yes']" />
                        <button name="action_draft" string="Draft" type="object" class="btn-secondary" invisible="state in ['draft', 'validate', 'box_open', 'valuation_committee', 'approval', 'box_validate']"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,validate,box_open,check_item,valuation_committee,approval,box_validate" />
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_product_box" type="object" class="oe_stat_button" icon="fa-pencil-square-o" invisible="product_id == False">
                                Product
                            </button>
                            <button name="action_operations_type_receipts" type="object" class="oe_stat_button" icon="fa-pencil-square-o" invisible="picking_id == False">
                                Operations Receipts
                            </button>
                            <button name="action_journal_entries" type="object" class="oe_stat_button" icon="fa-pencil-square-o" invisible="account_move_id == False">
                                Journal Entries
                            </button>
                            <button name="action_reverse_journal_entries" type="object" class="oe_stat_button" icon="fa-pencil-square-o" invisible="reverse_account_move_id == False">
                                Reverse Journal Entries
                            </button>
                            <button name="action_product_box_list" type="object" class="oe_stat_button" icon="fa-list" invisible="state in ['draft', 'validate', 'cancel', 'box_open']">
                                Product List
                            </button>
                            <button name="action_operations_type_receipts_list" type="object" class="oe_stat_button" icon="fa-pencil-square-o" invisible="picking_list_id == False">
                                Operations Receipts List
                            </button>
                            <button name="action_journal_entries_list" type="object" class="oe_stat_button" icon="fa-list" invisible="account_move_list_id == False">
                                Journal Entries List
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1" />
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="partner_id" readonly="state in ['validate', 'box_open', 'valuation_committee', 'approval', 'box_validate', 'cancel']" options="{'no_create': True, 'no_edit': True, 'no_open': True, 'no_quick_create': True, 'no_create_edit': True}" />
                                <field name="product_id" readonly="state in ['validate', 'box_open', 'valuation_committee', 'approval', 'box_validate', 'cancel']" options="{'no_create': True, 'no_edit': True, 'no_open': True, 'no_quick_create': True, 'no_create_edit': True}" />
                                <field name="debit_account_id" style="pointer-events: none;" readonly="state in ['validate', 'box_open', 'valuation_committee', 'approval', 'box_validate', 'cancel']" options="{'no_create': True, 'no_edit': True, 'no_open': True, 'no_quick_create': True, 'no_create_edit': True}" />
                                <field name="stock_picking_type_id" style="pointer-events: none;" readonly="state in ['validate', 'box_open', 'valuation_committee', 'approval', 'box_validate', 'cancel']" options="{'no_create': True, 'no_edit': True, 'no_open': True, 'no_quick_create': True, 'no_create_edit': True}" />
                                <field name="company_id" readonly="1" />
                                <field name="check_bool" invisible="1" />
                                <field name="reverse_account_move_id" invisible="1" />
                                <field name="picking_list_id" invisible="1" />
                            </group>
                            <group>
                                <field name="location_id" style="pointer-events: none;" readonly="state in ['validate', 'box_open', 'valuation_committee', 'approval', 'box_validate', 'cancel']" options="{'no_create': True, 'no_edit': True, 'no_open': True, 'no_quick_create': True, 'no_create_edit': True}" />
                                <field name="quantity" readonly="state in ['validate', 'box_open', 'valuation_committee', 'approval', 'box_validate', 'cancel']" />
                                <field name="credit_account_id" style="pointer-events: none;" readonly="state in ['validate', 'box_open', 'valuation_committee', 'approval', 'box_validate', 'cancel']" options="{'no_create': True, 'no_edit': True, 'no_open': True, 'no_quick_create': True, 'no_create_edit': True}" />
                                <field name="journal_id" style="pointer-events: none;" readonly="state in ['validate', 'box_open', 'valuation_committee', 'approval', 'box_validate', 'cancel']" options="{'no_create': True, 'no_edit': True, 'no_open': True, 'no_quick_create': True, 'no_create_edit': True}" />
                                <field name="account_move_id" invisible="1" />
                                <field name="account_move_list_id" invisible="1" />
                                <field name="picking_id" invisible="1" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Warehouses Stock Lines" name="product_stock_move_lines">
                                <field name="product_stock_move_lines" readonly="state in ['draft', 'validate', 'valuation_committee','approval', 'box_validate', 'cancel'] or check_bool in ['yes', 'no']">
                                    <tree string="Warehouses Stock Lines" editable="bottom">
                                        <field name="state" column_invisible="True" />
                                        <field name="product_id" options="{'no_create': True, 'no_edit': True, 'no_open': True, 'no_quick_create': True, 'no_create_edit': True}" />
                                        <field name="location_id" style="pointer-events: none;" options="{'no_create': True, 'no_edit': True, 'no_open': True, 'no_quick_create': True, 'no_create_edit': True}" />
                                        <field name="quantity" />
                                        <field name="price_bool" column_invisible="True" />
                                        <field name="check_price_bool" column_invisible="True" />
                                        <field name="avg_price" optional="hide" />
                                    </tree>
                                </field>
                            </page>
                            <page string="Valuation Committee" name="product_valuation_lines" groups="sm_point_of_sale_apps.approval_res_groups">
                                <field name="product_valuation_lines" readonly="state in ['draft', 'validate', 'approval', 'box_validate', 'cancel']">
                                    <tree string="Valuation Committee" editable="bottom" create="false" edit="true" delete="false">
                                        <field name="state" column_invisible="True" />
                                        <field name="product_id" readonly="check_price_bool == True" options="{'no_create': True, 'no_edit': True, 'no_open': True, 'no_quick_create': True, 'no_create_edit': True}" />
                                        <field name="location_id" readonly="check_price_bool == True" style="pointer-events: none;" options="{'no_create': True, 'no_edit': True, 'no_open': True, 'no_quick_create': True, 'no_create_edit': True}" />
                                        <field name="quantity" readonly="check_price_bool == True" />
                                        <field name="price_bool" column_invisible="True" />
                                        <field name="check_price_bool" column_invisible="True"  />
                                        <field name="avg_price" />
                                        <field name="product_stock_move_line_id" column_invisible="True" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" options="{'open_attachments': True}"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="action_product_stock_move" model="ir.actions.act_window">
            <field name="name">Warehouses Stock</field>
            <field name="res_model">product.stock.move</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem
            id="menu_product_stock_move"
            name="Warehouses Stock"
            parent="sm_point_of_sale_apps.stock_in"
            sequence="2"
            action="action_product_stock_move"
        />
    </data>
</odoo>