<?xml version="1.0" ?>
<odoo>
    <data>
        <record id="amount_type_tree_view" model="ir.ui.view">
            <field name="name">amount.type.tree.view</field>
            <field name="model">amount.type</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Amount Type" editable="bottom">
                    <field name="currency_id" />
                    <field name="name" />
                </tree>
            </field>
        </record>
        <record id="amount_type_form_view" model="ir.ui.view">
            <field name="name">amount.type.form.view</field>
            <field name="model">amount.type</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Amount Type">
                    <sheet>
                        <group>
                            <group>
                                <field name="currency_id" />
                            </group>
                            <group>
                                <field name="name" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_amount_type" model="ir.actions.act_window">
            <field name="name">Amount Type</field>
            <field name="res_model">amount.type</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem
            id="menu_amount_type"
            name="Amount Type"
            parent="account.menu_finance_configuration"
            sequence="1"
            action="action_amount_type"
        />
    </data>
</odoo>