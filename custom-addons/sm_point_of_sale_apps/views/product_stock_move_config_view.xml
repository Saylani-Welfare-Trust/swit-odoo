                                <field name="debit_account_id"  options="{'no_create': True, 'no_edit': True, 'no_open': True, 'no_quick_create': True, 'no_create_edit': True}" />
                                <field name="company_id"  options="{'no_create': True, 'no_edit': True, 'no_open': True, 'no_quick_create': True, 'no_create_edit': True}" />
                            </group>
                            <group>
                                <field name="stock_picking_type_id" options="{'no_create': True, 'no_edit': True, 'no_open': True, 'no_quick_create': True, 'no_create_edit': True}" />
                                <field name="journal_id" options="{'no_create': True, 'no_edit': True, 'no_open': True, 'no_quick_create': True, 'no_create_edit': True}" />
                                <field name="credit_account_id"  options="{'no_create': True, 'no_edit': True, 'no_open': True, 'no_quick_create': True, 'no_create_edit': True}" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_product_stock_move_config" model="ir.actions.act_window">
            <field name="name">Warehouses Stock Config</field>
            <field name="res_model">product.stock.move.config</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem
            id="menu_product_stock_move_config"
            name="Warehouses Stock Config"
            parent="sm_point_of_sale_apps.stock_in"
            sequence="1"
            action="action_product_stock_move_config"
        />
    </data>
