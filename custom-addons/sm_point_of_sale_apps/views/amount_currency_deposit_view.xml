<?xml version="1.0" ?>
<odoo>
    <data>
        <record id="amount_currency_deposit_tree_view" model="ir.ui.view">
            <field name="name">amount.currency.deposit.tree.view</field>
            <field name="model">amount.currency.deposit</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Amount Currency Deposit" create="false" edit="false" delete="false">
                    <field name="slip_number" />
                    <field name="name" />
                    <field name="partner_id" />
                    <field name="accounting_date" />
                    <field name="amount" />
                    <field name="amount_currency_box_id" widget="many2many_tags" />
                </tree>
            </field>
        </record>
        <record id="amount_currency_deposit_form_view" model="ir.ui.view">
            <field name="name">amount.currency.deposit.form.view</field>
            <field name="model">amount.currency.deposit</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Amount Currency Deposit">
                    <header>
                        <button name="action_done" string="Done" type="object" class="oe_highlight" invisible="state not in ['draft']"/>
                        <button name="action_cancel" type="object" string="Cancel" invisible="state not in ['draft']" />
                        <button name="action_draft" string="Draft" type="object" class="btn-secondary" invisible="state not in ['cancel']"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,done" />
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_journal_entries_list" type="object" class="oe_stat_button" icon="fa-pencil-square-o" invisible="account_move_id == False">
                                Journal Entries
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" style="pointer-events: none;" />
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="slip_number" readonly="state in ['done', 'cancel']" string="Deposit Slip No" />
                                <field name="partner_id" readonly="state in ['done', 'cancel']" options="{'no_create': True, 'no_edit': True, 'no_open': True, 'no_quick_create': True, 'no_create_edit': True}" />
                                <field name="amount" readonly="state in ['done', 'cancel']" style="pointer-events: none;" />
                                <field name="debit_account_id" readonly="state in ['done', 'cancel']" options="{'no_create': True, 'no_edit': True, 'no_open': True, 'no_quick_create': True, 'no_create_edit': True}" style="pointer-events: none;" invisible="1" />
                            </group>
                            <group>
                                <field name="accounting_date" readonly="state in ['done', 'cancel']" />
                                <field name="amount_currency_box_id" readonly="state in ['done', 'cancel']" widget="many2many_tags" options="{'no_create': True, 'no_edit': True, 'no_open': True, 'no_quick_create': True, 'no_create_edit': True}" />
                                <field name="journal_id" readonly="state in ['done', 'cancel']" options="{'no_create': True, 'no_edit': True, 'no_open': True, 'no_quick_create': True, 'no_create_edit': True}" style="pointer-events: none;" invisible="1" />
                                <field name="credit_account_id" readonly="state in ['done', 'cancel']" options="{'no_create': True, 'no_edit': True, 'no_open': True, 'no_quick_create': True, 'no_create_edit': True}" style="pointer-events: none;" invisible="1" />
                                <field name="account_move_id" invisible="1" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_amount_currency_deposit" model="ir.actions.act_window">
            <field name="name">Amount Currency Deposit</field>
            <field name="res_model">amount.currency.deposit</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!-- <menuitem
            id="menu_amount_currency_deposit"
            name="Deposit"
            parent="sm_point_of_sale_apps.amount_currency_menu"
            sequence="2"
            action="action_amount_currency_deposit"
        /> -->
    </data>
</odoo>