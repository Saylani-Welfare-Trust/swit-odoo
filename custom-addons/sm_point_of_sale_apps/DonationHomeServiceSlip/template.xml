<odoo>
    <template id="donation_home_service_slip_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="mt-5 clearfix">
                        <div class="page" style="font-family: 'Times New Roman', serif; color: #333;">
                            <!-- Certificate Header -->
                            <div class="text-center mb-4" style="border-bottom: 3px solid #99ca3c; padding-bottom: 20px;">
                                <h2 class="fw-bold" style="color: #99ca3c; font-size: 28px; text-transform: uppercase; letter-spacing: 2px;">
                                DONATION HOME SERVICE SLIP
                                </h2>
                                <p style="font-size: 16px; color: #666; margin-top: 10px;">
                                    This certificate acknowledges the collection from donation home service
                                </p>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <record id="donation_home_service_report_action" model="ir.actions.report">
        <field name="name">Donation Home Service Slip</field>
        <field name="model">donation.home.service</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">sm_point_of_sale_apps.donation_home_service_slip_template</field>
        <field name="report_file">sm_point_of_sale_apps.donation_home_service_slip_template</field>
        <field name="binding_model_id" eval="False"/>
        <field name="binding_type">report</field>
        <field name="print_report_name">'Donation Home Service Slip'</field>
    </record>

</odoo>
