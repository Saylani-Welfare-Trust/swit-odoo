<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="amount_currency_wizard_view_form" model="ir.ui.view">
            <field name="name">amount.currency.wizard.view.form</field>
            <field name="model">amount.currency.wizard</field>
            <field name="arch" type="xml">
                <form string="Deposit">
                    <group>
                        <group>
                            <field name="slip_number" string="Deposit Slip No" />
                            <field name="partner_id" options="{'no_create': True, 'no_edit': True, 'no_open': True, 'no_quick_create': True, 'no_create_edit': True}" />
                            <field name="amount" style="pointer-events: none;" />
                            <field name="debit_account_id" options="{'no_create': True, 'no_edit': True, 'no_open': True, 'no_quick_create': True, 'no_create_edit': True}" style="pointer-events: none;" invisible="1" />
                            <field name="amount_currency_box_id" widget="many2many_tags" options="{'no_create': True, 'no_edit': True, 'no_open': True, 'no_quick_create': True, 'no_create_edit': True}" style="pointer-events: none;" invisible="1" />
                        </group>
                        <group>
                            <field name="accounting_date" />
                            <field name="journal_id" options="{'no_create': True, 'no_edit': True, 'no_open': True, 'no_quick_create': True, 'no_create_edit': True}" style="pointer-events: none;" invisible="1" />
                            <field name="credit_account_id" options="{'no_create': True, 'no_edit': True, 'no_open': True, 'no_quick_create': True, 'no_create_edit': True}" style="pointer-events: none;" invisible="1" />
                        </group>
                    </group>
                    <footer>
                        <button name="action_amount_currency_wizard" string="Save" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="amount_currency_wizard_action" model="ir.actions.act_window">
            <field name="name">Deposit</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">amount.currency.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="amount_currency_wizard_view_form"/>
            <field name="target">new</field>
        </record>
    </data>
</odoo>