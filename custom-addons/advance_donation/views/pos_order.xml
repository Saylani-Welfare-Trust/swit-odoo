<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_pos_pos_form_advance_donation" model="ir.ui.view">
        <field name="name">pos.order.view.form.inherit</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='fiscal_position_id']" position="after">
                <field name="approva_state" readonly="1"/>
                <field name="user_approve_boolean" invisible="1"/>
                <field name="check_user" invisible="1"/>
            </xpath>
            <header>
                <button name="action_cfo_approval" type="object" string="CFO Approval" class="btn-primary"  invisible="state != 'draft' "/>
                <button name="action_paid" type="object" string="Order Paid" class="btn-secondary" invisible="state != 'cfo_approval'"/>
                <!-- <button name="action_draft" type="object" string="Reset to Draft" class="btn-secondary" invisible="state == 'draft' " /> -->

            </header>
        </field>
    </record>

</odoo>
