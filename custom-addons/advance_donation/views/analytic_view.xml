<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="inherit_view_account_analytic_account_form_advance_donation" model="ir.ui.view">
        <field name="name">account.analytic.account.view.form.inherit</field>
        <field name="model">account.analytic.account</field>
        <field name="inherit_id" ref="base_account_budget.view_account_analytic_account_form_inherit_budget"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                 
                        
                     <page string="Line Item">
                        <field name="productline" widget="one2many_list" mode="tree">
                
                        <tree string="Line Item" editable="top">
                                    <field name="product_id"/>
                                    <field name="name"/>
                        </tree>
                        </field>
                     </page>
                     
                
            </xpath>
        </field>
    </record>

</odoo>
