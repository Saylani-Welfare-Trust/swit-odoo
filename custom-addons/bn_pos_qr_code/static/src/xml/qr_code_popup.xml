<?xml version="1.0" encoding="UTF-8"?>
<!--To show popup when clicking on cheuque_number control button-->
<templates id="template" xml:space="preserve">
    <t t-name="QRCode" owl="1">
        <div class="popup popup-textinput">
            <div class="modal-header">
                <h4 class="modal-title"><t t-esc="props.title" /></h4>
            </div>
            
            <div class="modal-body popup-textarea-wrap">
                <!-- QR Code Input -->
                <div class="form-group">
                    <label for="qr_code">QR Code</label>
                    <textarea id="qr_code" 
                        t-on-input="onQRCode" 
                        class="form-control"
                        placeholder="QR Code"/>
                </div>
                
                <!-- Transaction ID Input -->
                <div class="form-group">
                    <label for="transaction_id">Transaction ID</label>
                    <textarea id="transaction_id" 
                        t-on-input="onTransactionID" 
                        class="form-control"
                        placeholder="Transaction ID"/>
                </div>
            </div>

            <footer class="footer modal-footer">
                <button type="button" class="btn btn-primary" t-on-click="confirmTransaction"><t t-esc="props.confirmText"/></button>
                <button type="button" class="btn btn-secondary" t-on-click="cancel"><t t-esc="props.cancelText"/></button>
            </footer>
        </div>
    </t>
</templates>
