<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_pos_pos_form_inherit_point_of_sale" model="ir.ui.view">
        <field name="name">pos.order.qr.code.view.form.inherit</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='extra']" position="after">
                <page name="transaction info" string="Transaction Info">
                    <group>
                        <group name="transaction_info_col_1">
                            <field name="transaction_id" readonly="1" />                            
                        </group>
                        <group name="transaction_info_col_2">
                            <field name="qr_code" readonly="1" />
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
