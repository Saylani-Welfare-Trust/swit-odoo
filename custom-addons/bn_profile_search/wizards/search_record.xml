<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="search_record_view_form" model="ir.ui.view">
        <field name="name">search.record.view.form</field>
        <field name="model">search.record</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="search_type" options="{'horizontal': True}" widget="radio" />
                    <div class="oe_title" invisible="search_type != 'registration_id'">
                        <label for="registration_id"/>
                        <h1><field name="registration_id" class="oe_inline" required="search_type == 'registration_id'" /></h1>
                    </div>
                    <div class="oe_title" invisible="search_type != 'cnic_no'">
                        <label for="cnic_no"/>
                        <h1><field name="cnic_no" class="oe_inline" required="search_type == 'cnic_no'" /></h1>
                    </div>
                    <div class="oe_title" invisible="search_type != 'mobile_no'">
                        <label for="mobile_no"/>
                        <h1 style="display: flex;"><field options="{'no_create': True, 'no_edit': True, 'no_open': True}" style="width: 30% !important;" name="phone_code_id" required="search_type == 'mobile_no'"/> <field style="width: 70% !important;" name="mobile_no" required="search_type == 'mobile_no'"/></h1>
                    </div>
                    <group>
                        <group name="search_record_col_1">
                            <field name="person_type" />
                        </group>
                        <group name="search_record_col_2">
                            <field name="donee_registration_type" string="Registration Type" invisible="person_type != 'donee'" />
                            
                            <!-- <field name="welfare_application_type" invisible="donee_registration_type != 'welfare'" />
                            <field name="microfinance_application_type" invisible="donee_registration_type != 'microfinance'" /> -->
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="action_search" type="object" string="Search"
                            class="oe_highlight"/>
                    <button special="cancel" string="Cancel" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>
    
    <record id="search_record_microfinance_view_form" model="ir.ui.view">
        <field name="name">search.microfinance.record.view.form</field>
        <field name="model">search.record</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="search_type" options="{'horizontal': True}" widget="radio" />
                    <div class="oe_title" invisible="search_type != 'registration_id'">
                        <label for="registration_id"/>
                        <h1><field name="registration_id" class="oe_inline" required="search_type == 'registration_id'" /></h1>
                    </div>
                    <div class="oe_title" invisible="search_type != 'cnic_no'">
                        <label for="cnic_no"/>
                        <h1><field name="cnic_no" class="oe_inline" required="search_type == 'cnic_no'" /></h1>
                    </div>
                    <div class="oe_title" invisible="search_type != 'mobile_no'">
                        <label for="mobile_no"/>
                        <h1 style="display: flex;"><field options="{'no_create': True, 'no_edit': True, 'no_open': True}" style="width: 30% !important;" name="phone_code_id" required="search_type == 'mobile_no'"/> <field style="width: 70% !important;" name="mobile_no" required="search_type == 'mobile_no'"/></h1>
                    </div>
                    <group>
                        <group name="search_record_col_1">
                            <field name="person_type" readonly="1" />
                        </group>
                        <group name="search_record_col_2">
                            <field name="donee_registration_type" string="Registration Type" readonly="1" />

                            <!-- <field name="welfare_application_type" invisible="donee_registration_type != 'welfare'" />
                            <field name="microfinance_application_type" invisible="donee_registration_type != 'microfinance'" /> -->
                        </group>
