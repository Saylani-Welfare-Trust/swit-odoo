    <record id="search_record_action" model="ir.actions.act_window">
        <field name="name">Search Record</field>
        <field name="res_model">search.record</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_ids"
            eval="[(5, 0, 0),
                    (0, 0, {'view_mode': 'form', 'view_id': ref('bn_profile_search.search_record_view_form')})]"/>
    </record>
    
    <record id="search_record_microfinance_action" model="ir.actions.act_window">
        <field name="name">Search Record</field>
        <field name="res_model">search.record</field>
        <field name="view_mode">form</field>
        <field name="context">{
            'default_person_type': 'donee',
            'default_donee_registration_type': 'microfinance',
        }</field>
        <field name="target">new</field>
        <field name="view_ids"
            eval="[(5, 0, 0),
                    (0, 0, {'view_mode': 'form', 'view_id': ref('bn_profile_search.search_record_microfinance_view_form')})]"/>
    </record>

    <record id="search_record_welfare_action" model="ir.actions.act_window">
