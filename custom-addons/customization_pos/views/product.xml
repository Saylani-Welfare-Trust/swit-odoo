<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_template_form_view_pos_customization" model="ir.ui.view">
        <field name="name">product.product.form.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet//page[@name='general_information']" position="after">
                    <page name="pos_entry_cust" string="POS Account Entries">
                        <field name="product_entry_line" widget="section_and_note_one2many">
                        <tree editable="bottom">
                            <field name="for_credit"/>
                            <field name="for_debit"/>
                            <field name="online_payment_method_id"/>

                        </tree>
                        </field>
                    </page>
                    <page name="config_cheque" string="Config For Cheque">
                            <group>
                                <group>
                                    <field name="for_credit_clear"/>
                                    <field name="for_debit_clear"/>
                                </group>
                                <group>
                                    <field name="for_credit_bounce"/>
                                    <field name="for_debit_bounce"/>
                                </group>
                            </group>
                            
                            
                    </page>
            </xpath>
        </field>
    </record>

</odoo>
