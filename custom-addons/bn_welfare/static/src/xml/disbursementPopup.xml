<?xml version="1.0" encoding="UTF-8"?>
<templates id="bn_welfare_popups" xml:space="preserve">

    <t t-name="bn_welfare.DisbursementPopup">
        <div class="popup">
            <div class="modal-header">
                <h2><t t-esc="this.title"/></h2>
            </div>
            <!-- Add a scrollable container for the table -->
            <div style="max-height: 400px; overflow-y: auto;">
                <table class="table table-striped table-hover table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">Disbursement Number</th>
                            <th scope="col">Donee</th>
                            <th scope="col">Collection Point</th>
                            <th scope="col">Product</th>
                            <th scope="col">Amount</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="this.disbursement_ids" t-as="disbursement_id" t-key="disbursement_id.id">
                            <tr>
                                <td><t t-esc="disbursement_id.name"/></td>
                                <td><t t-esc="disbursement_id.donee_name"/></td>
                                <td><t t-esc="disbursement_id.collection_point"/></td>
                                <t t-if="disbursement_id.product != false">
                                    <td><t t-esc="disbursement_id.product"/></td>
                                </t>
                                <t t-else="">
                                    <td></td>
                                </t>
                                <td><t t-esc="disbursement_id.disbursement_amount"/></td>
                                <td>
                                    <button class="btn btn-success me-2 btn_edit" t-on-click="() => this.onClick(disbursement_id)">Disbursed</button>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
            <footer class="footer modal-footer">
                <button type="button" class="btn btn-primary" t-on-click="confirm">Ok</button>
            </footer>
        </div>
    </t>

    <t t-name="bn_welfare.InputPopup">
        <div class="popup">
            <div class="modal-header">
                <h2><t t-esc="this.title"/></h2>
            </div>
            <div style="margin: 30px 15px;">
                <div style="text-align:left;">
                    <span style="width:120px; display:inline-block;">Disbursement Number:</span>
                    <span class="fw-bold" t-esc="this.disbursement_id.name"/>
                </div>
                <div style="text-align:left; display:flex;">
                    <span style="width:120px; display:inline-block;">Payment Method:</span>
                    <select style="width:auto;" t-on-change="onPaymentMethodChange">
                        <option value="cash">Cash</option>
                        <option value="cheque">Cheque</option>
                    </select>
                </div>
                <t t-if="this.payment.payment_type === 'cheque'">
                    <div style="text-align:left; display:flex;">
                        <span style="width:120px; display:inline-block;">Collection Name:</span>
                        <span >
                             <select style="width:auto;" t-on-change="onCollectionChange">
                                 <t t-foreach="this.collection_ids" t-as="collection_id" t-key="collection_id.id">
                                    <option t-att-value="collection_id.id"><t t-esc="collection_id.name"/></option>
                                 </t>
                             </select>
                        </span>
                    </div>
                    <div style="text-align:left; display:flex;">
                        <span style="width:120px; display:inline-block;">Cheque Number:</span>
                        <span >
                            <input type="text" id="cheque_number" name="cheque_number" required="True" t-on-change="onChequeNumberChange"/>
                         </span>
                    </div>
                    <div style="text-align:left; display:flex;">
                        <span style="width:120px; display:inline-block;">Cheque Date:</span>
                        <span>
                            <input type="date" id="cheque_date" name="cheque_date" required="True" t-att-value="this.cheque_date.date" t-on-change="onChequeDateChange"/>
                         </span>
                    </div>
                </t>
                <div style="text-align:left; display:flex;">
                        <span style="width:120px; display:inline-block;">Amount: (<t class="fw-bold" t-esc="this.disbursement_id.currency_symbol"/>)</span>
                        <span>
                            <input type="text" id="amount" name="amount" required="True" value="this.disbursement_id.amount" t-on-change="onAmountChange"/>
                        </span>
                </div>
            </div>
            <footer class="footer modal-footer">
                <button type="button" class="btn btn-primary" t-on-click="confirmDisbursement">Disbursed</button>
                <button type="button" class="btn btn-secondary" t-on-click="cancel">Cancel</button>
            </footer>
        </div>
    </t>

</templates>