<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="disbursement_slip_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="mt-5 clearfix">
                        <div class="page" style="font-family: serif;">
                            <div class="mb-3">
                                <h3 class="fw-bold">
                                    <t t-if="o.disbursement_request_id">
                                        <t t-if="o.state == 'disbursed'">
                                            Disbursement Certificate
                                        </t>
                                    </t>
                                    <t t-else="">
                                        Disbursement Application
                                    </t>
                                    <span style="color: #1571b9;">
                                            <t t-esc="o.disbursement_request_id.name"/>
                                    </span>
                                </h3>
                            </div>
                            <div>
                                <div style="font-size:16px;">
                                    <div class="mb-1">
                                        <t t-import="datetime"/>
                                        <span class="fw-bold" style="width: 150px; display: inline-block; color: #99ca3c;">Date</span>
                                        <span>
                                            <t t-esc="datetime.datetime.now().strftime('%d-%m-%Y')"/>
                                        </span>
                                    </div>
                                    <div class="mb-1">
                                        <span class="fw-bold" style="width: 150px; display: inline-block; color: #99ca3c;">Disbursement Number</span>
                                        <span>
                                            <t t-esc="o.disbursement_request_id.name"/>
                                        </span>
                                    </div>
                                    <div class="mb-1">
                                        <span class="fw-bold" style="width: 150px; display: inline-block; color: #99ca3c;">Donee</span>
                                        <span>
                                            <t t-esc="o.disbursement_request_id.donee_id.name"/>
                                        </span>
                                    </div>
                                    <div class="mb-1">
                                        <span class="fw-bold" style="width: 150px; display: inline-block; color: #99ca3c;">CNIC</span>
                                        <span>
                                            <t t-esc="o.disbursement_request_id.donee_id.cnic_no"/>
                                        </span>
                                    </div>
                                    <div class="mt-3 mb-2">
                                        <span class="fw-bold" style="font-size:20px;">Disbursement Details:</span>
                                    </div>
                                    <table class="table table-striped table-bordered table-hover">
                                        <thead class="thead-dark">
                                            <tr>
                                                <th>Category</th>
                                                <th>Type</th>
                                                <th>Product</th>
                                                <th>Collection Point</th>
                                                <th>Branch</th>
                                                <th>Collection Date</th>
                                                <th>Amount</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                                <tr>
                                                    <td t-esc="o.disbursement_category_id.name"></td>
                                                    <td t-esc="o.disbursement_type_id.name"></td>
                                                    <td t-esc="o.product_id.name"></td>
                                                    <td t-esc="o.collection_point.title()"></td>
                                                    <t t-if="o.collection_point.title() != 'Bank'">
                                                        <td t-esc="o.branch_id.name"></td>
                                                    </t>
                                                    <t t-else="">
                                                        <td/>
                                                    </t>
                                                    <td t-esc="o.collection_date.strftime('%d-%m-%Y')"></td>
                                                    <td t-esc="o.disbursement_amount"></td>
                                                </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <record id="disbursement_slip_report_action" model="ir.actions.report">
        <field name="name">Disbursement Slip</field>
        <field name="model">recurring.disbursement.request</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">bn_welfare.disbursement_slip_template</field>
        <field name="report_file">bn_welfare.disbursement_slip_template</field>
        <field name="binding_model_id" eval="False"/>
        <field name="binding_type">report</field>
        <field name="print_report_name">'Recurring Disbursement Slip'</field>
    </record>

</odoo>
