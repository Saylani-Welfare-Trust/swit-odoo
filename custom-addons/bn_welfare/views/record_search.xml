<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="welfare_donee_action" model="ir.actions.act_window">
        <field name="name">Donee</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('category_id.name', '=', 'Donee'), ('category_id.name', '=', 'Welfare')]</field>
        <field name="context">{
            'create': 0,
            'delete': 0,
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Waiting for Welfare Donee's....
            </p>
        </field>
        <field name="view_ids"
            eval="[(5, 0, 0),
                    (0, 0, {'view_mode': 'kanban', 'view_id': ref('bn_profile_management.profile_management_view_kanban')}),
                    (0, 0, {'view_mode': 'tree', 'view_id': ref('bn_profile_management.profile_management_view_tree')}),
                    (0, 0, {'view_mode': 'form', 'view_id': ref('bn_profile_management.profile_management_view_form')})]"/>
    </record>

    <menuitem
        id="welfare_profile_management_menu"
        name="Profile"
        parent="bn_welfare.welfare_menu"
        sequence="2"/>

    <menuitem
        id="record_search_menu"
        name="Record Search"
        action="bn_profile_management.record_search_welfare_action"
        parent="welfare_profile_management_menu"
        sequence="0"/>

    <menuitem
        id="welfare_donee_menu"
        name="Donee"
        action="welfare_donee_action"
        parent="welfare_profile_management_menu"
        sequence="1"/>

</odoo>
