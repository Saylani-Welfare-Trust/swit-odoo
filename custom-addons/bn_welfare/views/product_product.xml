<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_product_normal_form_view_inherit_bn_welfare" model="ir.ui.view">
        <field name="name">product.product.normal.form.view.inherit.bn.welfare</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='options']" position="inside">
                <span class="d-inline-flex">
                    <field name="is_welfare" on_change="1" field_id="is_welfare" readonly="0" />
                    <label for="is_welfare"/>
                </span>
            </xpath>
        </field>
    </record>
</odoo>
