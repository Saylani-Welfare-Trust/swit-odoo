<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_welfare_institution_fetch_log_tree" model="ir.ui.view">
        <field name="name">welfare.institution.fetch.log.tree</field>
        <field name="model">welfare.institution.fetch.log</field>
        <field name="arch" type="xml"> 
            <tree>
                <field name="fetch_date"/>
                <field name="record_count"/>
                <field name="sync" widget="boolean_toggle"/>
                <button name="action_view_fetched_records" string="View Records" type="object"/>
            </tree>
        </field>
    </record>

    <record id="action_welfare_institution_fetch_log" model="ir.actions.act_window">
        <field name="name">Institution Fetch Logs</field>
        <field name="res_model">welfare.institution.fetch.log</field>
        <field name="view_mode">tree</field>
        <field name="context">{'create': False}</field>

    </record>

</odoo>
