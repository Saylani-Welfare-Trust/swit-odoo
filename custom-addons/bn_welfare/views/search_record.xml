<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="bn_profile_search_search_record_view_form_inherit_bn_welfare" model="ir.ui.view">
        <field name="name">bn.profile.search.search.record.view.form.inherit.bn.welfare</field>
        <field name="model">search.record</field>
        <field name="inherit_id" ref="bn_profile_search.search_record_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='donee_registration_type']" position="after">
                <field name="disbursement_type_id" string="Disbursement Type" options="{'no_create': True, 'no_edit': True, 'no_open': True}" invisible="donee_registration_type != 'welfare'" required="donee_registration_type == 'welfare'" />
            </xpath>
        </field>
    </record>
    
    <record id="bn_profile_search_search_record_microfinance_view_form_inherit_bn_welfare" model="ir.ui.view">
