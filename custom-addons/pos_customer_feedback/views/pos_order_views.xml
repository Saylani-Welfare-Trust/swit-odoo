<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--Inherited form view of pos order to add new cheuque_number fields to pos order-->
    <record id="view_pos_pos_form" model="ir.ui.view">
        <field name="name">pos.order.view.form.inherit.pos.customer.cheuque_number
        </field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
        <field name="arch" type="xml">
            <!-- <xpath expr="//header" position="inside">
                <button name="action_clear_cheque" string="Clear Cheque" type="object"  class="btn-primary"/>
                <button name="action_bounce_cheque" string="Bounce Cheque" type="object"  class="btn-primary" />

                
            </xpath> -->
            <xpath expr="//page[@name='notes']" position="after">
                <page name="Cheque">
                    <group>
                        <field name="bank_name"/>
                        <field name="cheuque_number" readonly="1"/>
                        <field name="cheque_status"/>
                        <field name="cheque_order"/>
                    </group>
                     <group>
                        <field name="cheque_invoice" string="cheque Invoice" readonly="1"/>
                    </group>
                </page>
            </xpath>
            
        </field>
    </record>


    <record id="inherit_view_pos_order_tree_pos_customer" model="ir.ui.view">
        <field name="name">pos.order.tree.inherit</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="after">
            <field name="cheuque_number"/>
                
            </xpath>
        </field>
    </record>

</odoo>
