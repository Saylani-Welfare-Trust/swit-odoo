<?xml version="1.0" encoding="UTF-8"?>
<!--To show popup when clicking on cheuque_number control button-->
<templates id="template" xml:space="preserve">
    <t t-name="FeedbackPopup" owl="1">
        <div class="popup popup-textinput">
            <div class="modal-header">
                <h4 class="modal-title"><t t-esc="props.title" /></h4>
            </div>
            
            <div class="modal-body popup-textarea-wrap">
                <div t-on-change="RatingChange">

                    <!-- Bank Name Input -->
                    <div class="form-group">
                        <label for="bankname" t-if="state.paymentMethod == 'Cheque'">Bank Name</label>
                        <label for="bankname" t-if="state.paymentMethod == 'QR Code'">QR Code No.</label>
                        <textarea id="bankname" 
                            t-model="state.commentValue"
                            t-ref="comment"
                            class="form-control"
                            placeholder="Bank Name"/>
                    </div>
                    
                    <!-- Cheque Number Input -->
                    <div class="form-group" t-if="state.paymentMethod == 'Cheque' || state.paymentMethod != 'QR Code'">
                        <label for="cheque-number">Cheque Number</label>
                        <textarea id="cheque-number" 
                            t-model="state.bankname"
                            t-ref="bankname"
                            class="form-control"
                            placeholder="Cheque Number"/>
                    </div>
                    
                    <!-- Date Picker -->
                    <div class="form-group">
                        <label for="date">Select Date</label>
                        <input type="date" 
                            id="date"
                            t-model="state.date"
                            t-ref="date"
                            class="form-control"
                            placeholder="Select Date"/>
                    </div>
                </div>
            </div>

            <div class="footer footer-flex modal-footer">
                <!-- Confirm Button -->
                <div class="button confirm highlight btn btn-lg btn-primary"
                    t-on-click="confirm">
                    <t t-esc="props.confirmText"/>
                </div>
                
                <!-- Cancel Button -->
                <div class="button cancel btn btn-lg btn-secondary"
                    t-on-click="cancel">
                    <t t-esc="props.cancelText"/>
                </div>
            </div>
        </div>
    </t>
</templates>
