<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="closing_screen_master_view_form" model="ir.ui.view">
        <field name="name">closing.screen.view.form</field>
        <field name="model">closing.screen</field>
        <field name="arch" type="xml">
            <form string="">
                <header>
                    <button name="action_confirm" string="Confirm" type="object"  class="btn-primary" invisible="state == 'confirm'"/>

                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm"/>
              
                </header>

                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="pos_session"/>
                                
                    </group>
                    <field name="line_id">
                        <tree editable="bottom">
                            <field name="pos_category"/>
                            <field name="payment_method"/>
                            <field name="amount"/>
                            <field name="deposit_slip"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>



    <record id="closing_screen_master_view_tree" model="ir.ui.view">
        <field name="name">closing.screen.view.tree</field>
        <field name="model">closing.screen</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="name"/>
                <field name="pos_session"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    

    <record id="action_closing_master" model="ir.actions.act_window">
        <field name="name">Close Session Record</field>
        <field name="res_model">closing.screen</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="closing_screen.closing_screen_master_view_tree"/>
    </record>




        <menuitem id="menu_closing_master"
          name="Close Session Record"
          parent="point_of_sale.menu_point_config_product"
          sequence="80"
          action="action_closing_master"
          />

</odoo>
