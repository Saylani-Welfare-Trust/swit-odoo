<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="fee_box_view_tree" model="ir.ui.view">
        <field name="name">fee.box.view.tree</field>
        <field name="model">fee.box</field>
        <field name="arch" type="xml">
            <tree>
                <field name="date" />
                <field name="name" string="Number" />
                <field name="partner_id" />
                <field name="file_ref" />
                <field name="gateway_id" string="Gateway/File Category" options="{'no_create': True, 'no_edit': True, 'no_open': True}" />
                <field name="journal_id" />
                <field name="payment_method_id" />
                <field name="course_id" />
                <field name="amount" />
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-success="state == 'posted'" />
            </tree>
        </field>
    </record>

    <record id="fee_box_view_form" model="ir.ui.view">
        <field name="name">fee.box.view.form</field>
        <field name="model">fee.box</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button string="Reset to Draft" name="action_draft" type="object" invisible="state == 'draft'" />
                    <button string="Confirm" name="action_confirm" type="object" class="oe_highlight" invisible="state == 'posted'" />

                    <field name="state" widget="statusbar" statusbar_visible="draft,posted"/>
                </header>

                <sheet>
                    <field name="company_id" invisible="1" />
                    <field name="currency_id" invisible="1" />
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name" class="oe_inline" readonly="state == 'posted'" /></h1>
                    </div>

                    <group>
                        <group name="fee_box_col_1">
                            <field name="partner_id" domain="['|', ('is_student', '=', True), ('is_donee', '=', True), ('registration_category', '=', 'donee')]" options="{'no_create': True, 'no_edit': True, 'no_open': True}" readonly="state == 'posted'" />
                            <field name="course_id" domain="[('is_course', '=', True)]" options="{'no_create': True, 'no_edit': True, 'no_open': True}" readonly="state == 'posted'" />
                            <field name="file_ref" readonly="state == 'posted'" />
                            <field name="gateway_id" string="Gateway/File Category" options="{'no_create': True, 'no_edit': True, 'no_open': True}" readonly="state == 'posted'" />
                        </group>
                        <group name="fee_box_col_2">
                            <field name="journal_id" options="{'no_create': True, 'no_edit': True, 'no_open': True}" readonly="state == 'posted'" />
                            <field name="payment_method_id" options="{'no_create': True, 'no_edit': True, 'no_open': True}" readonly="state == 'posted'" />
                            <field name="transaction_id" readonly="state == 'posted'" />
                            <field name="date" readonly="state == 'posted'" />
                            <field name="amount" readonly="state == 'posted'" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="fee_box_action" model="ir.actions.act_window">
        <field name="name">Fee Box</field>
        <field name="res_model">fee.box</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Fee Voucher
            </p>
        </field>
    </record>

    <menuitem
        id="fee_box_menu"
        name="Fee Box"
        action="fee_box_action"
        parent="import_donation_root_menu"
        sequence="3"/>

</odoo>
