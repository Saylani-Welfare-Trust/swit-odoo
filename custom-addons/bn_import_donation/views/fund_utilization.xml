<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="fund_utilization_view_tree" model="ir.ui.view">
        <field name="name">fund.utilization.view.tree</field>
        <field name="model">fund.utilization</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="fund_utilization_view_form" model="ir.ui.view">
        <field name="name">fund.utilization.view.form</field>
        <field name="model">fund.utilization</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name" class="oe_inline" /></h1>
                    </div>

                    <group>
                        <group name="fund_utilization_col_1">
                            <field name="for_credit" />
                        </group>
                        <group name="fund_utilization_col_2">
                            <field name="for_debit" />    
                        </group>
                    </group>
                </sheet>
                <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="fund_utilization_action" model="ir.actions.act_window">
        <field name="name">Fund Utilization</field>
        <field name="res_model">fund.utilization</field>
        <field name="view_mode">tree,form</field>
    </record>
   
