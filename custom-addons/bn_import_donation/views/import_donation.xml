<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="import_donation_view_tree" model="ir.ui.view">
        <field name="name">import.donation.view.tree</field>
        <field name="model">import.donation</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="gateway_id" string="Gateway/File Catgeory" options="{'no_create': True, 'no_open': True, 'no_edit': True}" />
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-warning="state == 'validated'" decoration-success="state == 'upload'" />
            </tree>
        </field>
    </record>

    <record id="import_donation_view_form" model="ir.ui.view">
        <field name="name">import.donation.view.form</field>
        <field name="model">import.donation</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_reset" type="object" string="Reset" invisible="state in ['draft', 'upload']" />
                    <button name="action_validate_excel_file" type="object" string="Validate Excel File" class="oe_highlight" invisible="state in ['validated', 'upload']" />
                    <button name="action_upload_excel_file" type="object" string="Upload Excel File" class="oe_highlight" invisible="state in ['draft', 'upload']" />

                    <field name="state" widget="statusbar" statusbar_visible="draft,validated,upload"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_show_journal_entry" type="object" class="oe_stat_button" icon="fa-book">
                            <field name="journal_entry_id" widget="statinfo"/>
                        </button>
                    </div>

                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name" class="oe_inline" readonly="state in ['validated', 'upload']"/></h1>
                    </div>
                    <group>
                        <group name="import_donation_col_1">
                            <field name="gateway_id" string="Gateway/File Catgeory" options="{'no_create': True, 'no_open': True, 'no_edit': True}" />
                        </group>
                        <group name="import_donation_col_1">
                            <field name="file_name" invisible="1" />
                            <field name="file" filename="file_name" readonly="state in ['validated', 'upload']" />
                        </group>
                    </group>
                    <notebook>
                        <page name="invalid_donation" string="Invalid Donation">
                            <field name="invalid_donation_ids">
                                <tree editable="bottom" create="0">
                                    <field name="date" />
                                    <field name="transaction_id" readonly="1" />
                                    <field name="donor_donee_name" readonly="reason == 'A Transaction with same ID already exist in the System.' or hide_button == True" />
                                    <field name="mobile" readonly="reason == 'A Transaction with same ID already exist in the System.' or hide_button == True" />
                                    <field name="cnic_no" />
                                    <field name="email" />
                                    <field name="payment_method" />
                                    <field name="course" />
                                    <field name="product" />
                                    <field name="fund_utilization" />
                                    <field name="amount" readonly="1" />
                                    <field name="reference" />
                                    <field name="reason" readonly="1" />
                                    <field name="hide_button" column_invisible="1" />
                                    <button string="Approve" name="action_approve" type="object" class="oe_highlight" invisible="reason == 'A Transaction with same ID already exist in the System.' or hide_button == True" />
                                </tree>
                            </field>
                        </page>
                        <page name="valid_donation" string="Valid Donation">
                            <field name="valid_donation_ids" readonly="1">
                                <tree>
                                    <field name="date" />
                                    <field name="transaction_id" />
                                    <field name="donor_donee_name" />
                                    <field name="mobile" />
                                    <field name="cnic_no" />
                                    <field name="email" />
                                    <field name="payment_method" />
                                    <field name="course" />
                                    <field name="product" />
                                    <field name="fund_utilization" />
                                    <field name="amount" />
                                    <field name="reference" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="import_donation_wizard_action" model="ir.actions.act_window">
        <field name="name">Import Donation</field>
        <field name="res_model">import.donation</field>
        <field name="view_mode">tree,form</field>
        <!-- <field name="target">new</field> -->
    </record>

    <menuitem
        id="import_donation_root_menu"
        name="Import Donation"
        web_icon="bn_import_donation,static/description/icon.png"
        sequence="7"/>

    <menuitem
        id="import_donation_menu"
        name="Import Donation"
        action="import_donation_wizard_action"
        parent="import_donation_root_menu"
        sequence="1"/>
    
    <menuitem
        id="configuration_menu"
        name="Configuration"
        parent="import_donation_root_menu"
        sequence="12"/>

    <menuitem
        id="menu_config_bank"
        name="Gateway/File Category"
        parent="configuration_menu"
        sequence="1"
        action="sm_config_bank.action_config_bank" />

</odoo>
