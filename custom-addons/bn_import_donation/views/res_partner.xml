<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_partner_form_inherit_contacts_inherit_bn_profile_management" model="ir.ui.view">
        <field name="name">res.partner.bn.import.donation.view.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="bn_profile_management.view_partner_form_inherit_contacts"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='donation']" position="inside">
                <field name="donation_ids" readonly="1">
                    <tree>
                        <field name="date" />
                        <field name="name" />
                        <field name="transaction_id" />
                        <field name="payment_method_id" />
                        <field name="product_id" />
                        <field name="analytic_account_id" string="Fund Utilization" />
                        <field name="amount" />
                        <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-success="state == 'posted'" />
                    </tree>
                </field>
            </xpath>

            <xpath expr="//page[@name='student_details']//page[@name='fee_voucher']" position="inside">
                <field name="fee_voucher_ids" readonly="1">
                    <tree>
                        <field name="date" />
                        <field name="name" />
                        <field name="transaction_id" />
                        <field name="payment_method_id" />
                        <field name="course_id" />
                        <field name="amount" />
                        <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-success="state == 'posted'" />
                    </tree>
                </field>
            </xpath>
        </field>
    </record>

    <record id="import_donation_custom_donee_res_partner_view_form_inherit_bn_profile_management" model="ir.ui.view">
        <field name="name">custom.donee.res.partner.bn.import.donation.view.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="bn_profile_management.custom_donee_res_partner_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='fee_voucher']" position="inside">
                <field name="fee_voucher_ids" readonly="1">
                    <tree>
                        <field name="date" />
                        <field name="name" />
                        <field name="transaction_id" />
                        <field name="payment_method_id" />
                        <field name="course_id" />
                        <field name="amount" />
                        <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-success="state == 'posted'" />
                    </tree>
                </field>
            </xpath>
        </field>
    </record>

    <record id="import_donation_custom_donor_res_partner_view_form_inherit_bn_profile_management" model="ir.ui.view">
        <field name="name">custom.donor.res.partner.bn.import.donation.view.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="bn_profile_management.custom_donor_res_partner_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='donation']" position="inside">
                <field name="donation_ids" readonly="1">
                    <tree>
                        <field name="date" />
                        <field name="name" />
                        <field name="transaction_id" />
                        <field name="payment_method_id" />
                        <field name="product_id" />
                        <field name="analytic_account_id" string="Fund Utilization" />
                        <field name="amount" />
                        <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-success="state == 'posted'" />
                    </tree>
                </field>
            </xpath>
        </field>
    </record>

</odoo>
