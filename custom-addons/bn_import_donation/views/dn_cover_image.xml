<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="dn_cover_image_view_tree" model="ir.ui.view">
        <field name="name">dn.cover.image.view.tree</field>
        <field name="model">dn.cover.image</field>
        <field name="arch" type="xml">
            <tree create="0">
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="dn_cover_image_view_form" model="ir.ui.view">
        <field name="name">dn.cover.image.view.form</field>
        <field name="model">dn.cover.image</field>
        <field name="arch" type="xml">
            <form create="0">
                <sheet>
                    <field name="name" invisible="1" />
                    <div class="oe_title">
                        <label for="image"/>
                        <div>
                            <field name="image" filename="name" />
                        </div>
                    </div>
                </sheet>
                <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="dn_cover_image_action" model="ir.actions.act_window">
        <field name="name">DN Cover Image</field>
        <field name="res_model">dn.cover.image</field>
        <field name="view_mode">tree,form</field>
    </record>
   
    <menuitem
        id="dn_cover_image_menu"
        name="DN Cover Image"
        action="dn_cover_image_action"
        parent="bn_import_donation.configuration_menu"
        sequence="1"/>
    
</odoo>
