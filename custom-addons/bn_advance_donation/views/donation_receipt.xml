<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_advance_donation_receipt_tree" model="ir.ui.view">
        <field name="name">view.advance.donation.receipt.tree</field>
        <field name="model">advance.donation.receipt</field>
        <field name="arch" type="xml">
            <tree default_order="create_date desc">
                <field name="currency_id" column_invisible="True"/>
                <field name="name"/>
                <field name="donation_id"/>
                <field name="donor_id"/>
                <field name="payment_type"/>
                <field name="amount"/>
                <field name="used_amount"/>
                <field name="remaining_amount"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-success="state == 'paid'"/>
            </tree>
        </field>
    </record>

    <record id="view_advance_donation_receipt_form" model="ir.ui.view">
        <field name="name">view.advance.donation.receipt.form</field>
        <field name="model">advance.donation.receipt</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_pending" string="Deposit Cheque" type="object" class="oe_highlight" invisible="state == 'draft' and payment_type == 'cash' or state != 'draft'"/>
                    <button name="action_paid" string="Confirm Payment" type="object" class="oe_highlight" invisible="state != 'draft' or payment_type == 'cheque'"/>
                    <button name="action_paid" string="Confirm Payment" type="object" class="oe_highlight" invisible="state != 'pending'" groups="microfinance_loan.group_mfd_pir_cheque_approval"/>
                    <button name="action_bounced" string="Bounced" type="object" class="oe_highlight" invisible="state != 'pending'" groups="microfinance_loan.group_mfd_pir_cheque_approval"/>
                    <button name="action_redeposit_cheque" string="Redeposit Cheque" type="object" class="oe_highlight" invisible="state != 'bounced'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,paid"/>
                </header>
                <sheet>
                    <field name="currency_id" invisible="1"/>
                    <widget name="web_ribbon" title="Paid" invisible="state != 'paid'"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="payment_type" widget="radio" readonly="state != 'draft'"/>
                            <field name="bank_id" readonly="state != 'draft'" invisible="payment_type != 'cheque'"/>
                            <field name="is_donation_id" readonly="state != 'draft'"/>
                            <field name="product_id" readonly="1"/>
                            <field name="donation_id" options="{'no_create': True, 'no_edit': True}" required="1" readonly="state != 'draft'" invisible="is_donation_id == False"/>
                            <field name="donor_id" required="1" readonly="state != 'draft'"/>
                            <field name="order_id" readonly="1"/>
                            <field name="amount" required="True" readonly="state != 'draft'" force_save="1"/>
                            <field name="date" required="True" readonly="state != 'draft'"/>
                            <field name="used_amount" readonly="1" force_save="1"/>
                            <field name="remaining_amount" readonly="1" force_save="1"/>
                            <field name="update_used_amount" force_save="1" invisible="1"/>
                        </group>
                        <group>
                            <field name="cheque_number" readonly="state != 'draft'" invisible="payment_type == 'cash'" required="1"/>
                            <field name="cheque_date" readonly="state != 'draft'" invisible="payment_type == 'cash'" required="1"/>
                            <field name="bounced_reason" invisible="state not in ('pending', 'bounced')" readonly="state != 'pending'"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_advance_donation_receipt" model="ir.actions.act_window">
        <field name="name">Donation Receipts</field>
        <field name="res_model">advance.donation.receipt</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>