<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="base_view_company_form_inherit_bn_master_setups" model="ir.ui.view">
        <field name="name">base.view.company.form.inherit.bn.master.setups</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_registry']" position="after">
                <field name="type_selection" string="Branch Category" />
                <field name="location_type_ids" string="Location Type" widget="many2many_tags" options="'no_create': True, 'no_edit': True, 'no_open': True" invisible="type_selection != 'location'" />
            </xpath>
            <xpath expr="//div[hasclass('oe_title')]" position="inside">
                <label for="prefix" />
                <field name="prefix" />
            </xpath>
        </field>
    </record>

</odoo>
