<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sub_zone_view_tree" model="ir.ui.view">
        <field name="name">sub.zone.view.tree</field>
        <field name="model">sub.zone</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="zone_ids" string="Zones" widget="many2many_tags" />
            </tree>
        </field>
    </record>

    <record id="sub_zone_view_form" model="ir.ui.view">
        <field name="name">sub.zone.view.form</field>
        <field name="model">sub.zone</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name" class="oe_inline" required="1" /></h1>
                    </div>
                    <group>
                        <group name="sub_zone_col_1">
                            <field name="city_id" string="City" domain="[('type_selection', '=', 'city')]" required="1" options="{'no_create': True, 'no_edit': True, 'no_open': True}" />
                        </group>
                        <group name="sub_zone_col_2">
                            <field name="zone_ids" string="Zones" widget="many2many_tags"  domain="[('parent_id', '=', city_id)]" required="1" options="{'no_create': True, 'no_edit': True, 'no_open': True}" />
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="sub_zone_action" model="ir.actions.act_window">
        <field name="name">Sub Zone</field>
        <field name="res_model">sub.zone</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new Sub Zone.
            </p>
        </field>
    </record>

</odoo>
