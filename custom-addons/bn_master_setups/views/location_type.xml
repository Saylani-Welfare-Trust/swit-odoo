<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="location_type_view_tree" model="ir.ui.view">
        <field name="name">location.type.view.tree</field>
        <field name="model">location.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="location_type_view_form" model="ir.ui.view">
        <field name="name">location.type.view.form</field>
        <field name="model">location.type</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name" class="oe_inline" required="1" /></h1>
                    </div>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="location_type_action" model="ir.actions.act_window">
        <field name="name">Location Category</field>
        <field name="res_model">location.type</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new Location Type.
            </p>
        </field>
    </record>

    <menuitem
        id="menu_location_type"
        name="Location Category"
        parent="base.menu_users"
        action="bn_master_setups.location_type_action"
        sequence="10"
    />

</odoo>
