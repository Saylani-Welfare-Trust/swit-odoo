<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

        <record id="ah_view_analytic_account_form" model="ir.ui.view">
            <field name="name">ah.view.analytic.account.form</field>
            <field name="model">account.analytic.account</field>
            <field name="inherit_id" ref="analytic.view_account_analytic_account_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='code']" position="after">
                    <field name="is_restricted"/>
                    <field name="unrestricted_account_id" invisible="is_restricted == False" domain="[('plan_id', '!=', plan_id)]"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>