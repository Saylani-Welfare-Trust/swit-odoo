<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="ah_shariah_law_chart_of_account_conf" model="ir.ui.view">
            <field name="name">ah.shariah.law.chart.of.account.conf</field>
            <field name="model">shariah.law.chart.of.account</field>
            <field name="arch" type="xml">
                <tree editable="bottom" create="false" delete="false" default_order="create_date asc">
                    <field name="name" readonly="True"/>
                    <field name="account_id" options="{'no_create': True, 'no_edit': True}" />
                </tree>
            </field>
        </record>

        <record id="view_search_shariah_law_chart_of_account_conf" model="ir.ui.view">
            <field name="name">view.search.shariah.law.chart.of.account.conf</field>
            <field name="model">shariah.law.chart.of.account</field>
            <field name="arch" type="xml">
                <search>
                    <group expand="0" string="Group By">
                        <filter name="group_shariah_law_account_conf" string="Account Type" domain="[]" context="{'group_by': 'account_type'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_shariah_law_chart_of_account_conf" model="ir.actions.act_window">
            <field name="name">Chart of Account Configuration</field>
            <field name="res_model">shariah.law.chart.of.account</field>
            <field name="view_mode">tree</field>
            <field name="context">{'search_default_group_shariah_law_account_conf': 1}</field>
        </record>

    </data>
</odoo>