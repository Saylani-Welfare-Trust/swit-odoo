<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="ah_shariah_law_view_tree" model="ir.ui.view">
            <field name="name">ah.shariah.law.view.tree</field>
            <field name="model">shariah.law</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="currency_id" column_invisible="1"/>

                    <header>
                        <button string="Update Records" name="update_analytic_account" type="object" class="oe_highlight"/>
                    </header>

                    <field name="restricted_account_id" readonly="1"/>
                    <field name="restricted_amount" readonly="1"/>
                    <field name="unrestricted_amount" readonly="1"/>
                    <button name="action_transfer_amount" string="Transfer to" type="object" class="oe_highlight" groups="ah_shariah_law.group_shariah_law_admin"/>
                    <button name="action_receive_amount" string="Transfer Back" type="object" class="oe_highlight" groups="ah_shariah_law.group_shariah_law_admin"/>
                </tree>
            </field>
        </record>


        <record id="action_shariah_law" model="ir.actions.act_window">
            <field name="name">Shariah Law</field>
            <field name="res_model">shariah.law</field>
            <field name="view_mode">tree</field>
        </record>

    </data>
</odoo>