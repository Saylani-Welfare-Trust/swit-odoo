<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="view_donation_home_service_configuration" model="ir.ui.view">
            <field name="name">view.donation.home.service.configuration</field>
            <field name="model">dhs.account.configuration</field>
            <field name="arch" type="xml">
                <tree editable="bottom" create="false" delete="false" default_order="create_date asc">
                    <field name="name" readonly="True"/>
                    <field name="account_id" options="{'no_create': True, 'no_edit': True}" />
                </tree>
            </field>
        </record>


        <record id="action_dhs_account_configuration" model="ir.actions.act_window">
            <field name="name">Chart of Account Configuration</field>
            <field name="res_model">dhs.account.configuration</field>
            <field name="view_mode">tree</field>
        </record>

    </data>
</odoo>

