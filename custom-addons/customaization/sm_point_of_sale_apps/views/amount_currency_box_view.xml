        <template id="report_invoice_amount_currency_box">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <div id="invoice-POS">
                            <center id="top">
                                <center><img src="" alt="logo"/></center>
                                <div class="info">
                                    <h2 style="font-size: 18px;font-family: sans-serif;font-weight: 600;">Donation Receipt</h2>
                                </div>
                            </center>
                            <div id="mid">
                                <div class="info" style="display: -webkit-box;display: flex;-webkit-box-pack: space-between;justify-content: space-between;align-items: center;margin-bottom: 10px;">
                                    <div>
                                        <t t-if="o.location_partner_id">
                                            Ref: <t t-esc="o.name" />
                                        </t>
                                        <t t-else="">
                                            Ref: -
                                        </t>
                                    </div>
                                    <div>
                                        <t t-if="o.location_partner_id">
                                            Date: <t t-esc="o.accounting_date" />
                                        </t>
                                        <t t-else="">
                                            Date: -
                                        </t>
                                    </div>
                                </div>
                                <div class="info" style="display: -webkit-box;display: flex;-webkit-box-pack: space-between;justify-content: space-between;align-items: center;margin-bottom: 10px;">
                                    <div>
                                        <t t-if="o.location_partner_id">
                                            Name: <t t-esc="o.location_partner_id.name" />
                                        </t>
                                        <t t-else="">
                                            Name: -
                                        </t>
                                    </div>
                                    <div>
                                        <t t-if="o.location_partner_id">
                                            Location: <t t-esc="o.location_partner_id.street" />
                                        </t>
                                        <t t-else="">
                                            Location: -
                                        </t>
                                    </div>
                                </div>
                                <div class="info" style="display: -webkit-box;display: flex;-webkit-box-pack: space-between;justify-content: space-between;align-items: center;margin-bottom: 10px;">
                                    <div>
                                        <t t-if="o.location_partner_id">
                                            Phone: <t t-esc="o.location_partner_id.phone" />
                                        </t>
                                        <t t-else="">
                                            Phone: -
                                        </t>
                                    </div>
                                    <div>
                                        <t t-if="o.amount">
                                            Amount: <t t-esc="o.amount" />
                                        </t>
                                        <t t-else="">
                                            Amount: -
                                        </t>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </template>
        <record id="amount_currency_box_invoices" model="ir.actions.report">
            <field name="name">Amount Currency Box Invoices</field>
            <field name="model">amount.currency.box</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">sm_point_of_sale_apps.report_invoice_amount_currency_box</field>
            <field name="report_file">sm_point_of_sale_apps.report_invoice_amount_currency_box</field>
            <field name="print_report_name">'Amount Currency Box - %s' % (object.name)</field>
            <field name="binding_model_id" ref="model_amount_currency_box"/>
            <field name="binding_type">report</field>
        </record>
    </data>
</odoo>