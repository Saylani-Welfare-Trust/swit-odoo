<?xml version="1.0" ?>
<odoo>
    <data>
        <record id="amount_currency_box_tree_view" model="ir.ui.view">
            <field name="name">amount.currency.box.tree.view</field>
            <field name="model">amount.currency.box</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Amount Currency Box">
                    <header>
                        <button name="action_bundle_journal_entries" type="object" string="Deposit" />
                    </header>
                    <field name="name" />
                    <field name="location_partner_id" />
                    <field name="partner_id" />
                    <field name="box_count" sum="Total Box Count" />
                    <field name="amount" sum="Total Amount" />
                    <field name="fake_notes_amount" sum="Total Fake Notes Amount" />
                    <field name="deposit_id" string="Deposit" />
                    <field name="state" />
                </tree>
            </field>
        </record>
        <record id="amount_currency_box_form_view" model="ir.ui.view">
            <field name="name">amount.currency.box.form.view</field>
            <field name="model">amount.currency.box</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Amount Currency Box">
                    <header>
                        <button name="action_validate" string="Validate" type="object" class="oe_highlight" invisible="state not in ['draft']"/>
                        <button name="action_cancel" type="object" string="Cancel" invisible="state not in ['draft']" />
                        <button name="action_draft" string="Draft" type="object" class="btn-secondary" invisible="state not in ['cancel']"/>
                        <button name="action_box_validate" string="Box Validate" type="object" class="oe_highlight" invisible="state not in ['validate']"/>
                        <button name="action_journal_entries" string="Journal Entries" type="object" class="oe_highlight" invisible="state not in ['box_validate']"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,validate,open_box,box_validate" />
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_journal_entries_list" type="object" class="oe_stat_button" icon="fa-pencil-square-o" invisible="account_move_id == False">
                                Journal Entries
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1" />
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="type" readonly="state in ['validate', 'cancel', 'box_validate', 'journal_entries']" />
                                <field name="location_partner_id" readonly="state in ['validate', 'cancel', 'box_validate', 'journal_entries']" options="{'no_create': True, 'no_edit': True, 'no_open': True, 'no_quick_create': True, 'no_create_edit': True}" />
                                <field name="accounting_date" readonly="state in ['validate', 'cancel', 'box_validate', 'journal_entries']" />
                                <field name="debit_account_id" readonly="state in ['validate', 'cancel', 'box_validate', 'journal_entries']" options="{'no_create': True, 'no_edit': True, 'no_open': True, 'no_quick_create': True, 'no_create_edit': True}" style="pointer-events: none;" invisible="1" />
                                <field name="company_id" readonly="1" invisible="1" />
                                <field name="box_count" readonly="state in ['validate', 'cancel', 'box_validate', 'journal_entries']" style="pointer-events: none;" invisible="1" />
                            </group>
                            <group>
                                <field name="partner_id" readonly="state in ['validate', 'cancel', 'box_validate', 'journal_entries']" options="{'no_create': True, 'no_edit': True, 'no_open': True, 'no_quick_create': True, 'no_create_edit': True}" />
                                <field name="amount" />
                                <field name="fake_notes_amount" />
                                <field name="credit_account_id" readonly="state in ['validate', 'cancel', 'box_validate', 'journal_entries']" options="{'no_create': True, 'no_edit': True, 'no_open': True, 'no_quick_create': True, 'no_create_edit': True}" style="pointer-events: none;" invisible="1" />
                                <field name="journal_id" readonly="state in ['validate', 'cancel', 'box_validate', 'journal_entries']" options="{'no_create': True, 'no_edit': True, 'no_open': True, 'no_quick_create': True, 'no_create_edit': True}" style="pointer-events: none;" invisible="1" />
                                <field name="account_move_id" invisible="1" />
                                <field name="deposit_id" invisible="1" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Amount Currency Box Lines" name="amount_currency_box_lines">
                                <field name="amount_currency_box_lines" readonly="state in ['draft', 'cancel', 'box_validate', 'journal_entries']">
                                    <tree string="Amount Currency Box Lines" editable="bottom">
                                        <field name="currency_id" options="{'no_create': True, 'no_edit': True, 'no_open': True, 'no_quick_create': True, 'no_create_edit': True}" />
                                        <field name="amount_type_id" options="{'no_create': True, 'no_edit': True, 'no_open': True, 'no_quick_create': True, 'no_create_edit': True}" />
                                        <field name="quantity" />
                                    </tree>
                                </field>
                            </page>
                            <page string="Amount Currency Fake Notes" name="amount_currency_fake_notes">
                                <field name="amount_currency_fake_notes" readonly="state in ['draft', 'cancel', 'box_validate', 'journal_entries']">
                                    <tree string="Amount Currency Fake Notes" editable="bottom">
                                        <field name="currency_id" options="{'no_create': True, 'no_edit': True, 'no_open': True, 'no_quick_create': True, 'no_create_edit': True}" />
                                        <field name="amount_type_id" options="{'no_create': True, 'no_edit': True, 'no_open': True, 'no_quick_create': True, 'no_create_edit': True}" />
                                        <field name="quantity" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_amount_currency_box" model="ir.actions.act_window">
            <field name="name">Amount Currency Box</field>
            <field name="res_model">amount.currency.box</field>
            <field name="view_mode">tree,form</field>
        </record>
