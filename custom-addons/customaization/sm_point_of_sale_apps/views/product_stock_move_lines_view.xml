<?xml version="1.0" ?>
<odoo>
    <data>
        <record id="product_stock_move_lines_tree_view" model="ir.ui.view">
            <field name="name">product.stock.move.lines.tree.view</field>
            <field name="model">product.stock.move.lines</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Product Stock Move Lines" editable="bottom">
                    <field name="name" />
                    <field name="product_id" readonly="product_stock_move_id != False" options="{'no_create': True, 'no_edit': True, 'no_open': True, 'no_quick_create': True, 'no_create_edit': True}" />
                    <field name="location_id" readonly="product_stock_move_id != False" options="{'no_create': True, 'no_edit': True, 'no_open': True, 'no_quick_create': True, 'no_create_edit': True}" />
                    <field name="quantity" readonly="product_stock_move_id != False" />
                    <field name="avg_price" readonly="product_stock_move_id != False" />
                    <field name="company_id" readonly="1" />
                    <field name="product_stock_move_id" readonly="product_stock_move_id != False" options="{'no_create': True, 'no_edit': True, 'no_open': True, 'no_quick_create': True, 'no_create_edit': True}" />
                </tree>
            </field>
        </record>
        <record id="product_stock_move_lines_form_view" model="ir.ui.view">
            <field name="name">product.stock.move.lines.form.view</field>
            <field name="model">product.stock.move.lines</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Product Stock Move Lines">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" />
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="product_id" readonly="product_stock_move_id != False" options="{'no_create': True, 'no_edit': True, 'no_open': True, 'no_quick_create': True, 'no_create_edit': True}" />
                                <field name="quantity" readonly="product_stock_move_id != False" />
                                <field name="company_id" readonly="1" />
                            </group>
                            <group>
                                <field name="location_id" readonly="product_stock_move_id != False" options="{'no_create': True, 'no_edit': True, 'no_open': True, 'no_quick_create': True, 'no_create_edit': True}" />
                                <field name="avg_price" readonly="product_stock_move_id != False" />
                                <field name="product_stock_move_id" readonly="product_stock_move_id != False" options="{'no_create': True, 'no_edit': True, 'no_open': True, 'no_quick_create': True, 'no_create_edit': True}" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_product_stock_move_lines" model="ir.actions.act_window">
            <field name="name">Product Stock Move Lines</field>
            <field name="res_model">product.stock.move.lines</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>