<odoo>
    <data>


        <record id="view_mfd_scheme_tree" model="ir.ui.view">
            <field name="name">view.mfd.scheme.tree</field>
            <field name="model">mfd.scheme</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="prefix"/>
                </tree>
            </field>
        </record>

        <record id="view_mfd_scheme_form" model="ir.ui.view">
            <field name="name">view.mfd.scheme.form</field>
            <field name="model">mfd.scheme</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                                <field name="installment_type" required="1"/>
                            </group>
                            <group>
                                <field name="prefix" required="1" readonly="is_created == True"/>
                                <field name="is_created" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Application Category">
                                <field name="application_lines">
                                    <tree>
                                        <field name="name"/>
                                        <field name="asset_type"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <field name="name"/>
                                            <field name="asset_type" required="1"/>
                                        </group>
                                        <group>
                                            <field name="product_lines">
                                                <tree editable="bottom">
                                                    <field name="is_recover_product" column_invisible="1"/>
                                                    <field name="product_id"/>
                                                    <field name="price"/>
                                                    <field name="sd_amount"/>
                                                    <field name="recover_product_id" widget="many2many_tags"/>
<!--                                                    <field name="application_name"/>-->
<!--                                                    <field name="application_id"/>-->
                                                </tree>
                                            </field>
                                        </group>
                                    </form>
                                </field>
                            </page>
                            <page string="Recovery Configuration">
                                <group string="Installment Type (Daily)">
                                    <group>
                                        <field name="daily_recovery_days" required="1"/>
                                    </group>
                                </group>
                                <group string="Installment Type (Monthly)">
                                    <group>
                                        <field name="monthly_recovery_days" required="1"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_mfd_scheme" model="ir.actions.act_window">
            <field name="name">Schemes</field>
            <field name="res_model">mfd.scheme</field>
            <field name="view_mode">tree,form</field>
        </record>


    </data>
</odoo>



