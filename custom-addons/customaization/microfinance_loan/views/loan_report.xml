<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="view_loan_report_tree" model="ir.ui.view">
            <field name="name">view.loan.report.tree</field>
            <field name="model">mfd.loan.request</field>
            <field name="arch" type="xml">
                <tree create="False" delete="False" default_order="customer_id">
                    <field name="currency_id" column_invisible="True"/>
                    <field name="name"/>
                    <field name="customer_id"/>
                    <field name="asset_type"/>
                    <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-success="state in  ('done','recovered')"/>
                    <field name="total_amount"/>
                    <field name="paid_amount"/>
                    <field name="remaining_amount"/>
                </tree>
            </field>
        </record>

        <record id="action_mfd_report" model="ir.actions.act_window">
            <field name="name">Report</field>
            <field name="res_model">mfd.loan.request</field>
            <field name="view_mode">tree</field>
            <field name="view_ids"
                   eval="[(5, 0, 0),
                          (0, 0, {'view_mode': 'tree', 'view_id': ref('view_loan_report_tree')})]"/>
        </record>

    </data>
</odoo>