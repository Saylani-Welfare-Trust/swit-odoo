<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="act_mfd_stock_return_picking" model="ir.actions.act_window">
        <field name="name">Reverse Transfer</field>
        <field name="res_model">return.mfd.product</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="view_mfd_stock_return_picking_form" model="ir.ui.view">
        <field name="name">Return lines</field>
        <field name="model">return.mfd.product</field>
        <field name="arch" type="xml">
            <form>

                <group>
                    <field name="product_ids_domain" invisible="1"/>
                    <field name="product_id" options="{'no_create': True, 'no_open': True}" required="1" domain="[('id', 'in', product_ids_domain)]"/>
                    <field name="location_id" options="{'no_create': True, 'no_open': True}" domain="[('usage', '=', 'internal'),('replenish_location', '=', True)]" required="1"/>
                    <field name="remarks" required="1"/>
                    <field name="partner_id" invisible="1"/>
                    <field name="source_document" invisible="1"/>
                    <field name="loan_id" invisible="1"/>
                </group>
                <footer>
                    <button name="recovery_done" string="Recovered" type="object" class="btn-primary" />
                    <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="x" />
                </footer>
            </form>
        </field>
    </record>

</odoo>