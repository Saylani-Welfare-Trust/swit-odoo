<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="microfinance_loan_view_partner_form_inherit_contacts_inherit_bn_profile_management" model="ir.ui.view">
        <field name="name">res.partner.microfinance.loan.view.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="bn_profile_management.view_partner_form_inherit_contacts"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='microfinance']" position="inside">
                <field name="loan_request_ids" readonly="1" >
                    <tree>
                        <field name="name"/>
                        <field name="customer_id"/>
                        <field name="asset_type"/>
                        <field name="amount"/>
                        <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-success="state == 'done'"/>
                    </tree>
                </field>
            </xpath>
            
            <xpath expr="//field[@name='donee_type']" position="after">
                <field name="scheme_type_ids" widget="many2many_tags" options="{'no_create': True, 'no_edit': True, 'no_open': True}" invisible="not is_microfinance" required="is_microfinance" string="Scheme Type"  readonly="1" />
            </xpath>
        </field>
    </record>

    <record id="microfinance_loan_custom_donee_res_partner_view_form_inherit_bn_profile_management" model="ir.ui.view">
        <field name="name">custom.donee.res.partner.microfinance.loan.view.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="bn_profile_management.custom_donee_res_partner_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='microfinance']" position="inside">
                <field name="loan_request_ids" readonly="1" >
                    <tree>
                        <field name="name"/>
                        <field name="customer_id"/>
                        <field name="asset_type"/>
                        <field name="amount"/>
                        <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-success="state == 'done'"/>
                    </tree>
                </field>
            </xpath>

            <xpath expr="//field[@name='donee_type']" position="after">
                <field name="scheme_type_ids" widget="many2many_tags" options="{'no_create': True, 'no_edit': True, 'no_open': True}" invisible="not is_microfinance" required="is_microfinance" string="Scheme Type"  readonly="state in ['print_info', 'register', 'change_request']" />
            </xpath>
        </field>
    </record>

</odoo>
