<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="bn_profile_search_search_record_view_form_inherit_microfinance_loan" model="ir.ui.view">
        <field name="name">bn.profile.search.search.record.view.form.inherit.microfinance.loan</field>
        <field name="model">search.record</field>
        <field name="inherit_id" ref="bn_profile_search.search_record_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='donee_registration_type']" position="after">
                <field name="scheme_type_id" string="Scheme Type" options="{'no_create': True, 'no_edit': True, 'no_open': True}" invisible="donee_registration_type != 'microfinance'" required="donee_registration_type == 'microfinance'" />
            </xpath>
        </field>
    </record>
    
