<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_live_stock_requisition_tree" model="ir.ui.view">
        <field name="name">live_stock_requisition.tree</field>
        <field name="model">live_stock.requisition</field>
        <field name="arch" type="xml">
            <tree string="Live Stock Slaughter">
                <field name="type"/>
                <!--                <field name="meat_type"/>-->
                <field name="live_stock_type"/>
                <field name="quantity"/>
                <field name="delivery_location"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_live_stock_requisition_form" model="ir.ui.view">
        <field name="name">live_stock_requisition.form</field>
        <field name="model">live_stock.requisition</field>
        <field name="arch" type="xml">
            <form string="live_stock Requisition">
                <header>
                    <button name="action_confirm"
                            string="Confirm"
                            type="object"
                            class="btn-primary"
                            invisible="0"/>
                </header>
                <sheet>
                    <group>
                        <field name="type"/>
                        <field name="meat_type" invisible="type != 'meat'"/>
                        <field name="live_stock_type" invisible="type != 'live_stock'"/>
                        <field name="quantity"/>
                        <field name="material_from"/>
                        <field name="delivery_location"/>
                        <field name="date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action to Open the Views -->
    <record id="action_live_stock_requisition" model="ir.actions.act_window">
        <field name="name">Live Stock Slaughter</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">live_stock.requisition</field>
        <field name="view_mode">tree,form</field>
    </record>


</odoo>
